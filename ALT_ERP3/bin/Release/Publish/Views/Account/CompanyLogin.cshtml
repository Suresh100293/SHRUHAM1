<script type="text/javascript">
    $(document).ready(function () {
        loadCompany()

        if ($('#hdnCompCode').val() != null) {
            loadb()
            loadp()
        }
        $('#CompCode').change(function () {
            
            $("#BranchCode").empty();
            //event.preventDefault();
            var url = '@Url.Action("GetBranchList")?CompCode=' + $('#CompCode').val();
            $.ajax({
                type: "GET",
                dataType: "json",
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (result) {
                    $.each(result, function (i, item) {
                        $("#BranchCode").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                },

                error: function () {
                    $('.spinner').hide();
                    alert("An error occurred while processing the request.");
                }
            });
        });

        $('#CompCode').change(function () {
            $("#perd").empty();
            //event.preventDefault();
            var url = '@Url.Action("GetPerdList")?CompCode=' + $('#CompCode').val();
            $.ajax({
                type: "GET",
                dataType: "json",
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (result) {
                    $.each(result, function (i, item) {
                        $("#perd").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                },

                error: function () {
                    $('.spinner').hide();
                    alert("An error occurred while processing the request.");
                }
            });
        });
    });

    function loadCompany() {
        //event.preventDefault();
        var url = '@Url.Action("GetCompanyList")?UserId=' + $('#hdnUserId').val();
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#CompCode").append("<option value='" + item.Value + "'>" + "[" + item.Value + "] " + item.Text + "</option>");
                });
                $('#CompCode').val($('#hdnCompCode').val()).attr("selected", "selected");
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    };

    function loadb() {
        $("#BranchCode").empty();
        //event.preventDefault();
        var url = '@Url.Action("GetBranchList")?CompCode=' + $('#hdnCompCode').val() + '&UserId=' + $('#hdnUserId').val();
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#BranchCode").append("<option value='" + item.Value + "'>" + "[" + item.Value + "] " + item.Text + "</option>");
                });
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }

    function loadp() {
        $("#perd").empty();
        //event.preventDefault();
        var url = '@Url.Action("GetPerdList")?CompCode=' + $('#hdnCompCode').val();
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#perd").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }
</script>