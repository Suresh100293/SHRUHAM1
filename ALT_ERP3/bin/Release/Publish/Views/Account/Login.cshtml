<body class="login-body background_img" style="background-color:#12506F;background-image: url('../../Content/images/background-1.jpg');">
    <div class="container">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new
        {
            @class = "form-signin",
            @role = "FormPost",
            @Style = "height:500px;max-width:400px;margin-top:60px;opacity:0.86;box-shadow: 1px 1px 50px 15px rgba(0,0,0,0.75);"
        }))
        {
            <div class="login-wrap" style="height:460px;">
                <div class="form-signin-heading" style="background-color:white;justify-content:center;">
                    <center><img src="~/Content/images/SuchanTFATlogo.png" style="margin-top:0px;" /></center>
                </div>
                <br /><br />
                <div class="user-login-info" style="background-color:white; height:110px;">
                    @Html.ValidationSummary(true, "", new
               {
                   @style = "color:red"
               })
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.TfatPass_Code, new
                   {
                       @class = "form-control",
                       placeholder = "User Id"
                   })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.TfatPass_PassWords, new
                   {
                       @Type = "Password",
                       @class = "form-control",
                       placeholder = "Password"
                   })
                        <span class="glyphicon glyphicon-briefcase form-control-feedback"></span>
                    </div>
                </div>
                <button class="btn btn-info" type="submit" style="margin:unset;margin-top:35px;">Sign in</button>
                <label class="checkbox" style="color:black;font-weight:unset;margin-top:25px;">
                    @Html.CheckBoxFor(m => m.TfatPass_Remember)
                    Remember my user ID
                </label>

                <div style="color:gray;margin-top:113px;font-size:9px;">
                    Copyright © 2018 Suchan Software Pvt.Ltd. All Rights Reserved.
                    <a class="pull-right" href="~/EULA.htm" style="color:gray;">License Agreement</a>@*<a class="pull-right" href="#" style="color:gray;">  </a>*@
                </div>
            </div>
        }
    </div>
</body>
</html>