<script type="text/javascript">
    $(document).ready(function () {
        var TotalWeight = 0, TotalQty = 0;

        $('#demo').DataTable();

        $(".currentModal").click(function () {
            $("#GetLoadLRLIst").modal("hide");
        });
        


        $("#LcCombo .Ordertable-row").click(function () {
            $(".Ordertable-row").removeClass('ClickrowColor');
            $(this).addClass('ClickrowColor');
        });

        $("#SelectAll").click(function () {
            TotalWeight = 0, TotalQty = 0;
            $(".checkbox").prop('checked', $(this).prop('checked'));
            if ($(this).prop("checked") == true) {
                var check = $('#LcCombo').find('input[type=checkbox]:checked').length;
                $("#LcComboTotalLC").html(check);
                $("#LcCombo .Ordertable-row").each(function () {
                    var col2_value = $(this).find(".Weight").text();
                    var col1_value = $(this).find(".LoadQty").text();
                    TotalWeight = parseFloat(TotalWeight) + parseFloat(col2_value);
                    TotalQty = parseFloat(TotalQty) + parseFloat(col1_value);
                });
                $("#LcComboTotalQty").html(TotalQty);
                $("#LcComboTotalWeight").html(TotalWeight);
            } else {
                $("#LcComboTotalLC").html(0);
                $("#LcComboTotalWeight").html(0);
                $("#LcComboTotalQty").html(0);
            }

        });

        $(".checkbox").click(function () {
            $("#SelectAll").prop('checked', false);
            TotalWeight = 0, TotalQty = 0, arr = [];
            var flag = true;
            $("#LcCombo .Ordertable-row").each(function () {
                if ($(this).find('input[type=checkbox]').prop("checked") == true) {
                    var Weight = $(this).find(".Weight").text();
                    var Qty = $(this).find(".LoadQty").text();
                    TotalWeight = parseFloat(TotalWeight) + parseFloat(Weight);
                    TotalQty = parseFloat(TotalQty) + parseFloat(Qty);
                }
            });
            var check = $('#LcCombo').find('input[type=checkbox]:checked').length;
            $("#LcComboTotalLC").html(check);
            $("#LcComboTotalWeight").html(TotalWeight);
            $("#LcComboTotalQty").html(TotalQty);
        });

        $('#LcCombo .Ordertable-row').dblclick(function () {
            TotalWeight = 0, TotalQty = 0;
            $("#SelectAll").prop('checked', false);
            if ($(this).find(".checkbox").prop("checked") == true) {
                $(this).find(".checkbox").prop('checked', false);
            } else {
                $(this).find(".checkbox").prop('checked', true);
            }

            $(".Ordertable-row").each(function () {
                if ($(this).find('input[type=checkbox]').prop("checked") == true) {
                    var Weight = $(this).find(".Weight").text();
                    var Qty = $(this).find(".LoadQty").text();
                    TotalWeight = parseFloat(TotalWeight) + parseFloat(Weight);
                    TotalQty = parseFloat(TotalQty) + parseFloat(Qty);
                }
            });
            var check = $('#LcCombo').find('input[type=checkbox]:checked').length;
            $("#LcComboTotalLC").html(check);
            $("#LcComboTotalQty").html(TotalQty);
            $("#LcComboTotalWeight").html(TotalWeight);

        });


        $('.gellrlistOfLc').click(function (event) {
            event.preventDefault();
            
            var url = '@Url.Action("ShowLrLIstOfLC")';

            var DTO = { Lcno: this.id };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {

                    var LoadDownLoadFiles = $("#ShowLoadingLRList");
                    $("#ErrorMessage").hide();
                    $('.spinner').hide();
                    $('#GetLoadLRLIst').modal('show');
                    LoadDownLoadFiles.html('');
                    LoadDownLoadFiles.html(data.Html);
                },
            });
        });



    });
</script>

@if (Model.LClist != null)
{
    <div class="container-fluid">
        <center>
            <table class="Ordertable table-bordered table-bordered example table-responsive-md" id="demo" style="width:-webkit-fill-available;">
                <thead id="Head">
                    <tr>
                        <th class="Ordertable-cell">LrList</th>
                        <th class="Ordertable-cell hideColumn"><center><input type="checkbox" id="SelectAll" style="height: 17px;width: 18px;" /></center></th>
                        <th class="Ordertable-cell">LcNo</th>
                        <th class="Ordertable-cell">Date</th>
                        <th class="Ordertable-cell">Time</th>
                        <th class="Ordertable-cell">Source</th>
                        <th class="Ordertable-cell">Destination</th>
                        <th class="Ordertable-cell">Quantity</th>
                        <th class="Ordertable-cell">Weight</th>
                        <th class="Ordertable-cell">No Of LR</th>
                    </tr>
                </thead>
                <tbody id="LcCombo" style="max-height:300px;min-height:300px;width:100%;overflow:scroll;">
                    @foreach (var item in Model.LClist)
                    {
                        <tr class="Ordertable-row">
                            <td class="Ordertable-cell "><center><button class="btn btn-info gellrlistOfLc" style="font-size: 13px;padding:3px 12px;" id="@item.lcno"><i class="glyphicon glyphicon-eye-open"></i></button></center></td>
                            <td class="Ordertable-cell hideColumn"><center><input type="checkbox" class="checkbox" style="height: 17px;width: 18px;" /></center></td>
                            <td class="Ordertable-cell LCValue">@item.lcno</td>
                            <td class="Ordertable-cell">@item.Date</td>
                            <td class="Ordertable-cell">@item.Time</td>
                            <td class="Ordertable-cell">@item.From_Name</td>
                            <td class="Ordertable-cell">@item.To_Name</td>
                            <td class="Ordertable-cell LoadQty">@item.TotalQty</td>
                            <td class="Ordertable-cell Weight">@item.Weight.ToString("0.00")</td>
                            <td class="Ordertable-cell ">@item.LrListOfLC.Count</td>
                        </tr>

                    }
                </tbody>

            </table>
        </center>
        <div id="Footer">
            <div class="form-group">
                <div class="col-md-offset-4 col-md-1" style="font-weight: bold;text-align:center;color: red;">Total -:</div>
                <div class="col-md-2" style="font-weight: bold;width: max-content;">No. Of LR :<label id="LcComboTotalLC" style="padding-left: 15px;font-weight: bold;color: red;">0</label></div>
                <div class="col-md-2" style="font-weight: bold;width: max-content;">Quantity :<label id="LcComboTotalQty" style="padding-left: 15px;font-weight: bold;color: red;">0</label></div>
                <div class="col-md-2" style="font-weight: bold;width: max-content;">Weight :<label id="LcComboTotalWeight" style="padding-left: 15px;font-weight: bold;color: red;">0</label><label style="padding-left: 15px;font-weight: bold;color: red;">Kgs</label></div>
            </div>
        </div>
    </div>
    <br />
}



