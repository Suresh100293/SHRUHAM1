            var ModelData = {};
            ModelData["AssetDisposal_Srl"] = $("#AssetDisposal_Srl").val();
            ModelData["DocDateVM"] = $("#AssetDisposal_DocDate").val();
            ModelData["AssetDisposal_AssetID"] = $("#AssetDisposal_AssetID").val();
            ModelData["AssetDisposal_AssetValue"] = $("#AssetDisposal_AssetValue").val();
