<div class="panel" style="height:500px;">
    <div class="panel-body" style="padding-left:3px;padding-right:3px;padding-top:12px;">
        <div class="form-horizontal" id="frmcatlink" role="form" style="margin-top:32px;">
            <div id="StatusDiv">
                <table id="catlinkgrid" class="zui-table">
                    <thead>
                        <tr role="row" style="font-family:Tahoma;font-size:9pt;">
                            <th style="width:10%">Category</th>
                            <th style="width:10%;">Category Description</th>
                            <th style="width:10%">Rate</th>
                            <th style="width:10%;">Disc%</th>
                            <th style="width:10%;">Disc.Amt</th>
                            <th style="width:10%">MRP</th>
                            <th style="width:10%">MRP Disc%</th>
                            <th style="width:10%">Sales Margin</th>
                            <th style="width:10%">Sales Max.Disc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.NewItemList != null)
                        {
                            foreach (var item in @Model.NewItemList.ToList())
                            {
                                <tr id="datacat" style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                    <td style="width:10%;">@item.CatNo</td>
                                    <td style="width:10%;">@item.CatName</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.Rate</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.Disc</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.DiscAmt</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.MRP</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.MRPDisc</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.SalesMargin</td>
                                    <td style="width:10%;" align="right" contenteditable="true">@item.SalesMaxDisc</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

