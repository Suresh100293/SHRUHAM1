        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#SalesTax").validate().form() == false)
            //    return;

            if ($("#TaxMaster_Code").val() == null || $("#TaxMaster_Code").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Code is Required..');
                return;
            }
            if ($("#TaxMaster_Name").val() == null || $("#TaxMaster_Name").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Name is Required..');
                return;
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["TaxMaster_Code"] = $("#TaxMaster_Code").val();
            ModelData["TaxMaster_Scope"] = $("#TaxMaster_Scope").val();
            ModelData["TaxMaster_Name"] = $("#TaxMaster_Name").val();
            ModelData["TaxMaster_VATGST"] = $("#TaxMaster_VATGST").is(':checked');
            ModelData["TaxMaster_DiscOnTxbl"] = $("#TaxMaster_DiscOnTxbl").is(':checked');
            ModelData["TaxMaster_Pct"] = $("#TaxMaster_Pct").val();
            ModelData["TaxMaster_MRPTax"] = $("#TaxMaster_MRPTax").is(':checked');
            ModelData["TaxMaster_Inclusive"] = $("#TaxMaster_Inclusive").is(':checked');
            ModelData["TaxMaster_PostCode"] = $("#TaxMaster_PostCode").val();
            ModelData["TaxMaster_SGSTRate"] = $("#TaxMaster_SGSTRate").val();
            ModelData["TaxMaster_SGSTCode"] = $("#TaxMaster_SGSTCode").val();
            ModelData["TaxMaster_CGSTRate"] = $("#TaxMaster_CGSTRate").val();
            ModelData["TaxMaster_CGSTCode"] = $("#TaxMaster_CGSTCode").val();
            ModelData["TaxMaster_IGSTRate"] = $("#TaxMaster_IGSTRate").val();
            ModelData["TaxMaster_IGSTCode"] = $("#TaxMaster_IGSTCode").val();
            ModelData["TaxMaster_CessRate"] = $("#TaxMaster_CessRate").val();
            ModelData["TaxMaster_CessCode"] = $("#TaxMaster_CessCode").val();
            ModelData["TaxMaster_Composition"] = $("#TaxMaster_Composition").is(':checked');
            ModelData["TaxMaster_Form"] = $("#TaxMaster_Form").val();
            ModelData["TaxMaster_Exempted"] = $("#TaxMaster_Exempted").is(':checked');
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Accounts/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
