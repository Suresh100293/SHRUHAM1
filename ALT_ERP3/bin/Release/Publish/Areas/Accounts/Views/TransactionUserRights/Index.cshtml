<script>
    $(document).ready(function () {
        loadSearchList()
        $("#dynamic-table").on('click', 'tbody tr', function (event) {
            event.preventDefault();
            var PSerial = [];
            var row = $(this);
            var $tds = $(this).find('td');
            psrl = $tds.eq(0).text();
            PSerial.push(psrl);
            var ModelData = {};
            ModelData["DocTypes_Code"] = PSerial.toString();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("ClickLeftGrid")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    $('#errormessage').hide();
                    $('#TransactionUserRightsdiv').html(data.Html);
                    $('#UserRightsTrx_Type').val(data.UserRightsTrx_Type);
                },
                error: function () {
                    $('.spinner').hide();
                    alert("error occured while processing your request.");
                }
            });
        });

        $('#Submit').click(function (event) {
            event.preventDefault();
            var myTableArray = [];
            $('#tabledatapick2 tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets = {
                    UserRightsTrx_Code: tds.find("input[id='UserRightsTrx_Code']").val(),
                    UserRightsTrx_xCess: tds.find("input[id='UserRightsTrx_xCess']").is(':checked'),
                    UserRightsTrx_xAdd: tds.find("input[id='UserRightsTrx_xAdd']").is(':checked'),
                    UserRightsTrx_xEdit: tds.find("input[id='UserRightsTrx_xEdit']").is(':checked'),
                    UserRightsTrx_xDelete: tds.find("input[id='UserRightsTrx_xDelete']").is(':checked'),
                    UserRightsTrx_xPrint: tds.find("input[id='UserRightsTrx_xPrint']").is(':checked'),
                    UserRightsTrx_xBackDated: tds.find("input[id='UserRightsTrx_xBackDated']").is(':checked'),
                    UserRightsTrx_xLimit: tds.find("input[id='UserRightsTrx_xLimit']").val()
                }
                myTableArray.push(myDets);
            })
            var ModelData = {};
            ModelData["mRightList"] = myTableArray;
            ModelData["UserRightsTrx_Type"] = $("#UserRightsTrx_Type").val();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SaveData")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                },
                error: function () {
                    $('.spinner').hide();
                    alert("error occured while processing your request.");
                }
            });
        });
    });
    function myFunction() {
        var ModelData = {};
        ModelData["SearchContent"] = $('#myInput').val();
        ModelData["SearchBy"] = $('#SearchBy').val();
        var DTO = { mModel: ModelData };
        var url = '@Url.Action("GetLeftGrid")';
        $.ajax({
            type: "POST",
            dataType: "json",
            data: JSON.stringify(DTO),
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforesend: function () {
                $('.spinner').show();
            },
            success: function (data) {
                $('.spinner').hide();
                $('#TransactionTypesdiv').html(data.Html);

            },
            error: function () {
                $('.spinner').hide();
                alert("error occured while processing your request.");
            }
        });

    }
    function loadSearchList() {
        var url = '@Url.Action("GetSearchList")'
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#SearchBy").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });

                $('.spinner').hide();
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }
</script>

