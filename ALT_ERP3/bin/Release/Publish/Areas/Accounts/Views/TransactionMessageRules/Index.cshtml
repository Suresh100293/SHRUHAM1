
@model TFATERPWebApplication.Areas.Accounts.Models.MessageRulesVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayoutMenu.cshtml";
}
<script src="~/Content/js/dynamic_table_init.js"></script>
<script>
    $(document).ready(function () {
        $("#dynamic-table").on('click', 'tbody tr', function (event) {
            event.preventDefault();
            var PSerial = [];
            var row = $(this);
            var $tds = $(this).find('td');
            psrl = $tds.eq(0).text();
            PSerial.push(psrl);
            var ModelData = {};
            ModelData["DocTypes_Code"] = PSerial.toString();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("ClickLeftGrid")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    $('#errormessage').hide();
                    $('#MessageRulesdiv').html(data.Html);
                    $('#MessageRules_Type').val(data.MessageRules_Type);
                },
                error: function () {
                    $('.spinner').hide();
                    alert("error occured while processing your request.");
                }
            });
        });

        $('#Submit').click(function (event) {
            event.preventDefault();
            var myTableArray = [];
            $('#tabledatapick2 tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets = {
                    MessageRules_Code: tds.find("input[id='MessageRules_Code']").val(),
                    MessageRules_xAdd: tds.find("input[id='MessageRules_xAdd']").is(':checked'),
                    MessageRules_xEdit: tds.find("input[id='MessageRules_xEdit']").is(':checked'),
                    MessageRules_xDelete: tds.find("input[id='MessageRules_xDelete']").is(':checked'),
                    MessageRules_xPrint: tds.find("input[id='MessageRules_xPrint']").is(':checked'),
                    MessageRules_xBackDated: tds.find("input[id='MessageRules_xBackDated']").is(':checked'),
                    MessageRules_SendEmail: tds.find("input[id='MessageRules_SendEmail']").is(':checked'),
                    MessageRules_SendSMS: tds.find("input[id='MessageRules_SendSMS']").is(':checked'),
                    MessageRules_SendMSG: tds.find("input[id='MessageRules_SendMSG']").is(':checked'),
                    MessageRules_LimitAmount: tds.find("input[id='MessageRules_LimitAmount']").val()
                }
                myTableArray.push(myDets);
            })
            var ModelData = {};
            ModelData["mRightList"] = myTableArray;
            ModelData["MessageRules_Type"] = $("#MessageRules_Type").val();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SaveData")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                },
                error: function () {
                    $('.spinner').hide();
                    alert("error occured while processing your request.");
                }
            });
        });
    });
</script>

<header class="header fixed-top" style="position:fixed;background-color:lightgray;padding:6px;width:100%;margin-top:5px;">
    <div class="fixhead">
        <b class="CodeSt">Transaction Messaging Rules</b>
        <span class="tools pull-right">
            <a href="~/DashBoard/Accounts" class="btn btn-danger" style="color:white;font-weight:bolder;font-size:13px;padding:3px 10px;" id="Cancel2">X</a>
        </span>
    </div>
</header>

<section class="panel">
    <div class="panel-body">
        <form class="form-horizontal " id="MessageRulesFrm" role="form" style="margin-top:15px;margin-left:0px">
            <div id="ErrorMessage" name="ErrorMessage" class="alert alert-danger" style="display: none"></div>
            <br />
            <div class="panel-body" style="min-height:375px;max-height:375px;padding-top:0px;">
                <div class="col-sm-4" style="border-right:solid;overflow:scroll;">
                    <div class="form-group">
                    </div>
                    <b class="CodeSt" style="font-size:15px;font-weight:bolder;">
                        Transaction Types:
                    </b>
                    <table class="zui-table" id="dynamic-table" style="min-height:360px;overflow:scroll;">
                        <thead>
                            <tr role="row">
                                <th style="width: 14%;vertical-align:inherit;">Code</th>
                                <th style="width: 42%;vertical-align:inherit;">Description</th>
                                <th style="width: 16%;vertical-align:inherit;">Main Type</th>
                                <th style="width: 16%;vertical-align:inherit;">Sub Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.mLeftList != null)
                            {
                                foreach (var item in @Model.mLeftList)
                                {
                                    <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                        <td style="width: 14%;vertical-align:inherit;">@item.DocTypes_Code</td>
                                        <td style="width: 42%;vertical-align:inherit;">@item.DocTypes_Name</td>
                                        <td style="width: 16%;vertical-align:inherit;">@item.DocTypes_MainType</td>
                                        <td style="width: 16%;vertical-align:inherit;">@item.DocTypes_SubType</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-8">
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            <b class="CodeSt" style="font-size:15px;font-weight:bolder;">
                                Message Rules:
                            </b>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.TextBoxFor(x => x.MessageRules_Type, new { @id = "MessageRules_Type", @Name = "MessageRules_Type", @style = "font-size:14px;font-weight:bolder;", @class = "form-control", @disabled = "disabled" })
                        </div>
                    </div>
                    <br>
                    <br>
                    <div id="MessageRulesdiv" style="min-height:375px;max-height:375px;overflow:scroll;">
                        @Html.Partial("TransactionMessageRulesPartial")
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<footer class="footer-section" style="height:33px;position:fixed;background-color:#4B4A4A;padding:3px;color:white;">
    <div class="row">
        <div class="col-sm-5"></div>
        <div class="col-sm-3" style="margin-top:4px;color:white;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            T.FAT ERP-iX9 by Suchan Software Private Limited
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
                <button class="btn btn-success" style="font-size:13px;padding:3px 12px;" id="Submit">Save</button>
                <a href="~/DashBoard/Accounts" class="btn btn-danger" style="font-size: 13px;padding:3px 12px;" id="Cancel">Cancel</a>
            </div>
        </div>
    </div>
</footer>

