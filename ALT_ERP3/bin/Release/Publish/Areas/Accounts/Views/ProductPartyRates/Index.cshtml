                            <th style="width:7%;">Party</th>
                            <th style="width:21%;">Party Name</th>
                            <th style="width:8%;">Vendor ID</th>
                            <th style="width:8%;">Rate</th>
                            <th style="width:7%;">Disc%</th>
                            <th style="width:7%;">Disc.Amt</th>
                            <th style="width:7%;">Max Disc%</th>
                            <th style="width:7%;">Lead Time</th>
                            <th style="width:7%;">Min.Ord.Qty</th>
