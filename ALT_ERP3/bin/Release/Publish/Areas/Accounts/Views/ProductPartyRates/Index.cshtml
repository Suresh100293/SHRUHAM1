                    <tbody>
                        @if (Model.NewItemList != null)
                        {
                            foreach (var item in @Model.NewItemList.ToList())
                            {
                                <tr id="datacat" style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                    <td style="width:7%;">@item.Code</td>
                                    <td style="width:21%;">@item.PartyName</td>
                                    <td style="width:8%;" align="right" contenteditable="true">@item.VendorID</td>
                                    <td style="width:8%;" align="right" contenteditable="true">@item.Rate</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.Disc</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.DiscAmt</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.MaxDisc</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.LeadTime</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.MinOrdQty</td>
                                    @*<td style="width:7%;" align="right" contenteditable="true">@item.QCReqd</td>*@
                                    <td style="text-align:center;width:7%;">@Html.CheckBoxFor(m => item.QCReqd, new { @value = item.QCReqd, @style = "width:16px;height:16px;", @id = "QCReqd", @name = "QCReqd" })</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.QtyTolePlus</td>
                                    <td style="width:7%;" align="right" contenteditable="true">@item.SalesMargin</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
