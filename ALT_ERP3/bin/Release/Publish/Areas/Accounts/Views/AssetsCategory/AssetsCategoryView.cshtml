@model TFATERPWebApplication.Areas.Accounts.Models.AssetsCategoryVM
@using Common;
@{
    ViewBag.Title = "Assets Category";
    Layout = null;
}

<script type="text/javascript">
    $(document).ready(function () {
        @* iX9: set the selected value to fixed combos *@
        $('#AssetCategory_DeprMethod').val('@Model.AssetCategory_DeprMethod').attr("selected", "selected");
        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#AssetsCategory').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                AssetCategory_Code: {required: true,},
                AssetCategory_Name: {required: true,},
               },
            messages: {
                AssetCategory_Code: {required: 'Code is Required',},
                AssetCategory_Name: {required: 'Name is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#AssetCategory_Code").constrain({ allow: { regex: "[0-9.-]" } });
        $("#AssetCategory_Name").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#AssetCategory_DeprRate").constrain({ allow: { regex: "[0-9.-]" } });
        $("#AssetCategory_DeprRateIT").constrain({ allow: { regex: "[0-9.-]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#AssetsCategory").validate().form() == false)
            //    return;

            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["AssetCategory_Code"] = $("#AssetCategory_Code").val();
            ModelData["AssetCategory_Name"] = $("#AssetCategory_Name").val();
            ModelData["AssetCategory_Depreciable"] = $("#AssetCategory_Depreciable").is(':checked');
            ModelData["AssetCategory_DeprMethod"] = $("#AssetCategory_DeprMethod").val();
            ModelData["AssetCategory_DeprRate"] = $("#AssetCategory_DeprRate").val();
            ModelData["AssetCategory_DeprRateIT"] = $("#AssetCategory_DeprRateIT").val();
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Accounts/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        $("#ErrorMessage").show();
                        $("#ErrorMessage").html(data.html);
                    }
                },
            });
        });
    });
</script>

