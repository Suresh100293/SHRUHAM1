                TDSMaster_Prefix: {required: 'Prefix is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#TDSMaster_Name").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#TDSMaster_Prefix").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#TDSMaster_CertAfter").constrain({ allow: { regex: "[0-9.-]" } });
        $("#TDSMaster_CertBefore").constrain({ allow: { regex: "[0-9.-]" } });
        $("#TDSMaster_DaysCert").constrain({ allow: { regex: "[0-9.-]" } });
