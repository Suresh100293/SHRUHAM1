        <div class="panel-body" style="margin-top:29px;height:auto;padding-left:0px;padding-right:0px;">
            <div class="table table-bordered" style="margin-top: 16px;">
                <div class="row" style="margin-top:10px;margin-bottom:5px;">
                    <div class="form-group">
                        @Html.Label("Name :", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-1", @style = "margin-top: 8px;" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.ZoneName, new { htmlAttributes = new { @class = "form-control required " } })
                        </div>

                    </div>
                </div>
                <div class="row" style="margin-bottom:5px;">
                    <div class="form-group">
                        @Html.Label("Desc :", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-1", @style = "margin-top: 8px;" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.ZoneDesc, new { htmlAttributes = new { @class = "form-control required " } })
                        </div>

                    </div>
                </div>
                <div class="row" style="margin-bottom:5px;">
                    <div class="form-group">
                        @Html.Label("Status :", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-1", @style = "margin-top: 8px;" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = " required checkbox", @style = "height: 30px;margin-top: 1px;width: 20px; " } })
                        </div>
                        <div class="col-md-1" style="margin-top: 7px;margin-left: -207px;"><b>Active</b></div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px;">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-1">
                            <input type="button" class="btn btn-success" value="Save" id="btnSaveZone" />
                        </div>
                        <div class="col-md-1">
                            <input type="button" class="btn btn-danger" value="Cancel" id="btnCancel" />
                        </div>
                    </div>
                </div>
            </div>
