
@model TFATERPWebApplication.Areas.Logistics.Models.ZoneModel
@{
    ViewBag.Title = "AddZone";
    Layout = "~/Views/Shared/_NEWLayoutMenu.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btnSaveZone').click(function () {
            
            event.preventDefault();
            
            var url = "/ZoneMaster/Save";
            var ModelData = {};
            ModelData["ViewDataid"] = @Model.ViewDataid;
            ModelData["ZoneName"] = $("#ZoneName").val();
            ModelData["ZoneDesc"] = $("#ZoneDesc").val();
            ModelData["Status"] = $("#Status").val();
            var DTO = { Model: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {

                    @*if (data.Message == 'Success') {
                        window.location.href = "/Transactions/TransactionMaintenanceGrid?Type=@Model.Type&Module=@Model.Module&ViewDataId=@Model.ViewDataId&TableName=@Model.TableName&Header=@Model.Header&optiontype=@Model.optiontype&OptionCode=@Model.OptionCode&MainType=@Model.MainType&SubType=@Model.SubType&Controller2=@Model.Controller2"
                    }*@
                    
                },
            });
        });
    });
</script>

