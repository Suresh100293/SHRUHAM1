            <div class="form-group">
                <label class="col-sm-1 control-label">Module:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.ModuleName, new { @class = "input-large-query", @style = "width:100%;margin-top:2px;", @Value = Model.ModuleName })
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-success" style="font-size: 13px;padding:3px 12px;" id="btnGetModuleList">Fetch Module</button>
                </div>
            </div>
