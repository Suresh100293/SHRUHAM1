@model TFATERPWebApplication.Areas.Logistics.Models.ChangeMenuNameVM
@using Common;

<style>
    .editrow {
        float: right;
    }

    li {
        width: 100%;
    }
</style>
<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ChangeModuleNameModal").modal("hide");

        $('.editrow').click(function () {
            debugger;
            $("#HeaderId").val(this.id);
            var Row = $(this).closest('li').text().trim();
            var RowArray = Row.split("  ");
            $("#NewName").val(RowArray[0].trim());
            $('#ChangeModuleNameModal').modal('show');
        });

        $("#Submit").click(function (event) {
            event.preventDefault();
            var url = '@Url.Action("SaveData")';
                var ModelData = {};

            if ($("#ModuleName").val()!="") {

                ModelData["ModuleName"] = $("#ModuleName").val();
                ModelData["ID"] = $("#HeaderId").val();
                ModelData["NewName"] = $("#NewName").val();
                var DTO = { mModel: ModelData };

                $.ajax({

                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(DTO),
                    cache: false,
                    url: url,
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function () {
                        $('.spinner').show();
                    },
                    success: function (data) {
                        location.href = "/Logistics/ChangeMenuName/Index?ModuleName=" + $('#ModuleName').val();
                    },
                });
            }
        });
    });
    
</script>
@if (Model.Logistics.Count != 0)
{
    <div class="col-md-3" style="padding-left:5px;padding-left:15px;height:530px;overflow:auto;width:auto;">
        <div class="panel" style="background-color:rgb(215, 215, 214);padding-top:5px;padding-bottom:2px;padding-left:12px;border-radius:0px;border-bottom:solid 5px;border-bottom-color:coral;margin-bottom:6px;height:39px;">
            <label style="color:black;font-size:18px;font-weight:900;">Logistics</label>
        </div>
        <br />
        <div id="menu">
            <ul class="list-inline-item" style="font-family:Verdana; margin-top:-1px;height:auto;width:100%;background-color:whitesmoke;">
                @foreach (var item in Model.Logistics)
                {
                    if (item.ZoomURL == null && item.Hide == false)
                    {
                        <li style="color:black;font-weight:bolder;margin-left:0px;font-size: 14px;margin-right: 10px;">
                            @item.Menu
                            @if (item.Edit)
                            {
                                <button class="btn btn-success editrow" style="font-size: 11px;padding:0px 11px;" id="@item.ID"><i class="glyphicon glyphicon-edit" style="font-size: 1.2em;"></i></button>
                            }
                            else
                            {
                                <button class="btn btn-danger editrow" style="font-size: 11px;padding:0px 11px;" disabled><i class="glyphicon glyphicon-edit" style="font-size: 1.2em;"></i></button>
                            }
                        </li>
                    }
                    else
                    {
                        if (item.ZoomURL == "M" && item.Hide == false)
                        {
                            <li style="color:black;font-weight:bolder;margin-left:0px;font-size: 14px;margin-right: 10px;">
                                @item.Menu
                                @if (item.Edit)
                                {
                                    <button class="btn btn-success editrow" style="font-size: 11px;padding:0px 11px;" id="@item.ID"><i class="glyphicon glyphicon-edit" style="font-size: 1.2em;"></i></button>
                                }
                                else
                                {
                                    <button class="btn btn-danger editrow" style="font-size: 11px;padding:0px 11px;" disabled><i class="glyphicon glyphicon-edit" style="font-size: 1.2em;"></i></button>
                                }
                                <ul>
                                    @foreach (var item1 in Model.Logistics)
                                    {
                                        if (item.Level.ToString() == item1.ZoomURL && item1.Hide == false)
                                        {
                                            <li>
                                                <a style="color:black;font-weight:bolder;margin-left:0px;font-size: 14px;margin-right: 5px;">@item1.Menu</a>
                                                @if (item1.Edit)
                                                {
                                                    <button class="btn btn-success editrow" style="font-size: 11px;padding:0px 11px;"id="@item.ID"><i class="glyphicon glyphicon-edit" style="font-size: 1.2em;"></i></button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-danger editrow" style="font-size: 11px;padding:0px 11px;" disabled><i class="glyphicon glyphicon-edit" style="font-size: 1.2em;"></i></button>
                                                }
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                    }

                }
            </ul>
        </div>
    </div>
}
