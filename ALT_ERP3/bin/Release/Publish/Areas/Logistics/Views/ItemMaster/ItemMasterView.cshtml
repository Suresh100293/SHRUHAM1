@model TFATERPWebApplication.Areas.Logistics.Models.ItemMasterVM
@using Common;
@{
    ViewBag.Title = "Item Master";
    Layout = null;
}

<script type="text/javascript">
    $(document).ready(function () {

        if ('@Model.Category' == 'GenaralCategory')
            {
            $("#GenaralCategory").prop("checked", true);
            } else {
            $("#Hazardous").prop("checked", true);
            }


        if ('@Model.Mode' == "Delete") {
            $('.form-group :input').prop("disabled", true);
        }

        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#ItemMaster').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                Code: {required: true,},
                Name: {required: true,},
               },
            messages: {
                Code: {required: 'Code is Required',},
                Name: {required: 'Name is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#Code").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#Name").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#UnitofMeasurementMaster").validate().form() == false)
            //    return;

            //if ($("#Code").val() == null || $("#Code").val() == '')
            //{
            //    $("#ErrorMessage").show();
            //    $("#ErrorMessage").text('Code is Required..');
            //    return;
            //}
            if ($("#Name").val() == null || $("#Name").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Name is Required..');
                return;
            }

            if (($("#GenaralCategory").is(":checked") == false) && ($("#Hazardous").is(":checked") == false)) {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Category is Required..');
                return; 
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["Document"] = $("#Document").val();
            ModelData["Code"] = $("#Code").val();
            ModelData["Name"] = $("#Name").val();
            if ($("#GenaralCategory").is(":checked") == true) {
                ModelData["Category"] = "GenaralCategory";
            } else {
                ModelData["Category"] = "Hazardous";
            }
            ModelData["Hide"] = $("#Hide").is(':checked');
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Logistics/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
</script>

