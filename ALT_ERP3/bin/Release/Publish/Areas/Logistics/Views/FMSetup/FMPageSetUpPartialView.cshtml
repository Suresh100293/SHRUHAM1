<script type="text/javascript">

    $(document).ready(function () {


        // Edit/View/Delete Time USe Below Code
        if ('@Model.FM_Date' == 'True') {
            $("#Before_FM_Date").removeAttr("disabled");
            $("#After_FM_Date").removeAttr("disabled");
        } else {
            $("#Before_FM_Date").attr("disabled", "disabled");
            $("#After_FM_Date").attr("disabled", "disabled");
        }

        if ('@Model.Asc'=="True") {
            $("#Asc").prop("checked", true);
        } else {
            $("#Desc").prop("checked", true);
        }

        // End Edit/View/Delete Mode Code


        //All Time USe Below Code

        $('#FMAutomatic').change(function () {
            if (this.checked) {
                $("#FMManual").prop('checked', false)
                $("#Both").prop('checked', false)
            }
        });

        $('#FMManual').change(function () {
            if (this.checked) {
                $("#FMAutomatic").prop('checked', false)
                $("#Both").prop('checked', false)
            }
        });
        $('#Both').change(function () {
            if (this.checked) {
                $("#FMAutomatic").prop('checked', false)
                $("#FMManual").prop('checked', false)
            }
        });

        $('#FM_Date').change(function () {
            if (this.checked) {
                $("#Before_FM_Date").removeAttr("disabled");
                $("#After_FM_Date").removeAttr("disabled");

            } else {
                $("#Before_FM_Date").attr("disabled", "disabled");
                $("#After_FM_Date").attr("disabled", "disabled");
            }

        });

        $('#Submit').click(function (event) {
            event.preventDefault();

            if (($("#FMAutomatic").is(":checked") == false) && ($("#FMManual").is(":checked") == false) && ($("#Both").is(":checked") == false)) {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Please Select FM Generate');
                return;
            }
            if ($("#FM_Date").is(":checked") == true) {
                if (($("#Before_FM_Date").val() == "0" || $("#Before_FM_Date").val() == null || $("#Before_FM_Date").val() == "") && ($("#After_FM_Date").val() == "0" || $("#After_FM_Date").val() == null || $("#After_FM_Date").val() == "")) {
                    $("#ErrorMessage").show();
                    $("#ErrorMessage").text('FM Date Range Required.');
                    return;
                }
            }

            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};

            ModelData["SelectColumn"] = $("#SelectColumn").val();

            if (($("#Asc").is(":checked") == true)) {
                ModelData["Asc"] = true;
            } else {
                ModelData["Asc"] = false;
            }

            if (($("#Both").is(":checked") == true)) {
                ModelData["Both"] = true;
            } else {
                if (($("#FMAutomatic").is(":checked") == true)) {
                    ModelData["FMAutomatic"] = true;
                } else {
                    ModelData["FMAutomatic"] = false;
                }
            }


            if (($("#FM_Date").is(":checked") == true)) {
                ModelData["FM_Date"] = true;
                if ($("#Before_FM_Date").val()=='') {
                    ModelData["Before_FM_Date"] = "0";
                } else {
                    ModelData["Before_FM_Date"] = $("#Before_FM_Date").val();
                }
                if ($("#After_FM_Date").val() == '') {
                    ModelData["After_FM_Date"] = "0";
                } else {
                    ModelData["After_FM_Date"] = $("#After_FM_Date").val();
                }

            } else {
                ModelData["FM_Date"] = false;
                ModelData["Before_FM_Date"] = "0";
                ModelData["After_FM_Date"] = "0";
            }

            ModelData["Mode"] = '@Model.Mode';

            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/DashBoard/SetUP";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });


</script>

