<script type="text/javascript">
    $(document).ready(function () {
        if ('@Model.Mode' == "Delete") {
            $('.form-group :input').prop("disabled", true);
        }

        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#MyReportCentre').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                ReportHeader_Code: {required: true,},
                ReportHeader_SubCodeOf: {required: true,},
               },
            messages: {
                ReportHeader_Code: {required: 'Code is Required',},
                ReportHeader_SubCodeOf: {required: 'SubCodeOf is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#ReportHeader_Code").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#ReportHeader_SubCodeOf").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#ReportHeader_FontSize").constrain({ allow: { regex: "[0-9.-]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#MyReportCentre").validate().form() == false)
            //    return;

            if ($("#ReportHeader_Code").val() == null || $("#ReportHeader_Code").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Format Code is Required..');
                return;
            }
            if ($("#ReportHeader_SubCodeOf").val() == null || $("#ReportHeader_SubCodeOf").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Parent Format is Required..');
                return;
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["ReportHeader_Code"] = $("#ReportHeader_Code").val();
            ModelData["ReportHeader_DefaultReport"] = $("#ReportHeader_DefaultReport").is(':checked');
            ModelData["ReportHeader_RunAtStart"] = $("#ReportHeader_RunAtStart").is(':checked');
            ModelData["ReportHeader_SubCodeOf"] = $("#ReportHeader_SubCodeOf").val();
            ModelData["ReportHeader_FormatHead"] = $("#ReportHeader_FormatHead").val();
            ModelData["ReportHeader_Locked"] = $("#ReportHeader_Locked").is(':checked');
            ModelData["ReportHeader_SelectQuery"] = $("#ReportHeader_SelectQuery").val();
            ModelData["ReportHeader_Tables"] = $("#ReportHeader_Tables").val();
            ModelData["ReportHeader_OrderBy"] = $("#ReportHeader_OrderBy").val();
            ModelData["ReportHeader_UserQuery"] = $("#ReportHeader_UserQuery").val();
            ModelData["ReportHeader_InputPara"] = $("#ReportHeader_InputPara").val();
            ModelData["ReportHeader_ParaString"] = $("#ReportHeader_ParaString").val();
            ModelData["ReportHeader_SubTotalOn"] = $("#ReportHeader_SubTotalOn").val();
            ModelData["ReportHeader_SortedOn"] = $("#ReportHeader_SortedOn").val();
            ModelData["ReportHeader_DrillQuery"] = $("#ReportHeader_DrillQuery").val();
            ModelData["ReportHeader_FontName"] = $("#ReportHeader_FontName").val();
            ModelData["ReportHeader_FontSize"] = $("#ReportHeader_FontSize").val();
            ModelData["ReportHeader_ForeColor"] = $("#ReportHeader_ForeColor").val();
            ModelData["ReportHeader_DontSort"] = $("#ReportHeader_DontSort").is(':checked');
            ModelData["ReportHeader_DontPrintTotal"] = $("#ReportHeader_DontPrintTotal").is(':checked');
            ModelData["ReportHeader_RemoveUnused"] = $("#ReportHeader_RemoveUnused").is(':checked');
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Logistics/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
</script>

