@model TFATERPWebApplication.Areas.Logistics.Models.MsgTemplateVM
@using Common;
@{
    ViewBag.Title = "Email Templates";
    Layout = null;
}

<script type="text/javascript">
    $(document).ready(function () {
        if ('@Model.Mode' == "Delete") {
            $('.form-group :input').prop("disabled", true);
        }

        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#MsgTemplate').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                MsgTemplate_Code: {required: true,},
                MsgTemplate_Subject: {required: true,},
                MsgTemplate_MsgText: {required: true,},
               },
            messages: {
                MsgTemplate_Code: {required: 'Code is Required',},
                MsgTemplate_Subject: {required: 'Subject is Required',},
                MsgTemplate_MsgText: {required: 'MsgText is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#MsgTemplate_Code").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#MsgTemplate_Subject").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#MsgTemplate").validate().form() == false)
            //    return;

            if ($("#MsgTemplate_Code").val() == null || $("#MsgTemplate_Code").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Code is Required..');
                return;
            }
            if ($("#MsgTemplate_Subject").val() == null || $("#MsgTemplate_Subject").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Subject is Required..');
                return;
            }
            if ($("#MsgTemplate_MsgText").val() == null || $("#MsgTemplate_MsgText").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Message Text is Required..');
                return;
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["MsgTemplate_Code"] = $("#MsgTemplate_Code").val();
            ModelData["MsgTemplate_Subject"] = $("#MsgTemplate_Subject").val();
            ModelData["MsgTemplate_MsgText"] = $("#MsgTemplate_MsgText").val();
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Logistics/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
</script>

