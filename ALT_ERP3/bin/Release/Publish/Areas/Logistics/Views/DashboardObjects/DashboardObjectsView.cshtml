<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Content/bootstrap-multiselect.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        if ('@Model.Mode' == "Delete") {
            $('.form-group :input').prop("disabled", true);
        }

        @* iX9: Multi-Select Controls *@
        var values = $('#hdnUsers').val();
        $("#hdnUsersArray").val(values);
        if (values == "") {
        }
        else {
            $.each(values.split(","), function (i, e) {
            $(".Userslistbox option[value='" + e + "']").prop("selected", true);
            });
        }
        $(".Userslistbox").change(function () {
            $('#hdnUsersArray').val('');
            var selected = [];
            $(".Userslistbox :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnUsersArray').val(selected)
            return false;
        });
        $('.Userslistbox').multiselect({ includeSelectAllOption: true })

        @* iX9: set the selected value to fixed combos *@
        $('#ActiveObjects_ObjectType').val('@Model.ActiveObjects_ObjectType').attr("selected", "selected");
        @* iX9: set the selected value to fixed combos *@
        $('#ActiveObjects_Modules').val('@Model.ActiveObjects_Modules').attr("selected", "selected");
        @* iX9: set the selected value to fixed combos *@
        $('#ActiveObjects_SizeType').val('@Model.ActiveObjects_SizeType').attr("selected", "selected");
        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#DashboardObjects').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                ActiveObjects_Code: {required: true,},
                ActiveObjects_Name: {required: true,},
                ActiveObjects_ObjectType: {required: true,},
                ActiveObjects_Modules: {required: true,},
               },
            messages: {
                ActiveObjects_Code: {required: 'Code is Required',},
                ActiveObjects_Name: {required: 'Name is Required',},
                ActiveObjects_ObjectType: {required: 'ObjectType is Required',},
                ActiveObjects_Modules: {required: 'Modules is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#ActiveObjects_Code").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#ActiveObjects_Name").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#ActiveObjects_ObjectType").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#ActiveObjects_Modules").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#ActiveObjects_Height").constrain({ allow: { regex: "[0-9.-]" } });
        $("#ActiveObjects_Width").constrain({ allow: { regex: "[0-9.-]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#DashboardObjects").validate().form() == false)
            //    return;

            if ($("#ActiveObjects_Code").val() == null || $("#ActiveObjects_Code").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Code is Required..');
                return;
            }
            if ($("#ActiveObjects_Name").val() == null || $("#ActiveObjects_Name").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Name is Required..');
                return;
            }
            if ($("#ActiveObjects_ObjectType").val() == null || $("#ActiveObjects_ObjectType").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('ObjectType is Required..');
                return;
            }
            if ($("#ActiveObjects_Modules").val() == null || $("#ActiveObjects_Modules").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Modules is Required..');
                return;
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["ActiveObjects_Code"] = $("#ActiveObjects_Code").val();
            ModelData["ActiveObjects_Name"] = $("#ActiveObjects_Name").val();
            ModelData["ActiveObjects_ObjectType"] = $("#ActiveObjects_ObjectType").val();
            ModelData["ActiveObjects_Modules"] = $("#ActiveObjects_Modules").val();
            ModelData["ActiveObjects_Height"] = $("#ActiveObjects_Height").val();
            ModelData["ActiveObjects_Width"] = $("#ActiveObjects_Width").val();
            ModelData["ActiveObjects_SizeType"] = $("#ActiveObjects_SizeType").val();
            ModelData["ActiveObjects_Query"] = $("#ActiveObjects_Query").val();
            ModelData["ActiveObjects_Users"] = $("#hdnUsersArray").val();
            ModelData["ActiveObjects_ReportCode"] = $("#ActiveObjects_ReportCode").val();
            ModelData["ActiveObjects_Status"] = $("#ActiveObjects_Status").is(':checked');
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Logistics/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
</script>

