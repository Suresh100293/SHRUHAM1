<script src="~/Content/js/dynamic_table_init.js"></script>
<script>
    $(document).ready(function () {

        loadParty();

        $("#dynamic-table").on('click', 'tbody tr', function (event) {
            event.preventDefault();
            var PSerial = [];
            var row = $(this);
            var $tds = $(this).find('td');
            psrl = $tds.eq(0).text();
            PSerial.push(psrl);
            var ModelData = {};
            ModelData["TfatPass_Code"] = PSerial.toString();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("ClickLeftGrid")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    $('#errormessage').hide();
                    $('#UserRightsdiv').html(data.Html);
                    $('#UserRights_Code').val(data.UserRights_Code);
                },
                error: function () {
                    $('.spinner').hide();
                    alert("Error occured while Fetching Data.");
                }
            });
        });

        $('#Submit').click(function (event) {
            event.preventDefault();
            var myTableArray = [];
            $('#tabledatapick2 tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets = {
                    UserRights_MenuID: tds.find("input[id='UserRights_MenuID']").val(),
                    TfatMenu_Menu: tds.find("input[id='TfatMenu_Menu']").val(),
                    UserRights_xCess: tds.find("input[id='UserRights_xCess']").is(':checked'),
                    UserRights_xAdd: tds.find("input[id='UserRights_xAdd']").is(':checked'),
                    UserRights_xEdit: tds.find("input[id='UserRights_xEdit']").is(':checked'),
                    UserRights_xDelete: tds.find("input[id='UserRights_xDelete']").is(':checked'),
                    UserRights_xPrint: tds.find("input[id='UserRights_xPrint']").is(':checked'),
                    UserRights_xBackDated: tds.find("input[id='UserRights_xBackDated']").is(':checked'),
                    UserRights_xLimit: tds.find("input[id='UserRights_xLimit']").val(),
                    Modulename: tds.find("input[id='Modulename']").val(),
                    ParentName: tds.find("input[id='ParentName']").val(),
                    ZoomUrl: tds.find("input[id='ZoomUrl']").val()
                }
                myTableArray.push(myDets);
            })
            $('.spinner').show();
            var ModelData = {};
            ModelData["mRightList"] = myTableArray;
            ModelData["UserRights_Code"] = $("#UserRights_Code").val();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SaveData")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    alert("Data Saved..");
                },
                error: function () {
                    $('.spinner').hide();
                    alert("Error occured while Saving Data.");
                }
            });
        });


        $('#CopyRights').click(function (event) {
            event.preventDefault();
            var ModelData = {};
            ModelData["UserRights_Code"] = $("#UserRights_Code").val();
            ModelData["Account"] = $("#Account").val();
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SaveCopyRights")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    alert("Data Saved..");
                },
                error: function () {
                    $('.spinner').hide();
                    alert("Error occured while Saving Data.");
                }
            });
        });
    });

    function loadParty() {
        var url = '@Url.Action("GetPartyList")?BaseGr=' + $("#hdnMType").val();
        $('#Account').select2({
            minimumInputLength: 2,
            placeholder: 'Search',
            ajax:
                {
                    url: url,
                    dataType: 'json',
                    quietMillis: 100,
                    enableFiltering: true,
                    allowClear: true,
                    minimumInputLength: 2,
                    multiple: true,
                    width: 300,
                    data: function (term, page) {
                        return {
                            types: ["exercise"],
                            limit: -1, term: term
                        };
                    },
                    results: function (data, page) {
                        clientObj = JSON.stringify(data);
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.Name, id: item.Code
                                }
                            })
                        };
                    }
                },
            initSelection: function (element, callback) {
                var data = { id: '@Model.Account', text: '@Model.AccountName' };
                callback(data);
            },
            formatResult: function (exercise) {
                return "<div class='row-fluid'><div class=''><span class='span1'><div style='color:" + exercise.alias + "'>" + exercise.text +
                    "</div></span></div></div>";
            },
            formatSelection: function (exercise) {
                return "<div class='row-fluid'><div class=''><span class='span1'><div style='color:" + exercise.alias + "'>" + exercise.text +
                    "</div></span></div></div>";
            },
        })
    };
</script>

