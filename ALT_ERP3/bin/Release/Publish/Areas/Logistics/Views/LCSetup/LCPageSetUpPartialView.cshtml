<script type="text/javascript">

    $(document).ready(function () {


        // Edit/View/Delete Time USe Below Code
        if ('@Model.Lc_Date' == 'True') {
            $("#Before_Lc_Date").removeAttr("disabled");
            $("#After_Lc_Date").removeAttr("disabled");
        } else {
            $("#Before_Lc_Date").attr("disabled", "disabled");
            $("#After_Lc_Date").attr("disabled", "disabled");
        }

        if ('@Model.Asc'=="True") {
            $("#Asc").prop("checked", true);
        } else {
            $("#Desc").prop("checked", true);
        }

        // End Edit/View/Delete Mode Code


        //All Time USe Below Code

        $('#LcAutomatic').change(function () {
            if (this.checked) {
                $("#LcManual").prop('checked', false)
                $("#Both").prop('checked', false)
            }
        });

        $('#LcManual').change(function () {
            if (this.checked) {
                $("#LcAutomatic").prop('checked', false)
                $("#Both").prop('checked', false)
            }
        });
        $('#Both').change(function () {
            if (this.checked) {
                $("#LcAutomatic").prop('checked', false)
                $("#LcManual").prop('checked', false)
            }
        });

        $('#Lc_Date').change(function () {
            if (this.checked) {
                $("#Before_Lc_Date").removeAttr("disabled");
                $("#After_Lc_Date").removeAttr("disabled");

            } else {
                $("#Before_Lc_Date").attr("disabled", "disabled");
                $("#After_Lc_Date").attr("disabled", "disabled");
            }

        });

        $('#Branch_Area').change(function () {
            if (this.checked) {
                $("#All").prop('checked', false)
                $("#Ap_Per_User").prop('checked', false)
            }
        });
        $('#All').change(function () {
            if (this.checked) {
                $("#Branch_Area").prop('checked', false)
                $("#Ap_Per_User").prop('checked', false)
            }
        });
        $('#Ap_Per_User').change(function () {
            if (this.checked) {
                $("#Branch_Area").prop('checked', false)
                $("#All").prop('checked', false)
            }
        });

        $('#Submit').click(function (event) {
            event.preventDefault();

            if (($("#LcAutomatic").is(":checked") == false) && ($("#LcManual").is(":checked") == false) && ($("#Both").is(":checked") == false)) {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Please Select LC Generate');
                return;
            }
            if ($("#Lc_Date").is(":checked") == true) {
                if (($("#Before_Lc_Date").val() == "0" || $("#Before_Lc_Date").val() == null || $("#Before_Lc_Date").val() == "") && ($("#After_Lc_Date").val() == "0" || $("#After_Lc_Date").val() == null || $("#After_Lc_Date").val() == "")) {
                    $("#ErrorMessage").show();
                    $("#ErrorMessage").text('LC Date Range Required.');
                    return;
                }
            }

            if (($("#Branch_Area").is(":checked") == false) && ($("#All").is(":checked") == false) && ($("#Ap_Per_User").is(":checked") == false)) {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Please Select From Destination');
                return;
            }

            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};

            ModelData["SelectColumn"] = $("#SelectColumn").val();

            if (($("#Asc").is(":checked") == true)) {
                ModelData["Asc"] = true;
            } else {
                ModelData["Asc"] = false;
            }

            if (($("#Both").is(":checked") == true)) {
                ModelData["Both"] = true;
            } else {
                if (($("#LcAutomatic").is(":checked") == true)) {
                    ModelData["LcAutomatic"] = true;
                } else {
                    ModelData["LcAutomatic"] = false;
                }
            }


            if (($("#Lc_Date").is(":checked") == true)) {
                ModelData["Lc_Date"] = true;
                if ($("#Before_Lc_Date").val()=='') {
                    ModelData["Before_Lc_Date"] = "0";
                } else {
                    ModelData["Before_Lc_Date"] = $("#Before_Lc_Date").val();
                }
                if ($("#After_Lc_Date").val() == '') {
                    ModelData["After_Lc_Date"] = "0";
                } else {
                    ModelData["After_Lc_Date"] = $("#After_Lc_Date").val();
                }
                
            } else {
                ModelData["Lc_Date"] = false;
                ModelData["Before_Lc_Date"] = "0";
                ModelData["After_Lc_Date"] = "0";
            }

            if (($("#Branch_Area").is(":checked") == true)) {
                ModelData["Branch_Area"] = true;
            }
            if (($("#All").is(":checked") == true)) {
                ModelData["All"] = true;
            }
            if (($("#Ap_Per_User").is(":checked") == true)) {
                ModelData["Ap_Per_User"] = true;
            }

            ModelData["Mode"] = '@Model.Mode';

            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/DashBoard/SetUP";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });


</script>

