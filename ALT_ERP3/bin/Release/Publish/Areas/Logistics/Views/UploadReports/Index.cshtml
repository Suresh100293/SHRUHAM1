<!DOCTYPE html>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnAddDocument").click(function (event) {
            event.preventDefault();
            var formData = new FormData();
            var totalFiles = document.getElementById("FileUpload").files.length;
            for (var i = 0; i < totalFiles; i++) {
                var file = document.getElementById("FileUpload").files[i];
                formData.append("FileUpload", file);
            }
            $.ajax({
                type: "POST",
                url: '@Url.Action("AttachDocument")',
                data: formData,
                dataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    $('#AttachDoc').html(data.Html);
                },
                error: function (error) {
                    alert("errror");
                }
            });
        });

    });
</script>

<header class="header fixed-top" style="position:fixed;background-color:lightgray;padding:6px;width:100%;margin-top:5px;">
