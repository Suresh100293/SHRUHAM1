<script type="text/javascript">
    $(document).ready(function () {
        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#UserRoles').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                UserRoles_Code: {required: true,},
                UserRoles_Name: {required: true,},
               },
            messages: {
                UserRoles_Code: {required: 'Code is Required',},
                UserRoles_Name: {required: 'Name is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#UserRoles_Code").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#UserRoles_Name").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#UserRoles").validate().form() == false)
            //    return;

            if ($("#UserRoles_Code").val() == null || $("#UserRoles_Code").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Role: is Required..');
                return;
            }
            if ($("#UserRoles_Name").val() == null || $("#UserRoles_Name").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Role Name: is Required..');
                return;
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["UserRoles_Code"] = $("#UserRoles_Code").val();
            ModelData["UserRoles_Name"] = $("#UserRoles_Name").val();
            ModelData["UserRoles_Sun"] = $("#UserRoles_Sun").is(':checked');
            ModelData["UserRoles_Mon"] = $("#UserRoles_Mon").is(':checked');
            ModelData["UserRoles_Tue"] = $("#UserRoles_Tue").is(':checked');
            ModelData["UserRoles_Wed"] = $("#UserRoles_Wed").is(':checked');
            ModelData["UserRoles_Thu"] = $("#UserRoles_Thu").is(':checked');
            ModelData["UserRoles_Fri"] = $("#UserRoles_Fri").is(':checked');
            ModelData["UserRoles_Sat"] = $("#UserRoles_Sat").is(':checked');
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Logistics/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
</script>

