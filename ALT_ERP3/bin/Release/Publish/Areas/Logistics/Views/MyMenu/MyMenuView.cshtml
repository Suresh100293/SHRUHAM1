<script type="text/javascript">
    $(document).ready(function () {
        if ('@Model.Mode' == "Delete") {
            $('.form-group :input').prop("disabled", true);
        }

        @* iX9: make all the fields hidden with visible property=false *@
        $("#TfatMenu_Hide").hide();
        $("#TfatMenu_SystemDefault").hide();

        @* iX9: set the selected value to fixed combos *@
        $('#TfatMenu_ModuleName').val('@Model.TfatMenu_ModuleName').attr("selected", "selected");
        @* iX9: set the selected value to fixed combos *@
        $('#TfatMenu_OptionType').val('@Model.TfatMenu_OptionType').attr("selected", "selected");
        @* iX9: set the selected value to fixed combos *@
        $('#TfatMenu_ParentMenu').val('@Model.TfatMenu_ParentMenu').attr("selected", "selected");
        @* iX9: Validation rules for the fields where AllowBlank is False in Definition *@
        $('#MyMenu').validate({
            onfocusout: false,
            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                TfatMenu_ModuleName: {required: true,},
                TfatMenu_OptionType: {required: true,},
                TfatMenu_OptionCode: {required: true,},
                TfatMenu_Menu: {required: true,},
                TfatMenu_DisplayOrder: {required: true,},
                TfatMenu_Level: {required: true,},
               },
            messages: {
                TfatMenu_ModuleName: {required: 'ModuleName is Required',},
                TfatMenu_OptionType: {required: 'OptionType is Required',},
                TfatMenu_OptionCode: {required: 'OptionCode is Required',},
                TfatMenu_Menu: {required: 'Menu is Required',},
                TfatMenu_DisplayOrder: {required: 'DisplayOrder is Required',},
                TfatMenu_Level: {required: 'Level is Required',},
            }
        });

        @* iX9: Input Contraints to limit the inputs to required Input Type i.e. String, Numeric etc. *@
        $("#TfatMenu_ModuleName").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#TfatMenu_OptionType").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#TfatMenu_OptionCode").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#TfatMenu_Menu").constrain({ allow: { regex: "[a-zA-Z0-9()#!%$*,.\/:-+<>; ]" } });
        $("#TfatMenu_DisplayOrder").constrain({ allow: { regex: "[0-9.-]" } });

        @* iX9: Executed when Save/Submit button is Pressed *@
        $('#Submit').click(function (event) {
            event.preventDefault();
            //if ($("#MyMenu").validate().form() == false)
            //    return;

            if ($("#TfatMenu_ModuleName").val() == null || $("#TfatMenu_ModuleName").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('ModuleName is Required..');
                return;
            }
            if ($("#TfatMenu_OptionType").val() == null || $("#TfatMenu_OptionType").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('OptionType is Required..');
                return;
            }
            if ($("#TfatMenu_OptionCode").val() == null || $("#TfatMenu_OptionCode").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('OptionCode is Required..');
                return;
            }
            if ($("#TfatMenu_Menu").val() == null || $("#TfatMenu_Menu").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Menu is Required..');
                return;
            }
            if ($("#TfatMenu_DisplayOrder").val() == null || $("#TfatMenu_DisplayOrder").val() == 0)
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('DisplayOrder is Required..');
                return;
            }
            if ($("#TfatMenu_Level").val() == null || $("#TfatMenu_Level").val() == '')
            {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Level is Required..');
                return;
            }
            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};
            ModelData["TfatMenu_ID"] = $("#TfatMenu_ID").val();
            ModelData["TfatMenu_ModuleName"] = $("#TfatMenu_ModuleName").val();
            ModelData["TfatMenu_OptionType"] = $("#TfatMenu_OptionType").val();
            ModelData["TfatMenu_OptionCode"] = $("#TfatMenu_OptionCode").val();
            ModelData["TfatMenu_Menu"] = $("#TfatMenu_Menu").val();
            ModelData["TfatMenu_ParentMenu"] = $("#TfatMenu_ParentMenu").val();
            ModelData["TfatMenu_FormatCode"] = $("#TfatMenu_FormatCode").val();
            ModelData["TfatMenu_AllowClick"] = $("#TfatMenu_AllowClick").is(':checked');
            ModelData["TfatMenu_Hide"] = $("#TfatMenu_Hide").is(':checked');
            ModelData["TfatMenu_TableName"] = $("#TfatMenu_TableName").val();
            ModelData["TfatMenu_Controller"] = $("#TfatMenu_Controller").val();
            ModelData["TfatMenu_DisplayOrder"] = $("#TfatMenu_DisplayOrder").val();
            ModelData["TfatMenu_Level"] = $("#TfatMenu_Level").val();
            ModelData["TfatMenu_QuickMenu"] = $("#TfatMenu_QuickMenu").is(':checked');
            ModelData["TfatMenu_QuickMaster"] = $("#TfatMenu_QuickMaster").is(':checked');
            ModelData["TfatMenu_MainType"] = $("#TfatMenu_MainType").val();
            ModelData["TfatMenu_SubType"] = $("#TfatMenu_SubType").val();
            ModelData["TfatMenu_ZoomURL"] = $("#TfatMenu_ZoomURL").val();
            ModelData["TfatMenu_SystemDefault"] = $("#TfatMenu_SystemDefault").is(':checked');
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Logistics/MasterGrid/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType="+$("#TfatMenu_ModuleName").val();
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
</script>

