@model TFATERPWebApplication.Areas.Logistics.Models.LCAttachment
@using Common
<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            @*<h4 class="modal-title"><b>Profile Photo</b></h4>*@
        </div>
        <div class="modal-body">
            <div class="grid" id="FormatTable" style="max-height:600px;min-height:600px; width:100%; overflow: scroll;">
                <div style="width:100%;">

                    <div>

                        @if (Model != null)
                        {
                            string imageBase64 = Convert.ToBase64String(Model.Image);
                            string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                            @*<img src="@imageSrc" style="width:100%;height:330px;" />*@
                            <img src="@imageSrc" alt=@Model.FileName class="img-thumbnail" />

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;">
            <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
        </div>
    </div>
</div>



