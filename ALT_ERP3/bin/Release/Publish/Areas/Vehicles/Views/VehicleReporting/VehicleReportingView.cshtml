                    $("#ErrorMessage").show();
                    $("#ErrorMessage").text('vehicle_Category is Required..');
                    return;
                }
            }

            if ($("#FromD").val() == null || $("#FromD").val() == '') {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('From is Required..');
                return;
            }

            if ($("#ToD").val() == null || $("#ToD").val() == '') {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('To is Required..');
                return;
            }

            if ($("#Reporting_Time").val() == null || $("#Reporting_Time").val() == '') {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('Reporting_Time is Required..');
                return;
            }


            if ($("#KM").val() == null || $("#KM").val() == '0') {
                $("#ErrorMessage").show();
                $("#ErrorMessage").text('KM is Not Defined So U can Not Create ..');
                return;
            }



            var url = '@Url.Action("SaveData")';
            @* iX9: Data from individual field is passed on to the Model and then to Controller for Saving *@
            var ModelData = {};

            ModelData["Document"] = $("#Document").val();

            if ('@Model.typeofRate'== "VehicleReporting") {
                ModelData["Vehicle_No"] = $("#Vehicle_No").val();
            } else {
                ModelData["vehicle_Category"] = $("#vehicle_Category").val();
            }

            ModelData["FromD"] = $("#FromD").val();
            ModelData["ToD"] = $("#ToD").val();
            ModelData["Reporting_Time"] = $("#Reporting_Time").val();
            ModelData["typeofRate"] = '@Model.typeofRate';
            ModelData["Mode"] = '@Model.Mode';
            var DTO = { mModel: ModelData };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        window.location.href = "/Vehicles/VehicleReporting/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);                    }
                },
            });
        });
    });
    @* iX9: Autocomplete Code i.e. ControlType='A' and vDepend<>'' *@

        function CheckName() {
        
        NameFlag = "False";
        var DATA;
        var currValue = $('#ToD').val();
        var url = '@Url.Action("CheckExist")';
            if ('@Model.typeofRate' == "VehicleReporting")
        {
                DATA = { TableName: "VehicleReporting", Colfield: "[Vehicle No]", Value: $('#Vehicle_No').val(), SkipColumnName: "Code", PKValue: '@Model.Document', ExtraColumn: "[ToD]", ExtraValue: $('#ToD').val(), ExtraColumn2: "[FromD]", ExtraValue2: $('#FromD').val() };
        } else
        {
                DATA = { TableName: "VehicleCategoryReporting", Colfield: "[Vehicle Category]", Value: $('#vehicle_Category').val(), SkipColumnName: "Code", PKValue: '@Model.Document', ExtraColumn: "[ToD]", ExtraValue: $('#ToD').val(), ExtraColumn2: "[FromD]", ExtraValue2: $('#FromD').val() };
        }
        if (currValue != null || currValue != "") {
            $.ajax({
                type: "POST",
                traditional: true,
                //url: "/Base/CheckExist",
                url: url,
                data: DATA,
                success: function (result) {
                    if (result.Message == "F") {
                        $("#ErrorMessage").show();
                        if ('@Model.typeofRate' == "VehicleReporting") {
                            $("#ErrorMessage").text('This Vehicle Reporting Time For This Destination is Exist Please Change VehicleNo Or Destination..');
                        } else {
                            $("#ErrorMessage").text('This Vehicle Category Reporting Time For This Destination is Exist Please Change Vehicle Category Or Destination..');
                        }
                        $('#Submit').prop('disabled', true);
                        return;
                    } else {
                        $("#ErrorMessage").hide();
                        $('#Submit').prop('disabled', false);
                    }
                }
            });
        }
    }
    function LoadVehicleNo() {
        var url = '@Url.Action("GetAdvVehiclesNo")'
        $('#Vehicle_No').select2({
            minimumInputLength: 0,
            placeholder: 'Search',
            ajax: {
                url: url,
                dataType: 'json',
                quietMillis: 100,
                enableFiltering: true,
                allowClear: true,
                minimumInputLength: 0,
                multiple: true,
                width: 300,
                data: function (term, page) {
                    return {
                        types: ["exercise"],
                        limit: -1,
                        term: term
                    };
                },
                results: function (data, page) {
                    clientObj = JSON.stringify(data);
                    return {
                        results: $.map(data, function (item) {
                            return {
                                text: item.Name,
                                id: item.Code
                            }
                        })
                    };
                }
            },

            initSelection: function (element, callback) {
                var data = { id: '@Model.Vehicle_No', text: '@Model.Vehicle_No' };
                callback(data);
            },

            formatResult: function (exercise) {
                return "<div class='row-fluid'><div class=''><span class='span1'><div style='color:" + exercise.alias + "'>" + exercise.text +
                    "</div></span></div></div>";
            },

