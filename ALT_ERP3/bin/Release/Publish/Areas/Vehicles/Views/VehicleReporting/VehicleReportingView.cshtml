                        $("#ErrorMessage").hide();
            }


        });

        $('#Submit').click(function (event) {
            event.preventDefault();
            

            if ('@Model.typeofRate' =="VehicleReporting") {
                if ($("#Vehicle_No").val() == null || $("#Vehicle_No").val() == '') {
                    $("#ErrorMessage").show();
                    $("#ErrorMessage").text('Vehicle_No is Required..');
                    return;
                }
            } else {
