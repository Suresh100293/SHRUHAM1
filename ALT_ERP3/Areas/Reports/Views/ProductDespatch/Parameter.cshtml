                        </li>
                    </ul>
                </header>
                <div class="panel-body">
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"> Product Group</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(x => x.ProductGrp, DropdownHelper.EmptyList(), new { @Id = "ProductGrp", @Name = "ProductGrp", @style = "width:150px;" })
                                </div>
                                <label class="col-sm-2 control-label"> Product</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Item", @Name = "Item" })
                                </div>
                            </div>
                        </div>
                        <div id="tab-2" class="tab-pane active">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Process</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(x => x.Process, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Process", @Name = "Process" })
                                </div>
                                <label class="col-sm-2 control-label">Warehouse/Location</label>
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(x => x.Warehouse, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Warehouse", @Name = "Warehouse" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Product Category</label>
