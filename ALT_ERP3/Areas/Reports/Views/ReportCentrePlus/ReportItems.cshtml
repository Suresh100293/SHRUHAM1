@model GridOption
@using Common; 
<div class="form-horizontal" id="" role="form">
    <section class="panel">
        <div class="tab">
            <button class="tablinksitem" id="itemgrp" style="width:130px;" onclick="openTabitem(event, 'tabitemgrp')">Grp/Items</button>
            <button class="tablinksitem" id="itemcat" style="width:130px;" onclick="openTabitem(event, 'tabitemcat')">Category/Units</button>
        </div>
        <div id="tabitemgrp" class="tabcontentitem" style="height:340px;padding:0px 0px 0px 30px;">
            <div class="row" style="margin-top:5px;">
                <div class="form-group">
                    <div class="col-sm-1" style="padding-left:20px;width:30px;" id="isgroupsdiv">
                        <input type="checkbox" id="isgroups" name="isgroups" style="width:17px;height:17px;" />
                    </div>
                    <label class="col-sm-2 control-label">Item Groups:</label>
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-1" style="padding-left:20px;width:30px;" id="isitemsdiv">
                        <input type="checkbox" id="isitems" name="isitems" style="width:17px;height:17px;" />
                    </div>
                    <label class="col-sm-2 control-label">Items:</label>
                </div>
                <div class="form-group">
                    <div class="col-sm-6" style="width:450px;">
                        <div id="itemgroups" style="width:400px;overflow-y:scroll;min-height:340px;max-height:340px;padding:10px;font-size:12px;border:solid 1px;">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div id="itemslistdiv" style="overflow-y:scroll;min-height:340px;max-height:340px;padding:10px;font-size:12px;border:solid 1px;">
                            <div class="col-sm-12">
                                @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { @Multiple = "multiple", @Id = "itemslist", @style = "height:100%;width:100%" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8">
                        <button class="btn btn-success" style="font-size: 13px;padding:3px 12px;" id="expandall">Expand All</button>
                        <button class="btn btn-success" style="font-size: 13px;padding:3px 12px;" id="closeall">Close All</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="tabitemcat" class="tabcontentitem" style="height:340px;padding:0px 0px 0px 30px;">
            <div class="row" style="margin-top:5px;">
                <div class="col-sm-6" style="width:450px;">
                    <div class="form-group">
                        <div class="col-sm-1" style="padding-left:20px;width:30px;" id="isitemcatdiv">
                            <input type="checkbox" id="isitemcat" name="isitemcat" style="width:17px;height:17px;" />
                        </div>
                        <label class="col-sm-3 control-label">Item Category:</label>
                        <div class="col-sm-6" style="width:450px;">
                            <div id="itemcatdiv" style="overflow-y:scroll;min-height:375px;max-height:375px;padding:10px;font-size:12px;border:solid 1px;">
                                @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { @Multiple = "multiple", @Id = "itemcatlist", @style = "height:100%;width:100%" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6" style="width:450px;">
                    <div class="form-group">
                        <div class="col-sm-1" style="padding-left:20px;width:30px;" id="isunitdiv">
                            <input type="checkbox" id="isunit" name="isunit" style="width:17px;height:17px;" />
                        </div>
                        <label class="col-sm-2 control-label">Units:</label>
                        <div class="col-sm-6" style="width:450px;">
                            <div id="unitlistdiv" style="overflow-y:scroll;min-height:375px;max-height:375px;padding:10px;font-size:12px;border:solid 1px;">
                                @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { @Multiple = "multiple", @Id = "unitlist", @style = "height:100%;width:100%" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    function openTabitem(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontentitem");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinksitem");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
    document.getElementById("itemgrp").click();
</script>