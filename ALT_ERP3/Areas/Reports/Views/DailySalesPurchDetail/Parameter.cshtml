    };

</script>


<div class="modal-content" style="width:700px">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Query Options</h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="fixedasstesinfo" role="form">
            <div id="ErrorMessage3" name="ErrorMessage3" class="alert alert-danger" style="display: none"></div>
            <header class="panel-heading tab-bg-dark-navy-blue">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#tab-1" id="products">Products</a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#tab-2" id="store">Store / Process</a>
                    </li>
                </ul>
            </header>
            <div class="panel-body">
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane  active">
                        <div class="form-group">
                            <label class="col-sm-2 control-label"> Product Group</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.ProductGrp, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "ProductGrp", @Name = "ProductGrp", @style = "width:150px;" })
                            </div>
                            <label class="col-sm-2 control-label"> Product</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Item", @Name = "Item" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Store/Location</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.Store, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Store", @Name = "Store" })
                            </div>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Sales/Purchase</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.Sales, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Sales", @Name = "Sales" })
                            </div>
                            <label class="col-sm-2 control-label">Purchase</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.Purchase, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Purchase", @Name = "Purchase" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="submit">Save</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
        </div>
    </div>
</div>

<input type="hidden" id="hdnItem" />
<input type="hidden" id="hdnSales" />
<input type="hidden" id="hdnPurchase" />
