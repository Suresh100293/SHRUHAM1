        return false;

    };

    function GetStoreName() {
        event.preventDefault();
        var url = '@Url.Action("Getstore")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Store').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#Store").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
