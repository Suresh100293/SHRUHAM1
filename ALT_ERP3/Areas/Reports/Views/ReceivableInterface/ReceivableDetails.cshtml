@model GridOption

<script>
    $(document).ready(function () {
        $('#table1 tr').click(function (event) {
            var tds = $(this).find('td');
            //alert($(tds[0]).html());
            //if (event.target.type !== 'checkbox') {
            //    $(':checkbox', this).trigger('click');
            //}
            var ModelData = {};
            ModelData["Type"] = $(tds[0]).html();
            ModelData["Prefix"] = $(tds[1]).html();
            ModelData["Srl"] = $(tds[2]).html();
            ModelData["AccountName"] = $('#Account').val();
            ModelData["Branch"] = $('#Branch').val();
            var DTO = { Model: ModelData };
            var url = '@Url.Action("GetReceivableChildDetails")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('#RCList').html(data.Html);
                    $('.spinner').hide();
                },
                error: function () {
                    $('.spinner').hide();
                    alert("An error occurred while processing the request.");
                }
            });
        });

            $('#table2 tr').click(function (event) {
                var tds = $(this).find('td');
