

@model GridOption
@using Common;

<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<style>
    .panel-heading .nav {
        margin: -23px -15px -23px;
    }

    .table, th, td {
        border: 0px solid;
    }

    .select2-container-multi .select2-choices {
        width: 180px;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ReportQuery").hide();
        $("#indents").hide();
        $('#RStatus').hide();

        $("#Item").change(function () {
            var selected = [];
            $("#Item :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnItemArray').val(selected)
            return false;
        });

        $("#Party").change(function () {
            var selected = [];
            $("#Party :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnPartyName').val(selected)
            return false;
        });

        $("#Order").change(function () {
            var selected = [];
            $("#Order :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnOrderName').val(selected)
            return false;
        });

        $("#ProductGrp").change(function () {
            event.preventDefault();
            var url = '@Url.Action("GetItemName")?Code=' + $('#ProductGrp').val();
            $.ajax({
                type: 'POST',
                url: url,
                dataType: 'json',
                data: { Country: $('#Item').val() },
                success: function (result) {
                    $.each(result, function (i, item) {
                        $("#Item").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                    $('.spinner').hide();
                    $("#Itemgrp").show();

                },
                error: function (ex) {
                    alert("Error occured while processing your request." + ex);
                }
            });
            return false;
        });

    });

    function GetParty() {
        event.preventDefault();
        var url = '@Url.Action("GetPartyName")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Party').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#Party").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };

    function GetProdGrp() {
        event.preventDefault();
        var url = '@Url.Action("GetItemGroups")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#ProductGrp').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#ProductGrp").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };

    function GetOrder() {
        event.preventDefault();
        var url = '@Url.Action("GetOrderName")?MainType=' + '@Model.MainType';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Order').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#Order").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };



</script>

<div class="modal-content" style="width:650px">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Query Options</h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="fixedasstesinfo" role="form">
            <div id="ErrorMessage3" name="ErrorMessage3" class="alert alert-danger" style="display: none"></div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Include Orders</label>
                    <div class="col-sm-3">
                        <select style="width: 205px" id="ReportType">
                            <option value="">--Select--</option>
                            <option value="PEN">Pending</option>
                            <option value="AO">All Orders</option>
                            <option value="EXE">Executed</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Order</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Order, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Order", @Name = "Order" })
                    </div>
                    <label class="col-sm-2 control-label">Party Name</label>
                    <div class="col-sm-4" id="codePurchase">
                        @Html.DropDownListFor(x => x.Party, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Party", @Name = "Party" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Product Group</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.ProductGrp, DropdownHelper.EmptyList(), new { @Id = "ProductGrp", @Name = "ProductGrp", @style = "width:205px;" })
                    </div>
                    <label class="col-sm-2 control-label">Product</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Item", @Name = "Item" })
                    </div>
                </div>
            </div>
        </form>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="submit">Save</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
        </div>
    </div>
</div>


