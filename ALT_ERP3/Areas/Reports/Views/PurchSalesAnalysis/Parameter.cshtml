<script type="text/javascript">
    $(document).ready(function () {
        $("#Itemgrp").hide();

        $("#Item").change(function () {
            var selected = [];
            $("#Item :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnItemArray').val(selected)
            return false;
        });

        $("#Party").change(function () {
            var selected = [];
            $("#Party :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnPartyName').val(selected)
            return false;
        });

        $("#Salesman").change(function () {
            var selected = [];
            $("#Salesman :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnSalesman').val(selected)
            return false;
        });

        $("#Area").change(function () {
            var selected = [];
            $("#Area :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnArea').val(selected)
            return false;
        });

        $("#Type").change(function () {
            var selected = [];
            $("#Type :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnType').val(selected)
            return false;
        });



        $("#ProductGrp").change(function () {
            event.preventDefault();
            var url = '@Url.Action("GetItemName")?Code=' + $('#ProductGrp').val();
            $.ajax({
                type: 'POST',
                url: url,
                dataType: 'json',
                data: { Country: $('#Item').val() },
                success: function (result) {
                    $.each(result, function (i, item) {
                        $("#Item").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                    $('.spinner').hide();
                    $("#Itemgrp").show();

                },
                error: function (ex) {
                    alert("Error occured while processing your request." + ex);
                }
            });
            return false;
        });
    });

