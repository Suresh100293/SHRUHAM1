</script>

<div class="modal-content" style="width:650px">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Query Options</h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="fixedasstesinfo" role="form">
            <div id="ErrorMessage3" name="ErrorMessage3" class="alert alert-danger" style="display: none"></div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Order Status Filter</label>
                    <div class="col-sm-3">
                        <select style="width: 205px" id="ReportType">
                            <option value="">--Select--</option>
                            <option value="OB">Order Brought</option>
                            <option value="OE">Order Executed</option>
                            <option value="PO">Pending Order</option>
                        </select>
                    </div>
                    <label class="col-sm-2 control-label">Consider Dates</label>
                    <div class="col-sm-3">
                        <select style="width: 205px" id="ReportType1">
                            <option value="">--Select--</option>
                            <option value="ODW">Order Date Wise</option>
                            <option value="DDW">Document Date Wise</option> 
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Party Name</label>
                    <div class="col-sm-4" id="codePurchase">
                        @Html.DropDownListFor(x => x.Party, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Party", @Name = "Party" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Product Group</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.ProductGrp, DropdownHelper.EmptyList(), new { @Id = "ProductGrp", @Name = "ProductGrp", @style = "width:205px;" })
                    </div>
                    <label class="col-sm-2 control-label"> Product List</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Item", @Name = "Item" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">SalesMan</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Salesman, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Salesman", @Name = "Salesman" })
                    </div>
                    <label class="col-sm-2 control-label">Area</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Area, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Area", @Name = "Area" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Type</label>
                    <div class="col-sm-4" id="codePurchase">
                        @Html.DropDownListFor(x => x.Type, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Type", @Name = "Type" })
                    </div>
                </div>
            </div>
        </form>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="submit">Save</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
        </div>
    </div>
</div>


