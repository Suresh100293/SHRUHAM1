            }
        });
        return false;

    };
    function GetType() {
        event.preventDefault();
        var url = '@Url.Action("GetDoctypes")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Type').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#Type").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
