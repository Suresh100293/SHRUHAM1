@model ALT_ERP3.Areas.Vehicles.Models.TripSheetVM
@using Common

<div class="form-horizontal" id="ledgerupdate" style="margin-left:30px;">
    <div class="col-sm-6" id="SelectedLRTable">
        <table id="lrtabledataD" class="zui-table" style="width:100%;word-wrap:break-word">
            <thead>
                <tr>
                    <td style="width:13%;border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;"></td>
                    <td style="width:1%;border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">
                        Sr.
                    </td>
                    <td style="width:45%;border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">
                        LR Number
                    </td>
                    <td style="width:40%;border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">
                        Amount (<label id="lbltxtAmtD"></label>)
                    </td>
                    <td style="width:1%"></td>
                </tr>
                <tr role="row" style="font-family:Tahoma;font-size:9pt;width: 100%;">
                    <td style="width:13%">
                        <button type="button" class="btn btn-success" id="btnactivateLRDetailsD">Add</button>
                    </td>
                    <td style="width:1%">
                        @Html.TextBoxFor(x => x.tempId, new { @class = "form-control", @id = "hdnLRtempidD", @Name = "hdnLRtempid", @Value = Model.tempId, @style = "text-align:right;display:none" })
                    </td>
                    <td style="width: 45%">
                        @Html.TextBoxFor(x => x.LRNumber, new { @class = "form-control", @id = "txtLRNumberD", @Name = "txtLRNumber", @Value = Model.LRNumber, @disabled = "disabled" })
                    </td>
                    <td style="width:40%">
                        @Html.TextBoxFor(x => x.LRAmt, new { @class = "form-control", @id = "txtLRAmtD", @Name = "txtLRAmt", @Value = Model.LRAmt, @style = "text-align:right;", @disabled = "disabled" })
                    </td>
                    <td style="width:1%">
                        <button type="button" class="btn btn-success" id="btnaddLRDetailsD" style="display:none"><i class="fa fa-save"></i></button>
                        <button type="button" id="EditSaveLRLedgerD" class="btn btn-warning" title="EditSave" style="display:none"><i class="fa fa-save"></i></button>
                    </td>
                </tr>
            </thead>
            <tbody>
                @if (Model.LRDetailList != null)
                {
                    foreach (var item in @Model.LRDetailList.OrderByDescending(x => x.tempId).ToList())
