@model IEnumerable<ALT_ERP3.Areas.Vehicles.Models.CopyTripVM>
@using Common;
@{
    ViewBag.Title = "CopyPartial";
    Layout = null;
}
<script type="text/javascript">
    $(document).ready(function () {

        $(".Listcheckbox").change(function ()
        {
            debugger;

            if (this.checked)
            {
                $(".Listcheckbox").prop("checked", false);
                $(this).prop("checked", true);
            }
            else
            {
                $(".Listcheckbox").prop("checked", false);
                $(this).prop("checked", false);
            }
        });
    });
</script>
<div class="col-sm-12">

    <table id="Copy_table" class="detail zui-table" style="width:100%">
        <thead>
            <tr role="row" style="font-family:Tahoma;font-size:9pt;width:100%">
                <th style="width:3%;"></th>
                <th style="width:10%;">From Branch</th>
                <th style="width:10%;">Vehicle</th>
                <th style="width:10%;">From Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr role="row" style="font-family:Tahoma;font-size:9pt;">
                        <td><center><input type="checkbox" class="Listcheckbox" id="@item.DocumentNo" style="height:20px;width:20px;" /></center></td>
                        <td>@item.FromBranch</td>
                        <td>@item.Vehicle</td>
                        <td>@item.FromDate.ToShortDateString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

