                  },
                  success: function (data)
                  {
                      if (data.Status == "ValidError")
                      {
                          alert(data.Message);
                          return;
                      }
                      else if (data.Status == "Processed")
                      {
                          GetFreightMemoDetails(data.Message);
                      }
                      else
                      {
