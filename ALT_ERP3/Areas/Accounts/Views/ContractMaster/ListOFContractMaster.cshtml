@model IEnumerable<ALT_ERP3.Areas.Accounts.Models.CopyContractVM>
@using Common;
@{
    ViewBag.Title = "CopyPartial";
    Layout = null;
}
<script type="text/javascript">
    $(document).ready(function () {
        
        $(".checkbox").change(function ()
        {
            debugger;
            
            if (this.checked)
            {
                $(".checkbox").prop("checked", false);
                $(this).prop("checked", true);
            }
            else
            {
                $(".checkbox").prop("checked", false);
                $(this).prop("checked", false);
            }
        });
    });
</script>
<div class="col-sm-12">

    <table id="ContractCopy_table" class="detail zui-table" style="width:100%">
        <thead>
            <tr role="row" style="font-family:Tahoma;font-size:9pt;width:100%">
                <th style="width:3%;"></th>
                <th style="width:10%;">Customer Type</th>
                <th style="width:20%;">Name</th>
                <th style="width:10%;">From Date</th>
                <th style="width:10%;">TO Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr role="row" style="font-family:Tahoma;font-size:9pt;">
                        <td><center><input type="checkbox" class="checkbox" id="@item.DocumentNo" style="height:20px;width:20px;" /></center></td>
                        <td>@item.CustomerType</td>
                        <td>@item.CustomerName</td>
                        <td>@item.FromDate.ToShortDateString()</td>
                        <td>@item.TODate.ToShortDateString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

