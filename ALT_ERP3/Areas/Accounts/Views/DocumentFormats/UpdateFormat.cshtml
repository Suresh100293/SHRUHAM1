@model ALT_ERP3.Areas.Accounts.Models.DocFormatVM
@using Common;

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><b>Print Parameters</b></h4>
        </div>
        <div class="modal-body">
            <div class="grid" id="ProductAddDiv" style="max-height:350px;min-height:350px; width:100%; overflow: scroll;">
                <div class="form-group">
                    <div class="col-sm-2 control-label">Format Code:</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.FormatCode, new { @class = "form-control", @id = "UpdateFormatCode", @Name = "UpdateFormatCode" })
                    </div>
                    <div class="col-sm-2 control-label">Stored Proc:</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(x => x.StoredProc, new { @class = "form-control", @id = "UpdateStoredProc", @Name = "UpdateStoredProc", @style = "width:100%" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">Send Email?:</div>
                    <div class="col-sm-4">
                        @Html.CheckBoxFor(x => x.SendEmail, new { @id = "UpdateSendEmail", @Name = "UpdateSendEmail", @style = "width:18px;height:18px;" })
                    </div>
                    <div class="col-sm-2 control-label">Output Device:</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(x => x.OutputDevice, new { @class = "form-control", @id = "UpdateOutputDevice", @Name = "UpdateOutputDevice", @style = "width:100%", @maxlength = 10 })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">Item Attachments?:</div>
                    <div class="col-sm-4">
                        @Html.CheckBoxFor(x => x.ItemAttach, new { @id = "UpdateItemAttach", @Name = "UpdateItemAttach", @style = "width:18px;height:18px;" })
                    </div>
                    <div class="col-sm-2 control-label">Document Handle:</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(x => x.DocHandle, new { @class = "form-control", @id = "UpdateDocHandle", @Name = "UpdateDocHandle", @style = "width:100%;", @maxlength = 1 })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">Doc. Attachment?:</div>
                    <div class="col-sm-4">
                        @Html.CheckBoxFor(x => x.AttachDocs, new { @id = "UpdateAttachDocs", @Name = "UpdateAttachDocs", @style = "width:18px;height:18px;" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">Email Template:</div>
                    <div class="col-sm-9">
                        @Html.TextAreaFor(x => x.EmailTemplate, new { @class = "form-control", @id = "UpEmailTemplate", @Name = "UpEmailTemplate", @style = "width:100%;height:150px;" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;">
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="btnUpdate">Save</button>
            <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnUpdate").click(function (event) {
            event.preventDefault();
            var ModelData = {};
            ModelData["FormatCode"] = $('#UpdateFormatCode').val();
            ModelData["StoredProc"] = $('#UpdateStoredProc').val();
            ModelData["SendEmail"] = $('#UpdateSendEmail').is(':checked');
            ModelData["OutputDevice"] = $('#UpdateOutputDevice').val();
            ModelData["ItemAttach"] = $('#UpdateItemAttach').is(':checked');
            ModelData["DocHandle"] = $('#UpdateDocHandle').val();
            ModelData["AttachDocs"] = $('#UpdateAttachDocs').is(':checked');
            ModelData["EmailTemplate"] = $('#UpEmailTemplate').val();
            ModelData["Type"] = $('#UpdateType').val();
            ModelData["tEmpID"] = $('#hdntEmpID').val();
            var DTO = { Model: ModelData };
            var url = '@Url.Action("AddToTableEdit")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    $('#errormessage').hide();
                    $('#AddonDiv').html(data.Html);
                },
                error: function () {
                    $('.spinner').hide();
                    alert("error occured while processing your request.");
                }
            });
        });
    });

</script>
@Html.HiddenFor(x => x.tEmpID, new { @Id = "hdntEmpID" })
