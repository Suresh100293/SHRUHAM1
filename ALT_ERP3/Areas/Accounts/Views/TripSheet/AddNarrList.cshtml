@model ALT_ERP3.Areas.Accounts.Models.TripSheetModel
@using Common

<table id="tbladdnarrlist"  class="zui-table" style="border-color:gray;width:100%;">
    <thead>
        <tr role="row" style="font-family:Tahoma;font-size:9pt;">
            <th style="width: 1%;vertical-align:inherit;">
                Sr No
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                Add Narr
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                Amount
            </th>

            <th style="width: 1%;vertical-align:inherit;">

            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.AddNarrList != null)
        {
            foreach (var item in @Model.AddNarrList)
            {
        <tr style="font-family:Tahoma;font-size:9pt;">
            <td style="vertical-align:inherit;">
                @item.tempid
            </td>
            <td style="vertical-align:inherit;">
                @item.AddNarr
            </td>
            <td style="vertical-align:inherit;">
                @item.AddAmt
            </td>

            <td style="vertical-align:inherit;">
                <button type="button" action="DeleteAddNarrList" class="btn btn-danger btn-sm" value="@item.tempid" title="Delete"><i class="fa fa-trash-o"></i></button>
            </td>
        </tr>
            }

        }


    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('button[action|="DeleteAddNarrList"]').click(function (event) {
            event.preventDefault(event);
            var myTableArray1 = [];
            $('#tbladdnarrlist tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets2 = { tempid: tds.eq(0).text(), AddNarr: tds.eq(1).text(), AddAmt: tds.eq(2).text() }
                myTableArray1.push(myDets2);
            })
            var ModelData = {};
            ModelData["tempid"] = $(this).val();
            ModelData["AddNarrList"] = myTableArray1;
            var DTO = { Model: ModelData };
            var url = '@Url.Action("DeleteAddNarrList")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    $('#ErrorMessage').hide();
                    $('#divAddNarrList').html(data.Html);

                },
                error: function () {
                    alert("Error occured while processing your request.");
                }
            });
        });
    })
</script>