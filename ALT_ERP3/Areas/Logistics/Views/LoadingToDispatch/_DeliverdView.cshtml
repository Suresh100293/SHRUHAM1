<script type="text/javascript">
    $(document).ready(function () {

        var table = $('#UnloadDelGridexample').dataTable({
            "iDisplayLength": -1
        });

        $(".deleteDelbtn").click(function () {
            debugger;
            var Row = $(this).closest('tr');
            var myTableArray = [];
            var myDets = {
                DelTableyKey: Row.find('td:eq(0)').text(),
                DeliveryNo: Row.find('td:eq(2)').text(),
                DelDate: Row.find('td:eq(3)').text(),
                DeliveredQty: Row.find('td:eq(4)').text(),
                ShortQty: Row.find('td:eq(5)').text(),
                DelVehicleNo: Row.find('td:eq(6)').text(),
                DelStatus: Row.find('td:eq(7)').text(),
                DelNarr: Row.find('td:eq(8)').text(),
                Lrno: Row.find('td:eq(9)').text(),
            }
            myTableArray.push(myDets);

            var ModelData = {};
            ModelData["Document"] = $('#Document').val();
            ModelData["vehicleDeliveries"] = myTableArray;
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("DeleteDelivery")';
            var result = confirm("Are you sure you want to delete?");
            if (result)
            {
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(DTO),
                    cache: false,
                    url: url,
                    contentType: "application/json;charset=utf-8",
                    beforeSend: function () {
                    },
                    success: function (data) {
                        $("#ErrorMessage").hide();
                        $('.spinner').hide();
                        if (data.Status == "Success") {
                            DeliveryPartialView();
                        }
                        else {
                            alert(data.Message);
                        }
                    },
                    error: function (er) {
                        alert("Error occured while processing your request.");
                    }
                });
            }
        });
    });
</script>

@if (Model.vehicleDeliveries != null)
{
    <div class="container-fluid" style="margin-top:8px;padding-left:0px;">
        <table id="UnloadDelGridexample" class="table-bordered example" style="width:100%!important;">
            <thead>
                <tr>
                    <th class="hidden">DelKey</th>
                    <th>Delete</th>
                    <th>Delivery No</th>
                    <th>Delivery Date</th>
                    <th>Delivery Qty</th>
