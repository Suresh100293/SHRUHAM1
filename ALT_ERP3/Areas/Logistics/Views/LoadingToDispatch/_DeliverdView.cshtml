                </tr>
            </thead>
            <tbody style="max-height:400px;min-height:400px;width:100%; overflow-x:hidden;overflow-y:auto">
                @foreach (var item in Model.vehicleDeliveries)
                {
                    <tr id="@item.DelTableyKey">
                        <td class="hidden">@item.DelTableyKey</td>
                        <td>
                            <center>
                                <button class="btn btn-danger deleteDelbtn" style="font-size: 13px;padding:3px 13px;" id="@("btnDelDelete"+item.DeliveryNo)"><i class="glyphicon glyphicon-trash" style="font-size: 1.2em;"></i></button>
                            </center>
                        </td>
                        <td>@item.DeliveryNo</td>
                        <td>@item.DelDate</td>
                        <td>@item.DeliveredQty</td>
                        <td>@item.ShortQty</td>
                        <td>@item.DelVehicleNo</td>
