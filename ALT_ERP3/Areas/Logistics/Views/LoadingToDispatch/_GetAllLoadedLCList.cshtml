@model ALT_ERP3.Areas.Logistics.Models.LoadingDispachVM
@{
    Layout = null;
}
<style>


    .ClickrowColor {
        background-color: #71a1af !important;
        color: black;
    }

    input[type=text] {
        color: black !important;
    }

    .span6 {
        display: none !important;
    }

    .empty {
        visibility: hidden;
    }

    .Unauthorise {
        background-color: #5079d4 !important;
        color: white;
    }

    .rejected {
        background-color: #bf6860 !important;
        color: white;
    }
</style>
<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var TotalWeight = 0, TotalQty = 0;

        //$('#demo').DataTable();
      var table=  $('demmo').dataTable({
            "iDisplayLength": -1
        });


        $(".currentModal").click(function () {
            $("#GetLoadLRLIsst").modal("hide");
        });

        $('.gellrlistOfLc').click(function (event) {
            event.preventDefault();

            var url = '@Url.Action("ShowLrAlreadyLoaded")';

            var DTO = { Lcno: this.id };
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {

                    var LoadDownLoadFiles = $("#ShowLoadingLRLisst");
                    $("#ErrorMessage").hide();
                    $('.spinner').hide();
                    $('#GetLoadLRLIsst').modal('show');
                    LoadDownLoadFiles.html('');
                    LoadDownLoadFiles.html(data.Html);
                },
            });
        });

    });
</script>

@if (Model.LClist != null)
{
    <div class="container-fluid">
        <center>
            <table class="Ordertable table-bordered table-bordered example table-responsive-md" id="demmo" style="width:-webkit-fill-available;">
                <thead id="Head">
                    <tr>
                        <th class="Ordertable-cell">Branch</th>
                        <th class="Ordertable-cell">LrList</th>
                        <th class="Ordertable-cell">Load Date</th>
                        <th class="Ordertable-cell">Load Time</th>
                        <th class="Ordertable-cell">LcNo</th>
                        <th class="Ordertable-cell">Date</th>
                        <th class="Ordertable-cell">Time</th>
                        <th class="Ordertable-cell">Source</th>
                        <th class="Ordertable-cell">Destination</th>
                        <th class="Ordertable-cell">Quantity</th>
                        <th class="Ordertable-cell">Weight</th>
                        <th class="Ordertable-cell">No Of LR</th>
                    </tr>
                </thead>
                <tbody id="LcCombo" style="max-height:300px;min-height:300px;width:100%;overflow:scroll;">
                    @foreach (var item in Model.LClist)
                    {
                    <tr class="Ordertable-row">
                        <td class="Ordertable-cell">@item.Branch</td>
                        <td class="Ordertable-cell "><center><button class="btn btn-info gellrlistOfLc" style="font-size: 13px;padding:3px 12px;" id="@item.Tablekey"><i class="glyphicon glyphicon-eye-open"></i></button></center></td>
                        <td class="Ordertable-cell">@item.LoadDate</td>
                        <td class="Ordertable-cell">@item.LoadTime</td>
                        <td class="Ordertable-cell LCValue">@item.lcno</td>
                        <td class="Ordertable-cell">@item.Date</td>
                        <td class="Ordertable-cell">@item.Time</td>
                        <td class="Ordertable-cell">@item.From_Name</td>
                        <td class="Ordertable-cell">@item.To_Name</td>
                        <td class="Ordertable-cell LoadQty">@item.TotalQty</td>
                        <td class="Ordertable-cell Weight">@item.Weight.ToString("0.00")</td>
                        <td class="Ordertable-cell ">@item.LrListOfLC.Count</td>
                    </tr>

                    }
                </tbody>

            </table>
        </center>
    </div>
    <br />
}



<!--Show Lr OF LC Modal -->

<div class="modal fade" id="GetLoadLRLIsst">
    <div class="modal-dialog modal-lg modal-sm modal-xl" role="document" style="width: auto;margin: auto;margin-top: 3%;">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="form-group">
                    <div class="col-md-2"><h4 class="modal-title"><b>Lorry Receipts</b></h4></div>

                    <div class="col-md-4" style="float:right;">

                    </div>

                </div>
            </div>
            <div class="modal-body" style="padding: 0px !important;height:auto;">
                <div class="grid" id="FormatTable">
                    <div class="form-group col-sm-12" id="ShowLoadingLRLisst" style="overflow: auto;width: 100%;display: block;">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary currentModal">Close</button>
            </div>
        </div>
    </div>
</div>



