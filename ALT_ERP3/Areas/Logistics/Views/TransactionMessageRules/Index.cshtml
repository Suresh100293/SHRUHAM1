@model ALT_ERP3.Areas.Logistics.Models.MessageRulesVM
@using Common;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<script>
    $(document).ready(function ()
    {
        GetMyFavorites('@Model.ViewDataId');
        document.getElementById("headerdiv").style.backgroundColor = '@Session["headerdivcolor"]';
        document.getElementById("headercaption").style.color = '@Session["headercaptioncolor"]';
        document.getElementById("fixedbottom").style.backgroundColor = '@Session["bottomcolor"]';
        var mheight = $(window).innerHeight() - 175;
        $('#TransactionTypesdiv').height(mheight-30);
        $('#dynamic-table').height(mheight - 200);
        $('#MessageRulesdiv').height(mheight - 80);
        loadSearchList();
        //loadBranch();

          

        $('#Submit').click(function (event) {
            event.preventDefault();
            var Error = false;
            var myTableArray = [];
            $('#tabledatapick2 tbody tr').each(function ()
            {
                var tds = $(this).find('td');

                if (tds.find("input[id='MessageRules_SendSMS']").is(':checked'))
                {
                    if (tds.find("#PSMSTemplate").val() == "" || tds.find("#PSMSTemplate").val() == null)
                    {
                        Error = true;
                        alert("Please Select SMSTemplate For " + tds.find("input[id='MessageRules_Code']").val());
                        return;
                    }
                    if (tds.find("#SMSBranchL").val() == "" || tds.find("#SMSBranchL").val() == null)
                    {
                        Error = true;
                        alert("Please Select Branch In SMS Details For " + tds.find("input[id='MessageRules_Code']").val());
                        return;
                    }
                }
                if (tds.find("input[id='EmailMessageRules_xAdd']").is(':checked') || tds.find("input[id='EmailMessageRules_xEdit']").is(':checked') || tds.find("input[id='EmailMessageRules_xDelete']").is(':checked') || tds.find("input[id='EmailMessageRules_xPrint']").is(':checked') || tds.find("input[id='EmailMessageRules_xBackDated']").is(':checked'))
                {
                    if (tds.find("#EmailBranchL").val() == "" || tds.find("#EmailBranchL").val() == null)
                    {
                        Error = true;
                        alert("Please Select Branch In Email Details For " + tds.find("input[id='MessageRules_Code']").val());
                        return;
                    }
                }
                if (tds.find("input[id='MSGMessageRules_xAdd']").is(':checked') || tds.find("input[id='MSGMessageRules_xEdit']").is(':checked') || tds.find("input[id='MSGMessageRules_xDelete']").is(':checked') || tds.find("input[id='MSGMessageRules_xPrint']").is(':checked') || tds.find("input[id='MSGMessageRules_xBackDated']").is(':checked'))
                {
                    if (tds.find("#MSGBranchL").val() == "" || tds.find("#MSGBranchL").val() == null)
                    {
                        Error = true;
                        alert("Please Select Branch In Msg Details For " + tds.find("input[id='MessageRules_Code']").val());
                        return;
                    }
                }


                var SmsBranch = "",MsgBranch="",EmailBranch="";
                var selected = [];
                selected = tds.find(".SMSBranchL").val();
                if (selected != null)
                {
                    for (var i = 0; i < selected.length; i++)
                    {
                        SmsBranch += selected[i] + ",";
                    }
                    SmsBranch = SmsBranch.substr(0, SmsBranch.length - 1);
                }

                selected = tds.find(".EmailBranchL").val();
                if (tds.find("input[id='EmailMessageRules_xAdd']").is(':checked') || tds.find("input[id='EmailMessageRules_xEdit']").is(':checked') || tds.find("input[id='EmailMessageRules_xDelete']").is(':checked') || tds.find("input[id='EmailMessageRules_xPrint']").is(':checked') || tds.find("input[id='EmailMessageRules_xBackDated']").is(':checked')) {
                    if (selected != null) {
                        for (var i = 0; i < selected.length; i++) {
                            EmailBranch += selected[i] + ",";
                        }
                        EmailBranch = EmailBranch.substr(0, EmailBranch.length - 1);
                    }
                }
                
                selected = tds.find(".MSGBranchL").val();
                if (tds.find("input[id='MSGMessageRules_xAdd']").is(':checked') || tds.find("input[id='MSGMessageRules_xEdit']").is(':checked') || tds.find("input[id='MSGMessageRules_xDelete']").is(':checked') || tds.find("input[id='MSGMessageRules_xPrint']").is(':checked') || tds.find("input[id='MSGMessageRules_xBackDated']").is(':checked')) {
                    if (selected != null) {
                        for (var i = 0; i < selected.length; i++) {
                            MsgBranch += selected[i] + ",";
                        }
                        MsgBranch = MsgBranch.substr(0, MsgBranch.length - 1);
                    }
                }
                

                var myDets =
                {
                    MessageRules_Code: tds.find("input[id='MessageRules_Code']").val(),

                    SMSBranchL: SmsBranch,
                    MessageRules_SendSMS:tds.find("input[id='MessageRules_SendSMS']").is(':checked'),
                    SMSTemplate: tds.find("#PSMSTemplate").val(),

                    EmailBranchL: EmailBranch,
                    EmailMessageRules_xAdd:tds.find("input[id='EmailMessageRules_xAdd']").is(':checked'),
                    EmailMessageRules_xEdit:tds.find("input[id='EmailMessageRules_xEdit']").is(':checked'),
                    EmailMessageRules_xDelete:tds.find("input[id='EmailMessageRules_xDelete']").is(':checked'),
                    EmailMessageRules_xPrint:tds.find("input[id='EmailMessageRules_xPrint']").is(':checked'),
                    EmailMessageRules_xBackDated:tds.find("input[id='EmailMessageRules_xBackDated']").is(':checked'),

                    MSGBranchL: MsgBranch,
                    MSGMessageRules_xAdd:tds.find("input[id='MSGMessageRules_xAdd']").is(':checked'),
                    MSGMessageRules_xEdit:tds.find("input[id='MSGMessageRules_xEdit']").is(':checked'),
                    MSGMessageRules_xDelete:tds.find("input[id='MSGMessageRules_xDelete']").is(':checked'),
                    MSGMessageRules_xPrint:tds.find("input[id='MSGMessageRules_xPrint']").is(':checked'),
                    MSGMessageRules_xBackDated:tds.find("input[id='MSGMessageRules_xBackDated']").is(':checked'),

                    MessageRules_LimitAmount: tds.find("input[id='MessageRules_LimitAmount']").val(),
                }
                myTableArray.push(myDets);
            });
            if (Error == false)
            {
                var ModelData = {};
                ModelData["mRightList"] = myTableArray;
                ModelData["MessageRules_Type"] = $("#MessageRules_Type").val();
                ModelData["Mode"] = '@Model.Mode';
                var DTO = { mModel: ModelData };
                var url = '@Url.Action("SaveData")';
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(DTO),
                    cache: false,
                    url: url,
                    contentType: "application/json;charset=utf-8",
                    beforesend: function () {
                        $('.spinner').show();
                    },
                    success: function (data)
                    {
                        if (data.Status == "Success") {
                            alert("Save Sucessfully.........!");
                        }
                        $('.spinner').hide();
                    },
                    error: function () {
                        $('.spinner').hide();
                        alert("error occured while processing your request.");
                    }
                });
            }
            
        });
    });

    function myFunction() {
        var ModelData = {};
        ModelData["SearchContent"] = $('#myInput').val();
        //ModelData["SearchBy"] = $('#SearchBy').val();
        var DTO = { mModel: ModelData };
        var url = '@Url.Action("GetLeftGrid")';
        $.ajax({
            type: "POST",
            dataType: "json",
            data: JSON.stringify(DTO),
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforesend: function () {
                $('.spinner').show();
            },
            success: function (data) {
                $('.spinner').hide();
                $('#TransactionTypesdiv').html(data.Html);
            },
            error: function () {
                $('.spinner').hide();
                alert("error occured while processing your request.");
            }
        });
    }

    function loadSearchList() {
        var url = '@Url.Action("GetSearchList")'
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#SearchBy").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });

                $('.spinner').hide();
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }
    
</script>

<header class="header fixed-top" id="headerdiv" style="position:fixed;background-color:lightgray;padding:6px;width:100%;margin-top:0%;">
    <div class="fixhead">
        <b class="CodeSt" id="headercaption">  User Transaction Messaging Rules</b>
        <span class="tools pull-right">
            <a href="~/DashBoard/ControlPanel" class="btn btn-danger" style="color:white;font-weight:bolder;font-size:13px;padding:3px 10px;" id="Cancel2">X</a>
        </span>
        <button class="fa fa-heart pull-right" type="submit" onclick="AddToFavorite('@Model.ViewDataId','@Model.OptionCode')" title="Add/Remove from My Favorites" id="MyFavorites" style="color: rgb(145,142,142); background-color: transparent; border: none; font-size: 20px; height: 27px; margin-right: 5px;margin-top:5px;" name="MyFavorites"></button>

    </div>
</header>

<section class="panel">
    <div class="panel-body" style="padding-left:0px;">
        <form class="form-horizontal" id="MessageRulesFrm" role="form" style="margin-top:1%;margin-left:0px">
            <div id="ErrorMessage" name="ErrorMessage" class="alert alert-danger" style="display: none"></div>
            <br />
            <div class="panel-body" style="min-height:375px;max-height:375px;padding-top:0px;">
                <div class="col-sm-4" style="border-right:solid;overflow:scroll;">
                    <div class="form-group">
                        <div class="col-sm-3">
                            <input type="text" style="height:28px;font-weight:bolder;" id="myInput" onkeyup="myFunction()" placeholder="Search..">
                        </div>
                    </div>
                    <b class="CodeSt" style="font-size:15px;font-weight:bolder;">
                        Transaction Types:
                    </b>
                    <div id="TransactionTypesdiv" style="min-height:400px;overflow:scroll">
                        @Html.Partial("PartialTypeView")
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            <b class="CodeSt" style="font-size:15px;font-weight:bolder;">
                                Message Rules:
                            </b>
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.TextBoxFor(x => x.MessageRules_Type, new { @id = "MessageRules_Type", @Name = "MessageRules_Type", @style = "font-size:14px;font-weight:bolder;", @class = "form-control", @disabled = "disabled" })
                        </div>
                    </div>
                    <div id="MessageRulesdiv" style="">
                        @Html.Partial("TransactionMessageRulesPartial")
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<footer class="footer-section" id="fixedbottom" style="height:33px;position:fixed;background-color:#4B4A4A;padding:3px;color:white;">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4" style="text-align:center;margin-top:4px;color:white;font-family:Tahoma;">
            ALT AIR-3.0, Shruham Software
        </div>
        <div class="col-sm-4" style="padding-right:15px;">
            <div class="pull-right">
                <button class="btn btn-success" style="font-size:13px;padding:3px 12px;" id="Submit">Save</button>
                <a href="~/DashBoard/ControlPanel" class="btn btn-danger" style="font-size: 13px;padding:3px 12px;" id="Cancel">Cancel</a>
            </div>
        </div>
    </div>
</footer>


