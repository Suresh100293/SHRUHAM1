                                    <td style="width:40%;">@Html.DisplayFor(m => Model.PrintGridList[i].Format)</td>
                                    <td style="width:40%;">@Html.DisplayFor(m => Model.PrintGridList[i].StoreProcedure)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <input id="PrintDocument" hidden="hidden" />
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;">
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="btnMultiPrint">Print</button>
