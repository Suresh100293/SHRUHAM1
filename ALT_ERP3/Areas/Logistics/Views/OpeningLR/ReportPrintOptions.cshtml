<script>
    $(document).ready(function () {
        $(".MultiPrintClass").click(function () {
            debugger;
            var tds = $(this).closest("tr").find("td");
            var Format = tds.eq(2).text();
            tds.find('input[type="checkbox"]').prop('checked', true);
            var StoreProcedure = tds.eq(3).text();
            window.open("/Logistics/LorryReceipt/PrintSingleDocumentCrystal?StoreProcedure=" + StoreProcedure + '&Format=' + Format + '&Document=' + $('#Document').val() + '&Branch=' + $('#hdnBranch').val(), "_blank");
            if (PrintLR !="OnlyPrint") {
                    if ('@Model.Mode'=="Add") {
                        window.location.href = "/Logistics/LorryReceipt/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType&Mode=Add";
                    } else {
                        window.location.href = "/Logistics/MasterGridd/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                }
            }
        });
        $('#btnMultiPrint').click(function (event) {
            event.preventDefault();
            var myFormatArray = []
            $('#printgrid tr:not(:first)').each(function () {
                var tds = $(this).find('td');
                if (tds.find('input[type="checkbox"]').is(':checked')) {
                    Format = tds.eq(2).text();
                    myFormatArray.push(Format);
                }
            })
            window.open("/Logistics/LorryReceipt/SendMultiReport?Format=" + myFormatArray.toString() + "&Type=" + $('#Type').val() + "&Document=" + $('#Document').val() + '&Branch=' + $('#hdnBranch').val(), "_blank");
            if (PrintLR !="OnlyPrint") {
                if ('@Model.Mode'=="Add") {
                    window.location.href = "/Logistics/LorryReceipt/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType&Mode=Add";
                } else {
                    window.location.href = "/Logistics/MasterGridd/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                }
            }
        });


    });
</script>
<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><b>Print</b></h4>
        </div>
        <div class="modal-body">
            <div class="grid" id="PrintGridTable" style="max-height:350px;min-height:350px; width:100%; overflow: scroll;">
                <table id="printgrid" class="zui-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Format</th>
                            <th>StoreProcedure</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PrintGridList != null)
                        {
                            for (int i = 0; i < Model.PrintGridList.Count; i++)
                            {
                                <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                    <td style="width:10%;"><button type="button" class="MultiPrintClass"><img src="/Content/Images/Print.ico" /></button></td>
