@model ALT_ERP3.Areas.Logistics.Models.LoadingDispachVM
@{
    Layout = null;
}
<style>
    .Tab {
        display: table;
        font-family: math;
        color: black;
    }

    .rowColor {
        background-color: #c8dcdc !important;
    }

    .Tab-row {
        display: table-row;
    }

    .Tab-cell {
        display: table-cell;
        border: 1px solid black;
        padding: 5px;
        text-align: center;
        /*border-bottom: 1px solid;*/
    }
</style>

<table class="Tab" id="DestinationTable">
    <thead>
        <tr class="Tab-row RowHead">
            <th class="Tab-cell" style="text-align: center;font-weight: bold;color: #ad225c;">Via Route Serial No</th>
            <th class="Tab-cell" style="text-align: center;font-weight: bold;color: #ad225c;">Route Name</th>
        </tr>
    </thead>
    <tbody>
        @{var i = 1;
            if (Model.AllDest != null)
            {
                foreach (var item in Model.AllDest)
                {
                    <tr class="Tab-row RowData">
                        <td class="Tab-cell" style="font-weight: bold;">@i</td>
                        <td class="Tab-cell FromCode" id="@item.From" style="font-weight: bold;">@item.Consigner</td>
                    </tr>
                    ++i;
                }
            }
        }
    </tbody>
</table>


