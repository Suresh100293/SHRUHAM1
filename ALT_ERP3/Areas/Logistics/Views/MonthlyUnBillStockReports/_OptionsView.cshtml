<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Content/bootstrap-multiselect.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#txtReportName").val("");
        if ('@Model.ReportName' != "") {
            $("#txtReportName").val('@Model.ReportName');
        }
        debugger;
        $('#Branch').val('');
        var CommonValue = "";
        if ('@Model.Branch' != "") {
            $.each('@Model.Branch'.split(','), function (idx, val) {
                $(".BranchL option[value='" + val + "']").attr("selected", true);
                CommonValue += "'" + val + "',";
            });
            CommonValue = CommonValue.toString().substring(0, CommonValue.length - 1);
            $('#Branch').val(CommonValue);
        }

        if ('@Model.NoOfLR'=="True" || '@Model.NoOfLR'=="true") {
            $(".NoOfLR").prop("checked", true);
        }
        if ('@Model.TotalAmt'=="True" || '@Model.TotalAmt'=="true") {
            $(".TotalAmt").prop("checked", true);
        }
        if ('@Model.TotalQty'=="True" || '@Model.TotalQty'=="true") {
            $(".TotalQty").prop("checked", true);
        }
        if ('@Model.TotalWT'=="True" || '@Model.TotalWT'=="true") {
            $(".TotalWT").prop("checked", true);
        }
        @*$("#Customer").val("");
        if ('@Model.Customer' != "")
        {
            $.each('@Model.Customer'.split(','), function (idx, val) {
                $(".CustomerL option[value='" + val + "']").attr("selected", true);
                CommonValue += "'" + val + "',";
            });
            CommonValue = CommonValue.toString().substring(0, CommonValue.length - 1);
            $('#Customer').val(CommonValue);
        }*@
        $("#StockType").val("");
        if ('@Model.StockType' != "")
        {
            if ('@Model.StockType' == "LR")
            {
                $("#STKTypeAll").prop("checked", false);
                $("#STKTypeLR").prop("checked", true);
                $("#STKTypeTRN").prop("checked", false);
                $("#StockType").val('@Model.StockType');
            }
            else if ('@Model.StockType' == "TRN")
            {
                $("#STKTypeAll").prop("checked", false);
                $("#STKTypeLR").prop("checked", false);
                $("#STKTypeTRN").prop("checked", true);
                $("#StockType").val('@Model.StockType');
            }
            else
            {
                $("#STKTypeAll").prop("checked", true);
                $("#STKTypeLR").prop("checked", false);
                $("#STKTypeTRN").prop("checked", false);
            }
        }
        else {
            $("#STKTypeAll").prop("checked", true);
            $("#STKTypeLR").prop("checked", false);
            $("#STKTypeTRN").prop("checked", false);
        }
        $("input[name$='STKType']").change(function () {
            var GetChrgesName = this.value;
            $('#StockType').val(this.value);
        });
        $('.BranchL,.CustomerL').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            enableCaseInsensitiveFiltering: true,
            filterPlaceholder: 'Search for something...',
            buttonWidth: '235',
            numberDisplayed: 1,
            nonSelectedText: 'Select Item',
        });
        $('#btnopnFormat').click(function(event){
            event.preventDefault();
            var ModelData = {};
            ModelData["ViewDataId"] = $("#FormatCode").val();
            var DTO = { Model: ModelData };
            var url = '@Url.Action("GetReportFormat")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $("#ErrorMessage").hide();
                    $('.spinner').hide();
                    $('#updTfatsearch').modal('show');
                    $('#updTfatsearchDiv').html(data.Html);
                },
                error: function () {
                    alert("Error occured while processing your request.");
                }
            });
        });
        $('#SubmitSaveReport').click(function (event) {
            event.preventDefault();
            $('#SaveReportName').modal('show');
        });
        $(".NoOfLR").change(function () {
            if (this.checked) {
                NoOfLRCoumnsList(true);
            } else {
                NoOfLRCoumnsList(false);
            }
        });
        $(".TotalAmt").change(function () {
            if (this.checked) {
                TotAmtCoumnsList(true);
            } else {
                TotAmtCoumnsList(false);
            }
        });
        $(".TotalQty").change(function () {
            if (this.checked) {
                TotQtyCoumnsList(true);
            } else {
                TotQtyCoumnsList(false);
            }
        });
        $(".TotalWT").change(function () {
            if (this.checked) {
                TotWTCoumnsList(true);
            } else {
                TotWTCoumnsList(false);
            }
        });

        $(".BranchL").change(function () {

            $('#Branch').val('');
            var selected = "";
            $(".BranchL :selected").each(function () {
                selected += ("'" + $(this).val() + "',");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#Branch').val(selected)
            return false;
        });

        $(".CustomerL").change(function () {
            $('#Customer').val('');
            var selected = "";
            $(".CustomerL :selected").each(function () {
                selected += ("'" + $(this).val() + "',");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#Customer').val(selected);
            if (selected=="") {
                AccountCoumnsList(false);
            } else {
                AccountCoumnsList(true);
            }
            return false;
        });
    });

</script>


