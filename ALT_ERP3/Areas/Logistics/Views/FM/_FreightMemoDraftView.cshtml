                    location.href = "/Logistics/FM/Index?Document=" + encodeURIComponent(cellVal) + "&TableName=" + '@ViewBag.Table' + "&MainType=D&Mode=Select&Header=FMMaster&ViewDataId=FMMaster&Controller2=FM&Module=Transactions&optiontype=L&optioncode=FM";

                },

                beforeRequest: function () {
                    responsive_jqgridData($(".jqGrid"));
                },
