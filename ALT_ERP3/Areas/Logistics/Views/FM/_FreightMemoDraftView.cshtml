                        var del = "<button id='btnDraftDelete" + rowId + "' type='button' value='" + rowId + "' Class='delete' tooltip='Delete' , title='Delete' />";
                        var view = "<button id='btnDraftView" + rowId + "' type='button' value='" + rowId + "' Class='view' tooltip='View' , title='View' />";
                        var print = "<button id='btnDraftPrint" + rowId + "' type='button' value='" + rowId + "' Class='print' tooltip='Print' , title='Print' />";
