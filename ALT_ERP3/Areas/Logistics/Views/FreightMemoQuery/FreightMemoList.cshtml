@model ALT_ERP3.Areas.Logistics.Models.FreightMemoQueryVM
@using Common

<script type="text/javascript">
    $(document).ready(function () {
        $('#FreightMemotabledata > tbody  > tr').dblclick(function () {
            var Row = $(this).closest('tr');
            GetConsignmentDetails(Row.find('td:eq(0)').text(), Row.find('td:eq(1)').text());
        });
    });
</script>
<div class="modal-dialog" style="width:unset;">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" style="color: black;font-weight: bold;">Multi Document</h4>
        </div>
        <div class="modal-body" style="padding:unset;min-height:450px;max-height:450px;overflow:auto;color: black;">
            <div class="panel-body">
                <table id="FreightMemotabledata" class="zui-tableww" style="width:100%;text-align: center;">
                    <thead style="background-color:#3ccf9d;">
                        <tr>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Opening</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Book Branch</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Broker</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Freight</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Advance</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Balance</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Book Date</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Vehicle Category</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">From</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">TO</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Driver</td>
                            <td style="border-right: solid 1px dimgray;border-bottom: solid 1px dimgray;">Vehicle NO</td>
                        </tr>
                    </thead>
                    <tbody style="background-color: #bfa27d !important;">
                        @if (Model.ValueList != null)
                        {
                            foreach (var item in @Model.ValueList.ToList())
                            {
                                var Opeing = item.FindOpening == true ? "Yes" : "No";
                                <tr style="font-family:Tahoma;font-size:9pt;">
                                    <td class="hidden" style="width:1%">@item.FreightMemoKey</td>
                                    <td class="hidden" style="width:1%">@item.FindOpening</td>
                                    <td style="vertical-align:inherit;width:1%;">@Opeing</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.FMBranch</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.Broker</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.Freight</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.Advance</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.Balance</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.FMDate.ToShortDateString()</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.VehicleType</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.FFrom</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.FTo</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.Driver</td>
                                    <td style="vertical-align:inherit;width:1%;">@item.VehicleNo</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc">
            <input type="submit" value="Close" class="btn btn-danger" data-dismiss="modal" />
        </div>
    </div>
</div>

