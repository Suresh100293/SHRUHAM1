<script>
    $(document).ready(function () {
        LoadPeriod()
        $('#btnChangePeriod').click(function (event) {
            event.preventDefault();
            if ($("#perd").val() == '') {
                alert('Period is Required');
                return;
            }
            var url = '@Url.Action("ChangePeriod")?perd='+ $("#perd").val();
            $.ajax({
                type: "POST",
                dataType: "json",
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    debugger;
                    $("#ErrorMessage").hide();
                    $('.spinner').hide();

                    if (data.Status == "Success")
                    {
                        $('#changeperiod').modal('hide');
                        location.reload();
                    } else {
                        alert(data.Message);
                    }
                },
                error: function () {
                    alert("Error occured while processing your request.");
                }
            });
        });
    })

    function LoadPeriod() {
        $("#perd").empty();
        //event.preventDefault();
        var url = '@Url.Action("GetPerdListSTD")';
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#perd").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }
</script>

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:7px;">
            <h4 class="modal-title"><b>Change Accounting Period</b></h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Period:</label>
                    <div class="col-sm-6">
                        <select class="form-control" id="perd">
                            <option value="0">Select</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;padding-right: 5px;padding-left: 5px;">
            <button type="button" class="btn btn-success" id="btnChangePeriod"><i class="fa fa-save"></i>&nbsp;&nbsp;Change</button>
            <button data-dismiss="modal" class="btn btn-danger" type="button"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Close</button>
        </div>
    </div>
</div>