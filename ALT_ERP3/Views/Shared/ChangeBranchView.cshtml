<script>
    $(document).ready(function () {
        LoadChangeBranch();


        $('#btnChangeBranch').click(function (event) {
            event.preventDefault();
            if ($("#BranchCode").val() == '') {
                alert('Branch is Required');
                return;
            }

            var url = '@Url.Action("ChangeBranch")?BranchCode=' + $("#BranchCode").val();
            $.ajax({
                type: "POST",
                dataType: "json",
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $("#ErrorMessage").hide();
                    $('.spinner').hide();
                    $('#changebranch').modal('hide');

                    var ModuleName = '@Session["ModuleName"].ToString()';
                    if (ModuleName == "SetUP")
                    {
                        window.location.href = "/DashBoard/SetUP";
                    }
                    else if (ModuleName == "Master")
                    {
                        window.location.href = "/DashBoard/MasterDashBoard";
                    }
                    else if (ModuleName == "Transactions")
                    {
                        window.location.href = "/DashBoard/TransactionsDashBoard";
                    }
                    else if (ModuleName == "Reports")
                    {
                        window.location.href = "/DashBoard/ReportsDashBoard";
                    }
                    else if (ModuleName == "ControlPanel")
                    {
                        window.location.href = "/DashBoard/ControlPanel";
                    }
                    else {
                        location.reload();
                    }
                },
                error: function () {
                    alert("Error occured while processing your request.");
                }
            });
        });
    })

    function LoadChangeBranch() {
        $("#BranchCode").empty();
        //event.preventDefault();
        var url = '@Url.Action("GetBranchListSTD")?UserId=' + '@Session["UserId"]';
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {

                $.each(result, function (i, item) {
                    $("#BranchCode").append("<option value='" + item.Value + "'>" + "[" + item.Value + "] " + item.Text + "</option>");
                });
                $("#BranchCode").val('@Session["BranchCode"]').attr("selected", "selected");
                    $('.spinner').hide();
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }
</script>

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:7px;">
            <h4 class="modal-title"><b>Change Branch </b></h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Branch:</label>
                    <div class="col-sm-9">
                        <select class="form-control" id="BranchCode">
                            <option value="0">Select</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;padding-right: 5px;padding-left: 5px;">
            <button type="button" class="btn btn-success" id="btnChangeBranch"><i class="fa fa-save"></i>&nbsp;&nbsp;Change</button>
            <button data-dismiss="modal" class="btn btn-danger" type="button"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp;Close</button>
        </div>
    </div>
</div>