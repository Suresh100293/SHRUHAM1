@using ReportViewerForMvc;
@{
    ViewBag.Title = "Report Viewer SSRS";
}

<style>
    .content1 {
        padding: unset;
        margin-top: unset;
        margin-bottom: unset;
        margin-left: unset;
        margin-right: unset;
        min-height: unset;
    }

    iframe {
        /*for the report viewer*/
        border: none;
        padding: 0;
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>

<section class="content1">
    <div class="box box-default">
        <div class="box-body" style="padding:unset;margin-top:0%;">
            <div>
                @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
            </div>
        </div><!-- /.box-body -->
    </div>
</section>