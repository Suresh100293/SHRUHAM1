@model ALT_ERP3.Areas.Accounts.Models.TripSheetModel
@using Common

<table id="tbllcdetails" class="zui-table" style="border-color:gray;width:100%;">
    <thead>
        <tr role="row" style="font-family:Tahoma;font-size:9pt;">
            <th style="width: 1%;vertical-align:inherit;">
              SrNo
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                LC Date
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                LC No
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                From
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                To
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                Charges
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                Amount
            </th>
            <th style="width: 1%;vertical-align:inherit;">
                Descr
            </th>
            <th style="width: 1%;vertical-align:inherit;">

            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.LCDetailList != null)
        {
            foreach (var item in @Model.LCDetailList)
            {
        <tr style="font-family:Tahoma;font-size:9pt;">
            <td style="vertical-align:inherit;"> @item.tempid </td>
            <td style="vertical-align:inherit;">
                @item.LCDate
            </td>
            <td style="vertical-align:inherit;">
                @item.LCNo
            </td>
            <td style="vertical-align:inherit;" hidden="hidden">
                @item.FromLocation
            </td>
            <td style="vertical-align:inherit;" hidden="hidden">
                @item.ToLocation
            </td>
            <td style="vertical-align:inherit;">
                @item.FromName
            </td>
            <td style="vertical-align:inherit;">
                @item.ToName
            </td>
            <td style="vertical-align:inherit;" hidden="hidden">
                @item.ChargesAcc
            </td>
            <td style="vertical-align:inherit;">
                @item.ChargesAccName
            </td>
            <td style="vertical-align:inherit;">
                @item.Amt
            </td>
            <td style="vertical-align:inherit;">
                @item.Descr
            </td>
            <td style="vertical-align:inherit;">
                <button type="button" action="DeleteLCDetails" class="btn btn-danger btn-sm" value="@item.tempid" title="Delete"><i class="fa fa-trash-o"></i></button>
            </td>
        </tr>
            }

        }


    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('button[action|="DeleteLCDetails"]').click(function (event) {
            event.preventDefault(event);
            var myTableArray = [];
            $('#tbllcdetails tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets2 = { tempid: tds.eq(0).text(), LCDate: tds.eq(1).text(), LCNo: tds.eq(2).text(), FromLocation: tds.eq(3).text(), ToLocation: tds.eq(4).text(), FromName: tds.eq(5).text(), ToName: tds.eq(6).text(), ChargesAcc: tds.eq(7).text(), ChargesAccName: tds.eq(8).text(), Amt: tds.eq(9).text(), Descr: tds.eq(10).text()}
                myTableArray.push(myDets2);
            })
            var ModelData = {};
            ModelData["tempid"] = $(this).val();
            ModelData["LCDetailList"] = myTableArray;
            var DTO = { Model: ModelData };
            var url = '@Url.Action("DeleteLCDetails")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    $('#ErrorMessage').hide();
                    $('#lcdetailsdiv').html(data.Html);
                   
                },
                error: function () {
                    alert("Error occured while processing your request.");
                }
            });
        });
    })
</script>