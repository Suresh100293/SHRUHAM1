@model LRInvoiceVM
<table class="table-bordered" style="width:5%;margin-bottom:0px;">
    <thead>
        <tr>
            @for (int i = 0; i < Model.IntegerValue; i++)
            {
                if (Model.SelectedIntegerValue == i)
                {
                    <th style="width:10%;padding: 1px 5px 1px 5px;">
                        <button type="button" class="btn btn-info" onclick="GetAddressByAltAddress(@i);" action="GetSavedMail" id="@i" value="@i" style="padding:1px 6px;background-color:#FF8E2B;">@i</button>
                    </th>
                }
                else
                {
                    <th style="width:10%;padding: 1px 5px 1px 5px;">
                        <button type="button" class="btn btn-info" onclick="GetAddressByAltAddress(@i);" action="GetSavedMail" id="@i" value="@i" style="padding:1px 6px;">@i</button>
                    </th>
                }
            }

        </tr>
    </thead>
</table>


