@model ALT_ERP3.AdvancePayModel
<table id="tblLRDocDetails" class="zui-table" style="width:100%;background: linear-gradient(#e2dddd,#afafaf);">
    <thead>
    </thead>
    <tbody>
        <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
            <td style="">Date :- @Model.DocDate.ToString("dd/MM/yyyy")</td>
            <td style="">Qty :- @Model.Qty</td>
        </tr>
        <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
            <td style="">Act WT :- @Model.ActWt</td>
            <td style="">Chrg WT :- @Model.ChgWt</td>
        </tr>
        <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
            <td style="">From :- @Model.LRFrom</td>
            <td style="">To :- @Model.LRTo</td>
        </tr>
        <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
            <td style="">Consignor :- @Model.LRConsignee</td>
            <td style="">Consignee :- @Model.LRConginer</td>
        </tr>

    </tbody>
</table>
<div style="min-height:250px;max-height:250px;overflow:auto;">
    @if (Model.ConsignmentExplist != null)
    {
        if (Model.ConsignmentExplist.Count() > 0)
        {
            <label class="col-sm-offset-4 col-sm-5 control-label" style="color: blue;font-weight: bold;">Consignment Expenses</label>
            <table class="zui-table" style="width:100%;background: linear-gradient(#e2dddd,#afafaf);">
                <thead>
                    <tr>
                        <th>DocDate</th>
                        <th>Account</th>
                        <th>Amount</th>
                        <th>EnteredBy</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ConsignmentExplist)
                    {
                        <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                            <td>@item.DocDate.ToShortDateString()</td>
                            <td>@item.AccountName</td>
                            <td>@item.Amt.ToString("0.00")</td>
                            <td>@item.ENTEREDBY</td>
                        </tr>
                    }
                    <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">

                        <td colspan="2">Total :-</td>
                        <td>@Model.ConsignmentExplist.Sum(x => x.Amt).ToString("0.00")</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        }
    }
</div>