@model ALT_ERP3.Areas.Accounts.Models.CustomerMasterVM
@using Common;
<br />
<div>
    <div class="form-horizontal" method="get" id="" role="form">
        <div class="form-group">
            <label class="col-sm-1 control-label">Name:</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(x => x.AssistName, new { @class = "form-control", @Name = "AssistName", @Id = "AssistName", @Value = Model.AssistName })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">Telephone:</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(x => x.AssistTel, new { @class = "form-control", @Name = "AssistTel", @Id = "AssistTel", @Value = Model.AssistTel })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">Mobile:</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(x => x.AssistMobile, new { @class = "form-control", @Name = "AssistMobile", @Id = "AssistMobile", @Value = Model.AssistMobile })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">Email:</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(x => x.AssistEmail, new { @class = "form-control", @Name = "AssistEmail", @Id = "AssistEmail", @Value = Model.AssistEmail })
            </div>
        </div>
    </div>
</div>

