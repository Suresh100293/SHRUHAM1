            errorLabelContainer: $('#ErrorMessage'),
            wrapper: "li",
            rules: {
                AssetUsage_AssetID: {required: true,},
                AssetUsage_Branch: {required: true,},
                AssetUsage_CompCode: {required: true,},
                AssetUsage_FromDate: {required: true,},
