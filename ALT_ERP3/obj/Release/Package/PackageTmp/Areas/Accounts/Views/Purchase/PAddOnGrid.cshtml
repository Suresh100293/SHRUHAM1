@model ALT_ERP3.PurchaseVM
@using Common;
<style>
    .txtpaddvalue:focus {
        border-color: #83eae4;
    }
</style>

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><b>Product AddOns</b></h4>
        </div>
        <div class="modal-body">
            <div class="grid" id="ProductAddDiv" style="max-height:400px;min-height:400px; width:100%; overflow: scroll;">
                <table id="prodaddongrid" class="zui-table">
                    <thead>
                    </thead>
                    <tbody>
                        @if (Model.PAddOnList != null)
                        {
                            foreach (var item in @Model.PAddOnList.ToList())
                            {
                        <tr id="productcharge" style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                            <td style="width:10%;">@item.Fld</td>
                            <td style="width:20%;">@item.Head</td>
                            <td style="width:1%;" hidden="hidden">@item.Eqsn</td>
                            @if (item.FldType == "C")
                            {
                                <td style="width:50%;">
                                    <select class="txtpaddvalue" id="txtpadd_@item.Fld" alt="@item.Fld" style="width:100%">
                                        @foreach (var item2 in item.QueryText.Split('^').ToList())
                                        {

                                            <option value="@item2" @(item2 == item.ApplCode ? "selected" : "")>@item2</option>


                                        }
                                    </select>
                                </td>
                            }
                            else if (item.FldType == "X")
                            {
                                <td style="width:40%;height:1px;">
                                    <ul class="txtpaddvalue" id="txtpadd_@item.Fld" alt="@item.Fld" style="width:100%">
                                        @foreach (var item2 in item.QueryText.Split('^').ToList())
                                        {
                                            if (item.ApplCode == null || item.ApplCode == "")
                                            {
                                                <li><input type="checkbox" value="@item2" />@item2 </li>
                                            }
                                            else
                                            {
                                                <li><input type="checkbox" value="@item2" @(item.ApplCode.Contains(item2) ? "checked" : "") />@item2 </li>
                                            }

                                        }
                                    </ul>
                                </td>
                            }
                            else if (item.FldType == "M")
                            {
                                <td style="width:50%;"><textarea type="textarea" rows="5" cols="20" id="txtpadd_@item.Fld" alt="@item.Fld" class="txtpaddvalue" style="width:100%;">@item.ApplCode</textarea></td>

                            }
                            else if (item.FldType == "L")
                            {
                                <td style="width:50%;">
                                    <select class="txtpaddvalue" id="txtpadd_@item.Fld" alt="@item.Fld" style="width:100%">
                                        <option value="False" @("False" == item.ApplCode ? "selected" : "")>False</option>
                                        <option value="True" @("True" == item.ApplCode ? "selected" : "")>True</option>
                                    </select>
                                </td>
                            }
                            else
                            {
                                <td style="width:50%;"><input type="text" id="txtpadd_@item.Fld" alt="@item.Fld" value="@item.ApplCode" class="txtpaddvalue" maxlength="250" /></td>
                            }
                            <td style="width:1%;" hidden="hidden">@item.FldType</td>
                            <td style="width:1%;" hidden="hidden">@item.PlaceValue</td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;">
            <button type="button" class="btn btn-success" id="paddonaddcalc" style="float:left;">Calculate</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="paddonbtnSave">Save</button>
            <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        

        $("#paddonbtnSave").click(function (event) {
            event.preventDefault();
            var ProductAddonArray = [];
            $('#prodaddongrid').find('tr[id="productcharge"]').each(function () {
                var $tds = $(this).find('td');

                var applselected = "";
                var selected = "";
                if ($tds.eq(4).text() == "X") {

                    $tds.find(".txtpaddvalue input:checked").each(function () {
                        selected = selected + $(this).val() + "^";
                    })
                    applselected = selected;
                }

                var myDets = {
                    Fld: $tds.eq(0).text(),
                    ApplCode: ($tds.eq(4).text() == "X") ? applselected : $tds.find(".txtpaddvalue").val(),
                    FldType: $tds.eq(4).text(),
                    PlaceValue: $tds.eq(5).text()
                }
                ProductAddonArray.push(myDets);
            });
            var ModelData = {};
            ModelData["PAddOnList"] = ProductAddonArray;
            var DTO = { Model: ModelData };
            var url = '@Url.Action("AddProductAddOnsVal")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforesend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('#hdnProductAddonSaved').val('1');
                    if (data.Rate != 0) {
                        $('#txtRate').val(data.Rate);
                    }
                    if (data.Qty != 0) {
                        $('#txtQty').val(data.Qty);
                        $('#txtQty').focus();
                    }

                },
                error: function (error) {
                    alert("errror");
                }
            });
        });

        $('#paddonaddcalc').click(function (event) {
            event.preventDefault();
            CalPAddAddon()
        });


