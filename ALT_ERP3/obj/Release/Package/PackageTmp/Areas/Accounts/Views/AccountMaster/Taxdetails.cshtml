
@model ALT_ERP3.Areas.Accounts.Models.MasterVM
@using Common;

<script type="text/javascript">
    $(document).ready(function () {
        loadsalesTax()

        loadpurchaseTax()
        loadGSTType()
        loadDealerType()
    });
    function loadsalesTax() {
        event.preventDefault();
        var url = '@Url.Action("Getsalestaxcode")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Grps').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#STaxCode").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('#STaxCode').val('@Model.STaxCode').attr("selected", "selected");
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };

    function loadpurchaseTax() {
        event.preventDefault();
        var url = '@Url.Action("Getpurchasetaxcode")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Grps').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#PTaxCode").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('#PTaxCode').val('@Model.PTaxCode').attr("selected", "selected");
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };

    function loadDealerType() {
        var url = '@Url.Action("GetDealerType")';
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#DealerType").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('#DealerType').val('@Model.DealerType').attr("selected", "selected");
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    };

    function loadGSTType() {
        var url = '@Url.Action("GetGSTType")';
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#GSTType").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('#GSTType').val('@Model.GSTType').attr("selected", "selected");
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    };

</script>
