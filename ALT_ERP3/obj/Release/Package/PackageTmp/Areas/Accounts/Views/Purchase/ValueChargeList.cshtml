@functions {
    decimal GetValAbsolute(string dcb)
    {
        if (dcb == "" || dcb == null)
        {
            dcb = "0";
        }
        var mm = Convert.ToDecimal(dcb);
        var msg = Math.Abs(mm);
        return msg;
    }
