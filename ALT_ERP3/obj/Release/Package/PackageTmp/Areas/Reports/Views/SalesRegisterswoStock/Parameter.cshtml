@model SalesRegisterswoStockVM
@using Common;

<script src="~/Scripts/jquery.jstree.js"></script>

<style>
    .panel-heading .nav {
        margin: -23px -15px -23px;
    }

    .table, th, td {
        border: 0px solid;
    }

    .select2-container-multi .select2-choices {
        width: 180px;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        GetReportCode();
        Loadgrp();

        $('#submit').click(function () {
            // iX9: build Values on Submit for TreeView i.e. ControlType='TreeView' 
            var divText = [];
            $("#grp").jstree("get_checked", null, true).each
                (function () {
                    divText.push($(this).children('a').text());
                });
            $('#hdngrp').val(divText.toString());
        });
    });

    function GetReportCode() {
        var url = '@Url.Action("GetViewCodes")?term=' + '@Model.ReportID';
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#ViewCode").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    };

    // iX9: TreeView Load Code i.e. ControlType='TreeView' 
    function Loadgrp() {
        $("#grp").jstree({
            json_data: {
                "ajax": {
                    "url": "/SalesRegisterswoStock/Getgrp",
                    "type": "POST",
                    "dataType": "json",
                    "contentType": "application/json charset=utf-8"
                }
            },
            checkbox: {
                real_checkboxes: true,
                checked_parent_open: true
            },
            plugins: ["themes", "json_data", "ui", "checkbox"]
        });
    };
</script>

<div class="modal-content" style="width:600px;padding-bottom:0px;">
    <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><b>Parameters</b></h4>
    </div>

    <div class="modal-body" style="padding-top:-15px;">
        <div class="form-horizontal" id="fixedinfo" role="form" style="min-height:350px;">
            <div id="ErrorMessage3" name="ErrorMessage3" class="alert alert-danger" style="display: none"></div>

            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-4"></div>
                <label class="col-sm-2 control-label">Format</label>
                <div class="col-sm-5">
                    @Html.DropDownListFor(x => x.ViewCode, DropdownHelper.EmptyList(), new { @Id = "ViewCode", @Name = "ViewCode", @style = "width:100%" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">grp</label>
                <div class="col-sm-4">
                    <div id="grp" style="min-height:150px;overflow-y:scroll;max-height:150px;padding-left:10px;font-size:11px;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;">
        <button type="button" class="btn btn-success" data-dismiss="modal" id="submit">Save</button>
    </div>
</div>

