

@model GridOption
@using Common;

<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<style>
    .panel-heading .nav {
        margin: -23px -15px -23px;
    }

    .table, th, td {
        border: 0px solid;
    }

    .select2-container-multi .select2-choices {
        width: 180px;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ReportQuery").hide();
        $("#indents").hide();
        $('#RStatus').hide();

        $("#Item").change(function () {
            var selected = [];
            $("#Item :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnPurchArray').val(selected)
            return false;
        });

        $("#store").change(function () {
            var selected = [];
            $("#store :selected").each(function () {
                selected.push($(this).val());
            });
            $('#hdnStoreName').val(selected)
            return false;
        });


        $("#ReportType").on("change", function () {
            if ($(this).val() == "R") {
                $('#ReportQuery').show();
                $('#RStatus').show();
            } else {
                $("#ReportQuery").hide();
                $('#RStatus').hide();
            }
            if ($(this).val() == "Q") {
                $('#indents').show();
            } else {
                $("#indents").hide();
            }
        });

    });

    function GetItem() {
        event.preventDefault();
        var url = '@Url.Action("GetItemName")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Item').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#Item").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };
    function GetIndentNum() {
        event.preventDefault();
        var url = '@Url.Action("GetIndentNumber")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#IndentNum').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#IndentNum").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };

    function GetStore() {
        event.preventDefault();
        var url = '@Url.Action("GetStoreName")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#store').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#store").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };


</script>

<div class="modal-content" style="width:650px">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Query Options</h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="fixedasstesinfo" role="form">
            <div id="ErrorMessage3" name="ErrorMessage3" class="alert alert-danger" style="display: none"></div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Report Type</label>
                    <div class="col-sm-3">
                        <select style="width: 205px" id="ReportType">
                            <option value="">--Select--</option>
                            <option value="R">Report</option>
                            <option value="Q">Query</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" id="RStatus">Indent Selection</label>
                    <div class="col-sm-3">
                        <select style="width: 205px" id="ReportQuery">
                            <option value="">--Select--</option>
                            <option value="RE">Recived</option>
                            <option value="PR">Processed</option>
                            <option value="PE">Pending</option>
                        </select>
                    </div>
                </div>
                <div class="form-group" id="indents">
                    <label class="col-sm-2 control-label">Indent Number</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.IndentNumber, DropdownHelper.EmptyList(), new { @Id = "IndentNum", @Name = "IndentNum", @Style = "width:205px;" })
                    </div>
                    <label class="col-sm-2 control-label"> Item Name</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "Item", @Name = "Item" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">store Name</label>
                    <div class="col-sm-4" id="codePurchase">
                        @Html.DropDownListFor(x => x.Store, DropdownHelper.EmptyList(), new { multiple = "multiple", @Id = "store", @Name = "store" })
                    </div>
                </div>
            </div>
        </form>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning" data-dismiss="modal" id="submit">Save</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
        </div>
    </div>
</div>
