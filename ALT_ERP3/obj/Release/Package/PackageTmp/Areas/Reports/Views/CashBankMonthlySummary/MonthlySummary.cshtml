@model GridOption
@using Common;


<link href="~/Content/js/jquery-multi-select/css/multi-select.css" rel="stylesheet" />
<script src="~/Content/js/jquery-multi-select/js/jquery.multi-select.js"></script>
<script src="~/Content/js/jquery-multi-select/js/jquery.quicksearch.js"></script>
<style>
    .select2-container-multi .select2-choices {
        width: 270px;
    }

    .table > thead > tr > th {
        padding: unset;
        text-align: center;
    }

    .table-bordered > thead > tr > th, .table-bordered > tbody > tr > th, .table-bordered > tfoot > tr > th, .table-bordered > thead > tr > td, .table-bordered > tbody > tr > td, .table-bordered > tfoot > tr > td {
        border: 1px solid darkgrey;
    }

    .table-bordered {
        border: 1px solid darkgrey;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: unset;
    }
</style>

<script type="text/javascript">

    $(document).ready(function () {

        $('select').select2();

        $('#Fromdate').val('@Model.FromDate');
        $('#ToDate').val('@Model.ToDate');

    });


</script>
<div class="grid" id="ExistTable" style="max-height: 700px; width: auto; overflow: auto;">
    <div class="panel-body">
        <div id=" page-contentgrid">
            <table id="list1" class="table table-striped table-bordered">
                <thead>
                    <tr role="row">
                        <th>MonthName</th>
                        <th>Opening</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.list != null)
                    {
                        foreach (var item in Model.list)
                        {
                            <tr>
                                <td>@item.MonthName</td>
                                <td style="text-align:right">@item.Opening</td>
                                <td style="text-align:right">@item.Debit</td>
                                <td style="text-align:right">@item.Credit</td>
                                <td style="text-align:right">@item.Balance</td>
                            </tr>
                        }
                    }
                    <tr>
                        <td></td>
                        <td style="text-align:right"></td>
                        <td style="text-align:right">@Model.SumDebit</td>
                        <td style="text-align:right">@Model.SumCredit</td>
                        <td style="text-align:right"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
