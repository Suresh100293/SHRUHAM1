@model GridOption
@using Common;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/js/jquery-multi-select/css/multi-select.css" rel="stylesheet" />
<script src="~/Content/js/jquery-multi-select/js/jquery.multi-select.js"></script>
<script src="~/Content/js/jquery-multi-select/js/jquery.quicksearch.js"></script>
<style>
    .select2-container-multi .select2-choices {
        width: 270px;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
    });

</script>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <header class="panel-heading" style="background:beige;padding:6px;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-2"><b>Stock Ledger</b></div>
                        <div class="col-md-4 pull-right">
                            <div class="input-group input-large" data-date-format="dd/mm/yyyy">
                                <input type="text" class="form-control dpd1" name="from" id="Fromdate" data-date-format="dd/mm/yyyy">
                                <span class="input-group-addon">To</span>
                                <input type="text" class="form-control dpd2" name="to" id="ToDate" data-date-format="dd/mm/yyyy">
                            </div>
                        </div>
                        <div class="col-md-1" style="padding-left:6px;font-family:Tahoma;padding-top:5px;font-size:9pt; width:unset;">
                            Product
                        </div>
                        <div class="col-sm-3">
                            @Html.DropDownListFor(x => x.Item, DropdownHelper.EmptyList(), new { @class = "form-control", @Id = "Item", @Name = "Item", @style = "width:150px;" })
                        </div>
                    </div>
                </div>
            </header>
            <div class="panel-body">
                <div class="form-horizontal" id="frmEditGTR" role="form">
                    <div id="ErrorMessage" name="ErrorMessage" class="alert alert-danger" style="display: none"></div>
                    <section class="panel">
                        <header class="panel-heading tab-bg-dark-navy-blue">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a data-toggle="tab" href="#tab-12" id="GenralLedger">Genral</a>
                                </li>
                                <li class="">
                                    <a data-toggle="tab" href="#tab-22" id="MailInfo">Mailing Info</a>
                                </li>
                                <li class="">
                                    <a data-toggle="tab" href="#tab-23" id="Options">Options</a>
                                </li>
                                <li class="">
                                    <a data-toggle="tab" href="#tab-24" id="transaction">Transactions</a>
                                </li>
                                <li class="">
                                    <a data-toggle="tab" href="#tab-25" id="More">More</a>
                                </li>
                            </ul>
                        </header>
                        <div class="panel-body" style="height:500px;">
                            @*<div class="tab-content">
                                <div id="tab-12" class="tab-pane active">
                                    @Html.Partial("EditInfo")
                                </div>
                                <div id="tab-22" class="tab-pane">
                                    @Html.Partial("EditMailingInfo")
                                </div>
                                <div id="tab-23" class="tab-pane">
                                    @Html.Partial("Options")
                                </div>
                                <div id="tab-24" class="tab-pane">
                                    @Html.Partial("Transactions")
                                </div>
                                <div id="tab-25" class="tab-pane">
                                    @Html.Partial("More")
                                </div>
                            </div>*@
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
