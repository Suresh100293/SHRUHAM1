<script type="text/javascript">
    $(document).ready(function () {

        $("#ProductGrp").change(function () {
            event.preventDefault();
            var url = '@Url.Action("GetItemName")?Code=' + $('#ProductGrp').val();
            $.ajax({
                type: 'POST',
                url: url,
                dataType: 'json',
                data: { Country: $('#Item').val() },
                success: function (result) {
                    $.each(result, function (i, item) {
                        $("#Item").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                    });
                    $('.spinner').hide();

                },
                error: function (ex) {
                    alert("Error occured while processing your request." + ex);
                }
            });
            return false;
        });

    });


    function GetProdGrp() {
        event.preventDefault();
        var url = '@Url.Action("GetItemGroups")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#ProductGrp').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#ProductGrp").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };


    function GetStoreName() {
        event.preventDefault();
        var url = '@Url.Action("Getstore")';
        $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            data: { Country: $('#Store').val() },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#Store").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
                $('.spinner').hide();
            },
            error: function (ex) {
                alert("Error occured while processing your request." + ex);
            }
        });
        return false;

    };

</script>


