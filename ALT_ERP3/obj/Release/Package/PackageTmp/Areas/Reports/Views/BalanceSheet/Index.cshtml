                ////////            startColumnName: 'Opening (Dr)',
                ////////            numberOfColumns: 2,
                ////////            titleText: '<em>Opening</em>'
                ////////        },
                ////////    ]
                ////////});
                ////////for (var i = 0; i <= mydata.length; i++)
                ////////    jQuery("#grid").jqGrid('addRowData', i + 1, mydata[i]);
            },
            error: function () {
                $('.spinner').hide();
                alert(Message);
