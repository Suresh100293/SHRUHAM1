    function GridReload() {
        event.preventDefault();
        // reportprintoptions
        GetEmail();
        var ColName, Coldata;
        var mlocation,mbranch;
        if ($('#iswarehouse').is(':checked')) {
            mlocation = $("#locations").val();
        } else {
