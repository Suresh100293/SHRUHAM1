<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Content/bootstrap-multiselect.js"></script>

<script type="text/javascript">
    $(document).ready(function ()
    {
        $('.BranchL,.UserL,.DocTypeL,.OptionModeL').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            enableCaseInsensitiveFiltering: true,
            filterPlaceholder: 'Search for something...',
            buttonWidth: '235',
            numberDisplayed: 1,
            nonSelectedText: 'Select Item',
        });



        $("#Branch").val("");
        $("#User").val("");
        $("#DocType").val("");
        $("#OptionMode").val("");
        $("#BranchL").change(function () {
            debugger;
            $('#Branch').val('');
            var selected = [];
            $("#BranchL :selected").each(function () {
                selected.push("'" + $(this).val() + "'");
            });
            debugger;
            $('#Branch').val(selected)
            return false;
        });

        $("#UserL").change(function () {

            $('#User').val('');
            var selected = [];
            $("#UserL :selected").each(function () {
                selected.push("'" + $(this).val() + "'");
            });
            $('#User').val(selected)
            return false;
        });
        $("#DocTypeL").change(function () {

            $('#DocType').val('');
            var selected = [];
            $("#DocTypeL :selected").each(function () {
                selected.push("'" + $(this).val() + "'");
            });
            $('#DocType').val(selected)
            return false;
        });
        $("#OptionModeL").change(function () {

            $('#OptionMode').val('');
            var selected = [];
            $("#OptionModeL :selected").each(function () {
                selected.push("'" + $(this).val() + "'");
            });
            $('#OptionMode').val(selected)
            return false;
        });
    });


</script>


<table class="table table-striped table-bordered">
    <thead>
    </thead>
    <tbody>
        <tr>
            <td class="td1">
                <label class=" ModalLabel  control-label" style="width:auto;">Branch :</label>
                @Html.ListBoxFor(x => x.BranchL, Model.Branches, new { @class = "BranchL", @id = "BranchL" })
            </td>
            <td class="td2">
                <label class=" ModalLabel  control-label" style="width:auto;">User :</label>
                @Html.ListBoxFor(x => x.UserL, Model.Users, new { @class = "UserL", @id = "UserL" })
            </td>
            <td class="td3">
                <label class=" ModalLabel  control-label" style="width:auto;">DocType :</label>
                @Html.ListBoxFor(x => x.DocTypeL, Model.DocTypes, new { @class = "DocTypeL", @id = "DocTypeL" })
            </td>
        </tr>
        <tr class="hidden">
            <td class="td1">
                <label class=" ModalLabel  control-label" style="width:auto;">Option Type :</label>
                @Html.ListBoxFor(x => x.OptionModeL, Model.OptionModes, new { @class = "OptionModeL", @id = "OptionModeL" })
            </td>
            <td class="td2"></td>
            <td class="td3"></td>
        </tr>
    </tbody>
</table>
