                <div class="form-group">
                    <label class="col-sm-1 control-label">Driver:<span style="color:red;">*</span></label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(x => x.DriverCode, new { @class = "input-large-query", @style = "width:100%;", @Value = Model.DriverCode })
                    </div>
                    <label class="col-sm-1 control-label">Vehicle No:<span style="color:red;">*</span></label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(x => x.VehicleNoCode, new { @class = "input-large-query", @style = "width:100%;", @Value = Model.VehicleNoCode })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Contact No1:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(x => x.MobileNo1, new { @class = "form-control", @style = "width:100%;margin-top:2px;", @Value = Model.MobileNo1, @disabled = "disabled" })
                    </div>
                    <label class="col-sm-1 control-label">Contact No2:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(x => x.MobileNo2, new { @class = "form-control", @style = "width:100%;", @Value = Model.MobileNo2, @disabled = "disabled" })
                    </div>
