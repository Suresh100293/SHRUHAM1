
@model ALT_ERP3.Areas.Vehicles.Models.TyreStockTransferVM
@using Common;
<style>
    .fixPickupTableHead {
        overflow-y: auto;
        height: 300px;
    }

        .fixPickupTableHead thead th {
            position: sticky;
            top: 0;
        }

        .fixPickupTableHead tfoot tr {
            position: sticky;
            bottom: 0;
        }

    .SearchRow {
        background-color: coral;
    }
</style>

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-body" style="height:375px!important;">
            <div class="fixPickupTableHead" id="PickTable" style="max-height:350px; min-height:350px;width:100%; overflow: scroll;">
                <table id="tabledatapick1" class="zui-table">
                    <thead>
                        <tr role="row">
                            <th style="vertical-align:inherit;width:10%;">Doc Date</th>
                            <th style="vertical-align:inherit;width:10%;">Stock Status</th>
                            <th style="vertical-align:inherit;width:10%;">Stock At</th>
                            <th style="vertical-align:inherit;width:10%;">Place No</th>
                            <th style="vertical-align:inherit;width:10%;">Type Name</th>
                            <th style="vertical-align:inherit;width:10%;">Cost</th>
                            <th style="vertical-align:inherit;width:10%;">Warranty KM</th>
                            <th style="vertical-align:inherit;width:10%;">Stock Days</th>
                            <th style="vertical-align:inherit;width:10%;">Install In</th>
                            <th style="vertical-align:inherit;width:10%;">Install KM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.HistoryDetails != null)
                        {
                            foreach (var item in @Model.HistoryDetails.ToList())
                            {
                                if (item != null)
                                {
                                    <tr class="clstr" style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                        <td style="vertical-align:inherit;width:0%;">@item.DocDate</td>
                                        <td style="vertical-align:inherit;width:0%;">@item.OldStkStatus</td>
                                        <td style="vertical-align:inherit;width:0%;">@item.OldStkAt</td>
                                        <td style="vertical-align:inherit;width:10%;">@item.OldStkTyrePlcaseNo</td>
                                        <td style="vertical-align:inherit;width:10%;">@item.OldStkTypeName</td>
                                        <td style="vertical-align:inherit;width:10%;">@item.OldStkCost</td>
                                        <td style="vertical-align:inherit;width:10%;">@item.OldStkWarrantyKM</td>
                                        <td style="vertical-align:inherit;width:10%;">@item.OldStkDays</td>
                                        <td style="vertical-align:inherit;width:0%;">@item.OldStkInstallFor</td>
                                        <td style="vertical-align:inherit;width:0%;">@item.OldStkInstallKM</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>
