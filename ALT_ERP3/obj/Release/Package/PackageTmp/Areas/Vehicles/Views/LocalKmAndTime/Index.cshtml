                        BillListDiv.html('');
                        BillListDiv.html(data.Html);
                        $('#copymodal').modal('hide');
                        $("#ChkBranchOnly").prop("checked", false);
                        $("#issuppress").prop("checked", false);
                    },
                    error: function (err) {
                        alert(JSON.stringify(err))
