        $('#btnAddKM').click(function (event)
        {
            if ($("#txtKMCalculate").val() != "" && $("#txtKMCalculate").val() != null)
            {
                var check = $('#detail_table').find('input[type=checkbox]:checked').length;
                if (check > 0) {
                    var KM = parseInt($("#txtKMCalculate").val());
                    $("#detail_table > tbody  > tr").each(function ()
                    {
                        var Row = $(this);
                        var Checkbox = Row.find(".checkbox").prop("checked");
                        if (Checkbox) {
                            debugger;
                            var tds = $(this).find('td');
                            var NewKM = parseInt(tds.eq(5).text()) + KM;
                            tds.eq(5).text(NewKM);
                        }
                    });
                    $("#txtKMCalculate").val("")
                }
                else
                {
                    alert("Please Select Atleast One Area To Calculate KM...!");
                }
            }
        });
        $('#btnAddTime').click(function (event) {
            if ($("#txtTimeCalculate").val() != "" && $("#txtTimeCalculate").val() != null) {
                var check = $('#detail_table').find('input[type=checkbox]:checked').length;
                if (check > 0) {
                    var KMPerHr = parseFloat($("#txtTimeCalculate").val());
                    $("#detail_table > tbody  > tr").each(function () {
                        var Row = $(this);
                        var Checkbox = Row.find(".checkbox").prop("checked");
                        if (Checkbox) {
                            debugger;
                            var tds = $(this).find('td');
                            var GetKM = parseFloat(tds.eq(5).text());
                            var CalculateTime = (GetKM / KMPerHr).toFixed(2);
                            var SetTimeFormat = CalculateTime.toString().split('.');
                            var First = "", Sencond = "";
                            if (SetTimeFormat[0].length == 1)
                            {
                                First = "0" + SetTimeFormat[0]+":";
                            }
                            else
                            {
                                First = SetTimeFormat[0] + ":";
                            }
                            if (SetTimeFormat[1].length == 1)
                            {
                                Sencond = SetTimeFormat[1] + "0";
                            }
                            else
                            {
                                Sencond = SetTimeFormat[1];
                            }

                            tds.eq(4).text(First + Sencond);
                        }
                    });
                    $("#txtTimeCalculate").val("")
                }
                else {
                    alert("Please Select Atleast One Area To Calculate KM...!");
                }
            }
        });

        $('#btnSubmitCopy').click(function (event)
