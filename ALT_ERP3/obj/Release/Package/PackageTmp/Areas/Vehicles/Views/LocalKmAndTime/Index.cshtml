            var Branch = $("#ChkBranchOnly").prop("checked");
            //debugger;
            //$('#detail_table > tbody  > tr').removeClass("hidden");
            //$('#detail_table > tbody  > tr .AddBtnTD').addClass("hidden");
            //$('#detail_table > tbody  > tr .MinusBtnTD').removeClass("hidden");
            if (this.checked)
