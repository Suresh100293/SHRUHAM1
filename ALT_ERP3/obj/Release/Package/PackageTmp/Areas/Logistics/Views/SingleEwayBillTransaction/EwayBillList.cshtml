<script type="text/javascript">
    $(document).ready(function () {
        //AllEwaygridreload();
    });
    function AllEwaygridreload1() {
        //event.preventDefault();
        debugger;

        $('#mislist').jqGrid('clearGridData');
        $("#mislist").jqGrid("GridUnload");
        $('#mislist').trigger('reloadGrid');
        $('#AllEwaylist').jqGrid('clearGridData');
        $("#AllEwaylist").jqGrid("GridUnload");
        $('#AllEwaylist').trigger('reloadGrid');

        var SearchSring = "";
        var ColName, Coldata;
        var lPath = window.location.pathname;
        var mDate = ('@Model.FromDate' + ':' + '@Model.ToDate');
        if ("@Model.GetEaybill" == "" || "@Model.GetEaybill" == null || "@Model.GetEaybill" == "Active") {
            Code = "s.EWBType<>'Authe' and s.Clear='false' and ( s.LrTablekey is null or s.LrTablekey in (select L.TableKey from LRMaster L where L.TableKey not in (select D.ParentKey from DeliveryMaster D)))";
        }
        else if ("@Model.GetEaybill" == "Clear")
        {
            Code =  "s.Clear='true'";
        }
        else if ( "@Model.GetEaybill"== "ALL")
        {
            Code =  "1=1";
        }
        else if ("@Model.GetEaybill" == "Expired")
        {
            SearchSring = "Expired";
            Code = "s.Clear='false' and s.EWBType<>'Authe' and ( s.LrTablekey is null or s.LrTablekey in (select L.TableKey from LRMaster L where L.TableKey not in (select D.ParentKey from DeliveryMaster D)))";
        }

        var sPathUrl = "/Logistics/MasterGrid/GetGridStructureRecords/?Date=" + mDate + "&id=TFATEWBEway&TableName=" + '@ViewBag.Table' + '&AcType=' + '@ViewBag.MainType' + '&MainType=' + '@ViewBag.MainType' + '&IsFormatSelected=' + $('#isdefault').is(':checked');
        var sUrlpath = "/Logistics/MasterGrid/GetMasterGridData/?Date=" + mDate + "&ViewDataId=TFATEWBEway&TableName=" + '@ViewBag.Table' + '&AcType=' + '@ViewBag.MainType' + '&MainType=' + '@ViewBag.MainType' + '&IsFormatSelected=' + $('#isdefault').is(':checked') + '&Code=' + Code + '&searchField=' + SearchSring + '&Customer=' + $('#GetDate').is(':checked');
        $.ajax({
            url: sPathUrl,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                var obj = $.parseJSON(data);
                ColName = obj[0].split(",");
                Coldata = obj[1];
                CreateGridData();
            },
            error: function () {
                alert("Error with AJAX callback");
            }
        });

        function CreateGridData() {
            $('#AllEwaylist').jqGrid({
                url: sUrlpath,
                datatype: 'json',
                mtype: 'POST',
                sortable: true,
                colNames: ColName,
                colModel: Coldata,
                pager: $('#AllEwaypager'),
                rowNum: @Session["GridRows"],
                rowList: [10, 15, 20, 50, 100, 500, 1000, 5000, 10000],
                height:250,
                sortname: '',
                frozen: false,
                sortorder: 'asc',
                gridview: true,
                viewrecords: true,
                scroll: false,
                autowidth: false,
                shrinkToFit: false,
                search: true,

                onSelectRow: function (id, status, e) {
                    e.preventDefault();
                    debugger;
                    $('.spinner').hide();
                },
                ondblClickRow: function (id) {
                    //event.preventDefault();
                    var myGrid = $('#AllEwaylist');
                    var cellVal = myGrid.jqGrid('getCell', id, 'Document');
                },
                beforeRequest: function () {
                    responsive_jqgridData($(".jqGrid"));
                },
                gridComplete: function () {
                    var ids = jQuery("#AllEwaylist").jqGrid('getDataIDs');
                    for (var i = 0; i < ids.length; i++) {
                        var rowId = ids[i];
                        if (jQuery("#AllEwaylist").getCell(rowId, "Clear") == "False") {
                            var btn = "<button type='button' id='btnClear" + rowId + "' value='" + rowId + "'  style='padding:4px 12px;border-radius:15px;' class='btn btn-info' tooltip='Clear' , title='clear' , attr='" + rowId + "'>Clear</button>";
                            jQuery("#AllEwaylist").jqGrid('setRowData', rowId, { Actions: btn });
                        }
                        else {
                            var btn = "<button type='button' id='btnForceActivity" + rowId + "' value='" + rowId + "' style='padding:3px 8px;border-radius:15px;' class='btn btn-danger' tooltip='UnClear' , title='Unclear' , attr='" + rowId + "'>Un-Clear</button>";
                            jQuery("#AllEwaylist").jqGrid('setRowData', rowId, { Actions: btn });
                        }
                    }
                    $("button").click(function (event) {
                        debugger;
                        event.preventDefault();
                        var btnname = this.id;
                        var curRowId = this.value;
                        var btntype = btnname.replace(/[0-9]/g, "");
                        var myGrid = $('#AllEwaylist');
                        selectedRowId = myGrid.jqGrid('getGridParam', 'selrow');
                        var cellVal = myGrid.jqGrid('getCell', curRowId, 'EwayBill No');
                        switch (btntype) {
                            case "btnForceActivity":
                                UnclearFunction(cellVal);
                                break;
                            case "btnClear":
                                ClearFunction(cellVal);
                                break;
                        }
                    });
                },
            });
            jQuery("#AllEwaylist").jqGrid('navGrid', "#AllEwaypager",
            { edit: false, add: false, del: false, print:false, search: true, refresh: false, searchtext: "filter" });
            jQuery("#AllEwaylist").jqGrid("setFrozenColumns");
            $('#pg_AllEwaypager').append($("<div class=\"col-sm-offset-2 col-md-6\" style=\"display: flex;margin-top:-3%;\"><button class='btn btn-primary' style='color:black;font-size: 13px;padding:3px 12px;' id='btnListClear'>Clear</button></div>"));
        };

        function responsive_jqgridData(jqgrid) {
            jqgrid.find('.ui-jqgrid').addClass('clear-margin span12').css('width', '');
            jqgrid.find('.ui-jqgrid-view').addClass('clear-margin span12').css('width', '');
            jqgrid.find('.ui-jqgrid-view > div').eq(1).addClass('clear-margin span12').css('width', '').css('min-height', '0').css('display', 'grid');
            jqgrid.find('.ui-jqgrid-view > div').eq(2).addClass('clear-margin span12').css('width', '').css('min-height', '0').css('display', 'grid');
            jqgrid.find('.ui-jqgrid-sdiv').addClass('clear-margin span12').css('width', '');
            jqgrid.find('.ui-jqgrid-pager').addClass('clear-margin span12').css('width', '');
            jqgrid.find('#AllEwaypager_right').css('width', '180px');
            jqgrid.find('.ui-state-default,.ui-widget-content .ui-state-default,.ui-widget-header .ui-state-default').css('background', '#e7e4e4');
            jqgrid.find('.ui-widget-content .ui-state-focus, .ui-widget-header .ui-state-focus .ui-state-hover').css('background', 'skyblue');
        };
    };
    
</script>
