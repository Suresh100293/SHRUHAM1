@model ALT_ERP3.Areas.Logistics.Models.EwayBillVM
@using Common;
@{
    ViewBag.Title = "Delivery Master";
    Layout = null;
}

<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //$('#example').DataTable();
        //$('#EWBexample').dataTable({
        //    "iDisplayLength": -1
        //});
    });
</script>

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding:7px;font-weight:bolder;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
            <h4 class="modal-title">Pick from Source Document</h4>
        </div>
        <div class="modal-body">
            <div class="ExtfixPickupTableHead" id="PickTable" style="max-height:450px; min-height:450px;width:100%; overflow: scroll;">

                <table id="EWBexample" class="zui-table">
                    <thead>
                        <tr role="row">
                            @*<th style="width:1%"><input id="AllxCess" name="AllxCess" style="width:16px;height:16px;" type="checkbox"></th>*@
                            <th style="vertical-align:inherit;width:1%;">Sr.</th>
                            <th style="vertical-align:inherit;width:7%;">EWB NO</th>
                            <th style="vertical-align:inherit;width:7%;">EWB Date</th>
                            <th style="vertical-align:inherit;width:7%;">DOC NO</th>
                            <th style="vertical-align:inherit;width:7%;">EXPIRY Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.ExtendEwayBillList != null)
                            {
                                
                                foreach (var item in @Model.ExtendEwayBillList.ToList())
                                {
                                    if (item != null)
                                    {
                                        <tr class="clstr" style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                            @*<td><input type="checkbox" class='rolemaster_AccessType' atr="@item.RecordKey" value="@item.tempid" /></td>*@
                                            <td style="vertical-align:inherit;width:1%;">@item.RECORDKEY</td>
                                            <td style="vertical-align:inherit;width:7%;">@item.EWBNO </td>
                                            <td style="vertical-align:inherit;width:7%;">@item.DocDate.ToShortDateString()</td>
                                            <td style="vertical-align:inherit;width:7%;">@item.DocNo </td>
                                            <td style="vertical-align:inherit;width:7%;">@item.EWBValid.Value.ToShortDateString()</td>
                                        </tr>
                                    }
                                }
                            }
                        }
                    </tbody>
                </table>


            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;">
            @*<button type="button" class="btn btn-success" id="pickrecord">Accept Data</button>*@
            <button type="button" class="btn btn-danger" data-dismiss="modal">Discard</button>
        </div>
    </div>
</div>

