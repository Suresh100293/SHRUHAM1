<script>
    var PrintLR = "";
    $(document).ready(function () {
        GetMyFavorites('@Model.ViewDataId');
        if ('@Model.Mode' == "Delete" || '@Model.Mode' == "View") {
            $('.form-group :input').prop("disabled", true);
        }

        $('#DocDate').datepicker({
            format: 'dd-mm-yyyy',
            autoclose: true,
        });
        $("#btnadddata").hide();
        LoadBranch();

        $("#SearchBillNo").constrain({ allow: { regex: "[a-zA-Z0-9]" } });


        $('#SearchBillNo').blur(function () {
            event.preventDefault();
            $('#ErrorMessage').hide();
            if ($('#SearchBillNo').val() != "" && $('#SearchBillNo').val() != null)
            {
                var BillDetail = {
                    BillNo: $('#SearchBillNo').val()
                }
                var ModelData = {};
                ModelData["BillDetail"] = BillDetail;
                ModelData["SendBillController"] = true;
                ModelData["Methods"] = '@Model.Methods';

                var DTO = { Model: ModelData };
                var url = '@Url.Action("SearchBillNo")';
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(DTO),
                    cache: false,
                    url: url,
                    contentType: "application/json;charset=utf-8",
                    beforeSend: function () {
                        $('.spinner').show();
                    },
                    success: function (data) {
                        $("#ErrorMessage").hide();
                        $('.spinner').hide();
                        if (data.Status == "Success") {
                            $('#addnewbill').modal('show');
                            var LoadDownLoadFiles = $("#AddnNewBillList");
                            LoadDownLoadFiles.html('');
                            LoadDownLoadFiles.html(data.Html);
                        }
                        else if (data.Status == "Optional") {
                            var result = confirm(data.Message);
                            if (result) {
                                $('#addnewbill').modal('show');
                                var LoadDownLoadFiles = $("#AddnNewBillList");
                                LoadDownLoadFiles.html('');
                                LoadDownLoadFiles.html(data.Html);
                                //$("#btnAddSave").focus();
                            }
                            else {
                                $('#SearchBillNo').val('');
                            }
                        }
                        else {
                            alert(data.Message);
                        }
                        $('#SearchBillNo').val('');
                    },
                    error: function () {
                        alert("Error occured while processing your request.");
                    }
                });
            }
        });

        $('#Submit').click(function () {
            $('#ErrorMessage').hide();
            if ($("#FromBranch").val() == '' || $("#FromBranch").val() == null) {
                alert('To Branch Required...');
                return;
            }
            if ($("#tabledata tbody tr").length==0) {
                alert('Bill Required...');
                return;
            }
            var ModelData = {};
            ModelData["Document"] = $("#Document").val();
            ModelData["DocDate"] = $("#DocDate").val();
            ModelData["DocumentNo"] = $("#DocumentNo").val();
            ModelData["FromBranch"] = $("#FromBranch").val();
            ModelData["BillType"] = "Send";
            ModelData["Remark"] = $("#Remark").val();
            ModelData["Mode"] = '@Model.Mode';
            ModelData["Header"] = '@Model.Header';
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SendReceiveSaveData")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $('.spinner').hide();
                        $("#ErrorMessage").hide();
                        window.location.href = "/Logistics/BillSubmission/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";

                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);
                    }
                },
            });
        });
        $("#btnPrint").click(function () {
            PrintLR = "SavePrint";
            debugger;
            $('#ErrorMessage').hide();
            if ($("#FromBranch").val() == '' || $("#FromBranch").val() == null) {
                alert('To Branch Required...');
                return;
            }
            if ($("#tabledata tbody tr").length==0) {
                alert('Bill Required...');
                return;
            }
            var ModelData = {};
            ModelData["Document"] = $("#Document").val();
            ModelData["DocDate"] = $("#DocDate").val();
            ModelData["DocumentNo"] = $("#DocumentNo").val();
            ModelData["FromBranch"] = $("#FromBranch").val();
            ModelData["BillType"] = "Send";
            ModelData["Remark"] = $("#Remark").val();
            ModelData["Mode"] = '@Model.Mode';
            ModelData["Header"] = '@Model.Header';
            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SendReceiveSaveData")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == 'Success') {
                        $("#Document").val(data.SerialNo);
                        $('.spinner').hide();
                        if (PrintLR == "SavePrint") {
                            $('.spinner').hide();
                            $('#printpostmodel').modal('show');
                        }
                        else {
                            window.location.href = "/Logistics/BillSubmission/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                        }
                        $("#ErrorMessage").hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert(data.Message);
                    }
                },
            });
        });
        $('#btnPrintOnly').click(function (event) {
            event.preventDefault();
            PrintLR = "OnlyPrint";
            $("#Document").val($("#DocumentNo").val());
            $('#printpostmodel').modal('show');
        });
         $('#btnDelete').click(function () {
            var result = confirm("Are you sure you want to delete?");
            if (result) {
                var ModelData = {};
                ModelData["Document"] = $("#Document").val();
                ModelData["Mode"] = '@Model.Mode';
                ModelData["Header"] = '@Model.Header';
                var DTO = { mModel: ModelData };
                var url = '@Url.Action("SendReceiveSaveData")';
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(DTO),
                    cache: false,
                    url: url,
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function () {
                        $('.spinner').show();
                    },
                    success: function (data) {
                        if (data.Status == 'Success') {
                            $('.spinner').hide();
                            window.location.href = "/Logistics/BillSubmission/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                            $("#ErrorMessage").hide();
                        }
                        else {
                            $('.spinner').hide();
                            alert(data.Message);
                        }
                    },
                });
            }
        });

    });
    function LoadBranch() {
        var url = '@Url.Action("Getbranch")';
        $('#FromBranch').select2({
            minimumInputLength: 0,
            placeholder: 'Search',
            ajax: {
                url: url,
                dataType: 'json',
                quietMillis: 100,
                enableFiltering: true,
                allowClear: true,
                minimumInputLength: 0,
                multiple: true,
                width: 300,
                data: function (term, page) {
                    return {
                        types: ["exercise"],
                        limit: -1,
                        term: term
                    };
                },
                results: function (data, page) {
                    clientObj = JSON.stringify(data);
                    return {
                        results: $.map(data, function (item) {
                            return {
                                text: item.Name,
                                id: item.Code
                            }
                        })
                    };
                }
            },
            initSelection: function (element, callback) {
                var data = { id: '@Model.FromBranch', text: '@Model.FromBranchName' };
                callback(data);
            },
            formatResult: function (exercise) {
                return "<div class='row-fluid'><div class=''><span class='span1'><div style='color:" + exercise.alias + "'>" + exercise.text +
                    "</div></span></div></div>";
            },
            formatSelection: function (exercise) {
                return "<div class='row-fluid'><div class=''><span class='span1'><div style='color:" + exercise.alias + "'>" + exercise.text +
                    "</div></span></div></div>";
            },
        })

    };
</script>
