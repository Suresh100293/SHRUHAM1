@model ALT_ERP3.Areas.Logistics.Models.UserDashboardVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<script>
    $(document).ready(function ()
    {
        GetMyFavorites('@Model.ViewDataId');
        document.getElementById("headerdiv").style.backgroundColor = '@Session["headerdivcolor"]';
        document.getElementById("headercaption").style.color = '@Session["headercaptioncolor"]';
        document.getElementById("fixedbottom").style.backgroundColor = '@Session["bottomcolor"]';
        var mheight = $(window).innerHeight() - 175;
        $('#TransactionTypesdiv').height(mheight-30);
        $('#dynamic-table').height(mheight - 200);
        $('#MessageRulesdiv').height(mheight - 80);

        $('#myInput').keyup(function () {
            debugger;
            var value = $(this).val().toLowerCase();
            $("#dynamic-table tbody tr").filter(function () {
                debugger;
                $(this).toggle($(this).find("td").text().toLowerCase().indexOf(value) > -1)
            });
        });
        $('#myInput1').keyup(function () {
            debugger;
            var value = $(this).val().toLowerCase();
            $("#tabledatapick2 tbody tr").filter(function () {
                debugger;
                $(this).toggle($(this).find("#Name").val().toLowerCase().indexOf(value) > -1)
            });
        });

        
        $("#btnEditGrid").click(function (event) {
            event.preventDefault();
            if ($('#User').val() == '' || $('#User').val() == null) {
                alert('Please Select User First')
                return;
            }
            $(".EditableGrid").prop("disabled", false);
        });

        
        



        $("#btnSaveGrid").click(function (event) {
            event.preventDefault();
            if ($('#User').val() == '' || $('#User').val() == null) {
                alert('Please Select User First')
                return;
            }
            $(".EditableGrid").prop("disabled", true);
            var myTableArray = [];
            $('#tabledatapick2 tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets =
                {
                    Srno: tds.find("input[id='Srno']").val(),
                    DisplayOrder: tds.find("input[id='DisplayOrder']").val(),
                    Status: tds.find("input[id='Status']").is(':checked'),
                    ZoomURL: tds.find("input[id='ZoomURL']").is(':checked'),
                }
                myTableArray.push(myDets);
            });

            var ModelData = {};
            ModelData["mRightList"] = myTableArray;
            ModelData["User"] = $('#User').val();
            ModelData["Header"] = $('#Header').val();
            ModelData["Mode"] = '@Model.Mode';
            ModelData["Header"] = '@Model.Header';

            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SaveData")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == "Error") {
                        alert(data.Message);
                        $('.spinner').hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert("Saved Sucessfully...!");
                        location.reload(true);
                    }
                },
                error: function (err) {
                    alert(JSON.stringify(err))
                    alert("Error occured while processing your request.");
                }
            });
        });

        $("#Submit").click(function (event) {
            debugger;
            event.preventDefault();
            if ($('#User').val() == '' || $('#User').val() == null) {
                alert('Please Select User First')
                return;
            }

            var ModelData = {};
            var myTableArray = [];
            $('#tabledatapick2 tbody tr').each(function () {
                var tds = $(this).find('td');
                var myDets =
                {
                    Srno: tds.find("input[id='Srno']").val(),
                    DisplayOrder: tds.find("input[id='DisplayOrder']").val(),
                    Status: tds.find("input[id='Status']").is(':checked'),
                    ZoomURL: tds.find("input[id='ZoomURL']").is(':checked'),
                }
                myTableArray.push(myDets);
            });
            ModelData["mRightList"] = myTableArray;
            ModelData["User"] = $('#User').val();
            ModelData["Header"] = $('#Header').val();
            ModelData["Mode"] = '@Model.Mode';
            ModelData["Header"] = '@Model.Header';

            var DTO = { mModel: ModelData };
            var url = '@Url.Action("SaveData")';
            $.ajax({
                async: false,
                cache: false,
                url: url,
                data: JSON.stringify(DTO),
                type: "POST",
                dataType: "json",
                cache: false,
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    if (data.Status == "Error") {
                        alert(data.Message);
                        $('.spinner').hide();
                    }
                    else {
                        $('.spinner').hide();
                        alert("Saved Sucessfully...!");
                        location.reload(true);
                    }
                },
            });
        });
    });

</script>
<header class="header fixed-top" id="headerdiv" style="position:fixed;background-color:lightgray;padding:6px;width:100%;margin-top:0%;">
    <div class="fixhead">
        <b class="CodeSt" id="headercaption">@Model.Header</b>
        <span class="tools pull-right">
            <a href="~/DashBoard/ControlPanel" class="btn btn-danger" style="color:white;font-weight:bolder;font-size:13px;padding:3px 10px;" id="Cancel2">X</a>
        </span>
        <button class="fa fa-heart pull-right" type="submit" onclick="AddToFavorite('@Model.ViewDataId','@Model.OptionCode')" title="Add/Remove from My Favorites" id="MyFavorites" style="color: rgb(145,142,142); background-color: transparent; border: none; font-size: 20px; height: 27px; margin-right: 5px;margin-top:5px;" name="MyFavorites"></button>
    </div>
</header>
<section class="panel">
    <div class="panel-body" style="padding-left:0px;">
        <form class="form-horizontal" id="MessageRulesFrm" role="form" style="margin-top:1%;margin-left:0px">
            <div id="ErrorMessage" name="ErrorMessage" class="alert alert-danger" style="display: none"></div>
            <br />
            <div class="panel-body" style="min-height:375px;max-height:375px;padding-top:0px;">
                <div class="col-sm-4" style="border-right:solid;overflow:scroll;">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" style="height:28px;font-weight:bolder;" id="myInput" placeholder="Search User">
                        </div>
                    </div>
                    <b class="CodeSt" style="font-size:15px;font-weight:bolder;">
                        Users List:
                    </b>
                    <div id="TransactionTypesdiv" style="min-height:400px;overflow:scroll">
                        @Html.Partial("PartialTypeView")
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="form-group">

                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            <b class="CodeSt" style="font-size:15px;font-weight:bolder;">
                                User Name:
                            </b>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.TextBoxFor(x => x.SelectedUserName, new { @id = "SelectedUserName", @Name = "SelectedUserName", @style = "font-size:14px;font-weight:bolder;", @class = "form-control", @disabled = "disabled" })
                        </div>
                        <div class="col-sm-3">
                            @*<button class="btn btn-warning" style="color:black;font-size:13px;padding:3px 12px;" id="btnEditGrid">Edit Grid</button>*@
                            @*<button class="btn btn-warning" style="color:black;font-size:13px;padding:3px 12px;" id="btnSaveGrid">Save Grid</button>*@
                        </div>
                        <div class="col-sm-3" style="float: right;">
                            <input type="text" class="form-control" style="height:28px;font-weight:bolder;" id="myInput1" placeholder="Search Dashboard Name">
                        </div>
                    </div>
                    <div id="MessageRulesdiv" style="">
                        @Html.Partial("TransactionMessageRulesPartial")
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<footer class="footer-section" id="fixedbottom" style="height:33px;position:fixed;background-color:#4B4A4A;padding:3px;color:white;">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4" style="text-align:center;margin-top:4px;color:white;font-family:Tahoma;">
            ALT AIR-3.0, Shruham Software
        </div>
        <div class="col-sm-4" style="padding-right:15px;">
            <div class="pull-right">
                <button class="btn btn-success" style="font-size:13px;padding:3px 12px;" id="Submit">Save</button>
                <a href="~/DashBoard/ControlPanel" class="btn btn-danger" style="font-size: 13px;padding:3px 12px;" id="Cancel">Cancel</a>
            </div>
        </div>
    </div>
</footer>

