<script>
    $(document).ready(function () {
        $(".MultiPrintClass").click(function () {
            debugger;
            var tds = $(this).closest("tr").find("td");
            var Format = tds.eq(2).text();
            tds.find('input[type="checkbox"]').prop('checked', true);
            var StoreProcedure = tds.eq(3).text();
            window.open("/Logistics/LC/PrintSingleDocumentCrystal?StoreProcedure=" + StoreProcedure + '&Format=' + Format + '&Document=' + $('#Document').val() + '&Branch=' + $('#hdnBranch').val(), "_blank");
            if (PrintLR != "OnlyPrint") {
                if ('@Model.Mode' == "Add") {
                    window.location.href = "/Logistics/LC/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType&Mode=Add";
                } else {
                    window.location.href = "/Logistics/MasterGridd/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                }
            }
        });
        $('#btnMultiPrint').click(function (event) {
            event.preventDefault();
            var myFormatArray = []
            $('#printgrid tr:not(:first)').each(function () {
                var tds = $(this).find('td');
                if (tds.find('input[type="checkbox"]').is(':checked')) {
                    Format = tds.eq(2).text();
                    myFormatArray.push(Format);
                }
            })
            window.open("/Logistics/LC/SendMultiReport?Format=" + myFormatArray.toString() + "&Type=" + $('#Type').val() + "&Document=" + $('#Document').val() + '&Branch=' + $('#hdnBranch').val(), "_blank");
            if (PrintLR !="OnlyPrint") {
                if ('@Model.Mode' == "Add") {
                    window.location.href = "/Logistics/LC/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType&Mode=Add";
                } else {
                    window.location.href = "/Logistics/MasterGridd/Index?ViewDataId=@Model.ViewDataId&Module=@Model.Module&TableName=@Model.TableName&OptionType=@Model.OptionType&OptionCode=@Model.OptionCode&Header=@Model.Header&Controller2=@Model.Controller2&MainType=@Model.MainType";
                }
            }
        });


    });
</script>
<div class="modal-body">
    <div class="modal-content">
