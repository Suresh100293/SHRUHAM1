
@model ALT_ERP3.Areas.Logistics.Models.StockReportVM

<style>
    .ModalLabel {
        font-weight: bold !important;
        color: black !important;
        padding: 3px !important;
    }

    .td1 {
        width: 500px !important;
    }

    .td2 {
        width: 500px !important;
    }

    .td3 {
        width: 500px !important;
    }
</style>
<script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/jquery.constrain.js")" type="text/javascript"></script>
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Content/bootstrap-multiselect.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;

        $(".ReportName").val("");
        if ('@Model.ReportTypeL'!="" && '@Model.ReportTypeL'!=null) {
            $(".ReportName").val('@Model.ReportTypeL');
        }

         $("#txtReportName").val("");
        if ('@Model.ReportName' != "") {
            $("#txtReportName").val('@Model.ReportName');
        }


        $('#Fromdate').val('@Model.FromDate');
        $('#ToDate').val('@Model.ToDate');

        $("#FormatCode").val('@Model.ViewDataId');

        $("#Vehicle").val("");
        if ('@Model.Vehicle' != "") {
            $.each('@Model.Vehicle'.split(','), function (idx, val) {
                $(".VehicleL option[value='" + val + "']").attr("selected", true);
            });
            $('#Vehicle').val('@Model.Vehicle');
        }

        $('#Branch').val('');
        if ('@Model.Branch' != "") {
            $.each('@Model.Branch'.split(','), function (idx, val) {
                $(".BranchL option[value='" + val + "']").attr("selected", true);
            });
            $('#Branch').val('@Model.Branch');
        }
        $('#StockBranch').val('');
        if ('@Model.StockBranch' != "") {
            $.each('@Model.StockBranch'.split(','), function (idx, val) {
                $(".StockBranchL option[value='" + val + "']").attr("selected", true);
            });
            $('#StockBranch').val('@Model.StockBranch');
        }
        $('#StockArea').val('');
        if ('@Model.StockArea' != "") {
            $.each('@Model.StockArea'.split(','), function (idx, val) {
                $(".StockAreaL option[value='" + val + "']").attr("selected", true);
            });
            $('#StockArea').val('@Model.StockArea');
        }


        $('#StockType').val('');
        if ('@Model.StockType' != "") {
            $.each('@Model.StockType'.split(','), function (idx, val) {
                $(".StockTypeL option[value='" + val + "']").attr("selected", true);
            });
            $('#StockType').val('@Model.StockType');
        }


        $(".ReportTypeL").change(function () {
            debugger;
            $("#FormatCode").val(this.value);
            $("#Ledger").html($(".ReportTypeL option:selected").text());
        });

        $(".BranchL").change(function () {
            debugger;
            $('#Branch').val('');
            var selected = "";
            $(".BranchL :selected").each(function () {
                selected += ("" + $(this).val() + ",");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#Branch').val(selected);
            return false;
        });
        $(".StockBranchL").change(function () {
            debugger;
            $('#StockBranch').val('');
            var selected = "";
            $(".StockBranchL :selected").each(function () {
                selected += ("" + $(this).val() + ",");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#StockBranch').val(selected);
            return false;
        });
        $(".StockAreaL").change(function () {
            debugger;
            $('#StockArea').val('');
            var selected = "";
            $(".StockAreaL :selected").each(function () {
                selected += ("" + $(this).val() + ",");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#StockArea').val(selected);
            return false;
        });

        $(".VehicleL").change(function () {
            $('#Vehicle').val('');
            var selected = "";
            $(".VehicleL :selected").each(function () {
                selected += ("" + $(this).val() + ",");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#Vehicle').val(selected);
            return false;
        });
        $(".StockTypeL").change(function () {
            $('#StockType').val('');
            var selected = "";
            $(".StockTypeL :selected").each(function () {
                selected += ("'" + $(this).val() + "',");
            });
            selected = selected.toString().substring(0, selected.length - 1);
            $('#StockType').val(selected);
            return false;
        });

        $('#SubmitSaveReport').click(function (event) {
            event.preventDefault();
            $('#SaveReportName').modal('show');
        });

        $('#btnopnFormat').click(function(event){
            event.preventDefault();
            var ModelData = {};
            ModelData["ViewDataId"] = $("#FormatCode").val();
            var DTO = { Model: ModelData };
            var url = '@Url.Action("GetReportFormat")';
            $.ajax({
                type: "POST",
                dataType: "json",
                data: JSON.stringify(DTO),
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $("#ErrorMessage").hide();
                    $('.spinner').hide();
                    $('#updTfatsearch').modal('show');
                    $('#updTfatsearchDiv').html(data.Html);
                },
                error: function () {
                    alert("Error occured while processing your request.");
                }
            });
        });

        $('.BranchL,.StockTypeL,.VehicleL,.StockBranchL,.StockAreaL').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            enableCaseInsensitiveFiltering: true,
            filterPlaceholder: 'Search for something...',
            buttonWidth: '235',
            numberDisplayed: 1,
            nonSelectedText: 'Select Item',
        })
    });
</script>
<table class="table table-striped table-bordered">
    <thead>
    </thead>
    <tbody>
        <tr>
            <td class="td1">
                <label class=" ModalLabel  control-label" style="width:auto;">Book Branch :</label>
                @Html.ListBoxFor(x => x.BranchL, Model.BranchList, new { @class = "BranchL", @id = "BranchL" })
            </td>
            <td class="td2">
                <label class=" ModalLabel  control-label" style="width:auto;">Stock Branch :</label>
                @Html.ListBoxFor(x => x.StockBranchL, Model.StockBranchList, new { @class = "StockBranchL", @id = "StockBranchL" })
            </td>
            <td class="td3">
                <label class=" ModalLabel  control-label" style="width:auto;">Stock Type :</label>
                @Html.ListBoxFor(x => x.StockTypeL, Model.StockTypes, new { @class = "StockTypeL", @id = "StockTypeL" })
            </td>
        </tr>
        <tr>
            <td class="td1">
                <label class=" ModalLabel  control-label" style="width:auto;">Vehicle :</label>
                @Html.ListBoxFor(x => x.VehicleL, Model.VehicleList, new { @class = "VehicleL", @id = "VehicleL" })
            </td>
            <td class="td2">
                <label class=" ModalLabel  control-label" style="width:auto;">Stock Area :</label>
                @Html.ListBoxFor(x => x.StockAreaL, Model.StockAreaList, new { @class = "StockAreaL", @id = "StockAreaL" })
            </td>
        </tr>
    </tbody>
</table>


