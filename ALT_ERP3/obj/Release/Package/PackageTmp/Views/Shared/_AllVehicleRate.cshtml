@using System.Data
@model  DataTable
@using Common


<style>
    select {
        text-align-last: center;
        text-align: center;
        font-weight: bold;
    }
</style>
<script type="text/javascript">

    function GetData() {
        
        if ('@ViewBag.typeofRate'!="0") {
            var ModelData = {};
                ModelData["ViewDataId"] = '@ViewBag.ViewDataId';
                ModelData["TableName"] = '@ViewBag.Table';
                ModelData["AcType"] = '@ViewBag.MainType';
                ModelData["MainType"] = '@ViewBag.MainType';
                ModelData["Value2"] = '@ViewBag.Value2';
                //ModelData["IsFormatSelected"] = $('#isdefault').is(':checked');


                var DTO = { Model: ModelData };
                var url = '@Url.Action("RateTypeWise")';
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: JSON.stringify(DTO),
                    cache: false,
                    url: url,
                    contentType: "application/json;charset=utf-8",
                    beforeSend: function () {
                        $('.spinner').show();
                    },
                    success: function (data) {
                        
                        var LoadDownLoadFiles = $("#AllVehicleRate");
                        $("#ErrorMessage").hide();
                        $('.spinner').hide();
                        $('#AllVehicleRatem').modal('show');
                        //$('#AllVehicleRate').html('');
                        //$('#AllVehicleRate').html(data.Html);
                        LoadDownLoadFiles.html('');
                        LoadDownLoadFiles.html(data.Html);
                    },
                    error: function () {
                        alert("Error occured while processing your request.");
                    }
                });
        } else {
            alert("Please Select Type..!");
        }
    }

</script>
<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:5px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><b>@ViewBag.ViewDataId</b></h4>
        </div>
        <div class="modal-body">
            <div class="grid" id="FormatTable" style="max-height:350px;min-height:350px; width:100%; overflow: scroll;">
                @*<div id="formatgrid1" class="zui-table" style="width:100%;padding: 2% 0px 6% 24%;">
                    <div class="col-md-6">
                        @Html.DropDownList("Ratetype", new SelectList(ViewBag.RateType, "Value", "Text"), new { @id = "Ratetype", @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-success" style="font-size:14px;padding:3px 12px;" tooltip="Add" onclick=GetData();>Submit</button>
                    </div>
                </div>*@
                <table id="formatgrid" class="zui-table" style="width:100%;">
                    <thead>
                        <tr>
                            @foreach (var item in Model.Columns)
                            {
                                <th>@item.ToString().ToUpper()</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr style="font-family:Tahoma;font-size:9pt;border: solid 1px lightgray;">
                                @for (int i = 0; i < row.ItemArray.Length; i++)
                                {
                                    <td style="width:5%;text-align: center;">@row.ItemArray[i]</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;">
            <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
        </div>
    </div>
</div>

