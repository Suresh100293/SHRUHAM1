<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc;padding-top:7px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 style="padding-top:3px;" class="modal-title"><b>Followup</b></h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Type:</label>
                    <div class="col-sm-4">
                        <select id="followuptype" class="form-control" style="font-weight:bolder;">
                            <option value="PC" selected>Phone-Call</option>
                            <option value="EM">Email</option>
                            <option value="SM">SMS</option>
                            <option value="LT">Letter</option>
                            <option value="CL">Circular</option>
                            <option value="ME">Meeting</option>
                            <option value="FX">Fax</option>
                            <option value="VC">Video-Conf</option>
                            <option value="WW">Website</option>
                            <option value="VR">Verbal</option>
                            <option value="OT">Others</option>
                        </select>
                    </div>
                    <label class="col-sm-2 control-label">In/Out:</label>
                    <div class="col-sm-2">
                        <select id="inout" class="form-control" style="font-weight:bolder;">
                            <option value="IN">Inbound</option>
                            <option value="OUT" selected>Outbound</option>
                        </select>
                    </div>
                </div>
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Date:</label>
                    <div class="col-sm-4">
                        <div class="input-group input-large" data-date-format="dd/mm/yyyy">
                            <input type="text" class="form-control dpd1" name="from" id="Fromdate" data-date-format="dd/mm/yyyy" style="font-weight:bolder;text-align:center;font-size:9pt;">
                        </div>
                    </div>
                    <label class="col-sm-1 control-label">Time:</label>
                </div>
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Contact Person:</label>
                    <div class="col-sm-8">
                        <input name="contactperson" class="form-control" cols="160" id="contactperson">
                    </div>
                </div>
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Communication:</label>
                    <div class="col-sm-9">
                        <textarea name="communication" class="form-control" cols="160" id="communication" rows="6"></textarea>
                    </div>
                </div>
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Next Followup:</label>
                    <div class="col-sm-4">
                        <div class="input-group input-large" data-date-format="dd/mm/yyyy">
                            <input type="text" class="form-control dpd1" name="to" id="ToDate" data-date-format="dd/mm/yyyy" style="font-weight:bolder;text-align:center;font-size:9pt;">
                        </div>
                    </div>
                    <label class="col-sm-1 control-label">Time:</label>
                </div>
                <div class="form-group" style="margin-top:5px;">
                    <label class="col-sm-2 control-label">Remark:</label>
                    <div class="col-sm-9">
                        <textarea name="remark" class="form-control" cols="160" id="remark" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc;height:42px;padding-bottom:5px;padding-top:5px;border-radius: 0px 0px 5px 5px;padding-right: 5px;padding-left: 5px;">
            <label class="col-sm-2 control-label" style="text-align:left;color:black;padding-top:5px;"><i class="fa fa-tasks"></i>&nbsp;&nbsp;Create Task:</label>
            <div class="col-sm-1" style="width:30px;">
                <input title='Set this View as Default' type="checkbox" id="createtask" name="createtask" style="margin-top:6px;width:17px;height:17px;" />
            </div>
            <button type="button" class="btn btn-success" id="savefollowup"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
            <button data-dismiss="modal" class="btn btn-danger" type="button"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Close</button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#savefollowup').click(function (event) {
            var mstr = 'mparty=' + $("#hiddenvalues").val() + '&mparentkey=' + $("#hdparentkey").val() + '&mfollowuptype=' + $("#followuptype").val() + '&minout=' + $("#inout").val() + '&mcalldate=' + $("#Fromdate").val() + '&mcontactperson=' + $("#contactperson").val() + '&mcommunication=' + $("#communication").val() + '&mnextdate=' + $("#ToDate").val() + '&mremark=' + $("#remark").val() + '&mcreatetask=' + $("#createtask").is(':checked');
            var url = '@Url.Action("SaveFollowup")?' + mstr;
            $.ajax({
                type: "POST",
                dataType: "json",
                cache: false,
                url: url,
                contentType: "application/json;charset=utf-8",
                beforeSend: function () {
                    $('.spinner').show();
                },
                success: function (data) {
                    $('.spinner').hide();
                    alert(data.Message);
                    $('#contactperson').val("");
                    $('#communication').val("");
                    $('#remark').val("");
                    $('#followups').modal('hide');
                }
            });
        });
    })
</script>
<input type="hidden" id="hdparentkey" />