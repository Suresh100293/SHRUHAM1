<script>
    $(document).ready(function () {
        $('#CloseStoreStkDet').click(function (event) {
            event.preventDefault();
            $('#StoreWiseStockmodel').modal('hide');
        });
    });
</script>

<div class="modal-body">
    <div class="modal-content">
        <div class="modal-header" style="background-color:#cccccc">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
            <h4 class="modal-title">Stock</h4>
        </div>
        <div class="modal-body">
            <div class="tab">
                <button class="tablinks2" onclick="openStock(event, 'divstorewsstk')" id="StoreStk">Store Wise</button>
                <button class="tablinks2" onclick="openStock(event, 'divbranchwsstk')">Branch Wise</button>
                <button class="tablinks2" onclick="openStock(event, 'divlocationwsstk')">Location Wise</button>
            </div>
            <div id="divstorewsstk" class="tabstkcontent" style="max-height: 300px; height:231px; width: auto; overflow: auto;">
                <table id="storewsstk" class="zui-tableww" style="width:100%;">
                    <thead>
                        <tr role="row">
                            <th>Store</th>
                            <th>Name</th>
                            <th>Curr Stock</th>
                            <th>PO Issued</th>
                            <th>SO Booked</th>
                            <th>Reserved</th>
                            <th>Net Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.StoreWiseStock != null)
                        {
                            foreach (var a in ViewBag.StoreWiseStock)
                            {
                                <tr>
                                    <td>@a.Store</td>
                                    <td>@a.StoreName</td>
                                    <td>@a.Stock</td>
                                    <td>@a.Pending</td>
                                    <td>@a.Pending2</td>
                                    <td>@a.TotalQty</td>
                                    <td>@a.Balance</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div id="divbranchwsstk" class="tabstkcontent" style="max-height: 300px; height:231px; width: auto; overflow: auto;">
                <table id="branchwsstk" class="zui-tableww" style="width:100%;">
                    <thead>
                        <tr role="row">
                            <th>Branch</th>
                            <th>Name</th>
                            <th>Curr Stock</th>
                            <th>PO Issued</th>
                            <th>SO Booked</th>
                            <th>Reserved</th>
                            <th>Net Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.BranchWiseStock != null)
                        {
                            foreach (var a in ViewBag.BranchWiseStock)
                            {
                                <tr>
                                    <td>@a.Branch</td>
                                    <td>@a.Header</td>
                                    <td>@a.Stock</td>
                                    <td>@a.Pending</td>
                                    <td>@a.Pending2</td>
                                    <td>@a.TotalQty</td>
                                    <td>@a.Balance</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div id="divlocationwsstk" class="tabstkcontent" style="max-height: 300px; height:231px; width: auto; overflow: auto;">
                <table id="locationwsstk" class="zui-tableww" style="width:100%;">
                    <thead>
                        <tr role="row">
                            <th>Location</th>
                            <th>Name</th>
                            <th>Curr Stock</th>
                            <th>PO Issued</th>
                            <th>SO Booked</th>
                            <th>Reserved</th>
                            <th>Net Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.LocationWiseStock != null)
                        {
                            foreach (var a in ViewBag.LocationWiseStock)
                            {
                                <tr>
                                    <td>@a.LocationCode</td>
                                    <td>@a.Header</td>
                                    <td>@a.Stock</td>
                                    <td>@a.Pending</td>
                                    <td>@a.Pending2</td>
                                    <td>@a.TotalQty</td>
                                    <td>@a.Balance</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#cccccc">
            <button type="button" class="btn btn-success" id="CloseStoreStkDet">Close</button>
        </div>
    </div>
</div>
<script>
    function openStock(evt, cityName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabstkcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks2");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(cityName).style.display = "block";
        evt.currentTarget.className += " active";
    }
    document.getElementById("StoreStk").click();
</script>