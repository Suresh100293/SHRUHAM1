@model ALT_ERP3.GridOption

<style>
    .addontxtfvalue { height: 28px; border: 1px solid #BBBABA; color: black; background-color:lightgray; padding: 4px 4px 4px 6px; }
</style>
<div class="grid" id="PickTable" style="max-height:350px;min-height:350px;width:700px; overflow: scroll;">
    <table id="addongrid" style="border:hidden;width:675px;">
        <thead>
        </thead>
        <tbody>
            @if (Model.AddOnParaList != null)
            {
                foreach (var item in @Model.AddOnParaList.ToList())
                {
                    <tr id="datacharge" style="font-family:Tahoma;font-size:10pt;color:black;">
                        @if (item.Contains("`") == true)
                        {
                            var itemarr = item.Split('^');
                            <td style="width:25%;color:black;">@itemarr[0]</td>
                            <td style="width:50%;">
                                <select class="addontxtfvalue" style="width:100%">
                                    <option value=""></option>
                                    @foreach (var item2 in itemarr[1].Split('`').ToList())
                                    {
                                        <option value="@item2">@item2</option>
                                    }
                                </select>
                            </td>
                        }
                        else
                        {
                            var itemarr = item.Split('^');
                            <td style="width:25%;color:black;">@itemarr[0]</td>
                            <td style="width:50%;"><input type="text" class="addontxtfvalue" style="width:100%;" /></td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</div>