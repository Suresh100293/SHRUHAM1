    function LoadBranch() {
        $("#BranchCode").empty();
        //event.preventDefault();
        var url = '@Url.Action("GetBranchList")?UserId=' + $('#hdnUserId').val();
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#BranchCode").append("<option value='" + item.Value + "'>" + "[" + item.Value + "] " + item.Text + "</option>");
                });
				 $("#BranchCode").val('@Model.BranchCode').attr("selected", "selected");
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }

    function LoadPeriod() {
        $("#perd").empty();
        //event.preventDefault();
        var url = '@Url.Action("GetPerdList")';
        $.ajax({
            type: "GET",
            dataType: "json",
            cache: false,
            url: url,
            contentType: "application/json;charset=utf-8",
            beforeSend: function () {
                $('.spinner').show();
            },
            success: function (result) {
                $.each(result, function (i, item) {
                    $("#perd").append("<option value='" + item.Value + "'>" + item.Text + "</option>");
                });
            },

            error: function () {
                $('.spinner').hide();
                alert("An error occurred while processing the request.");
            }
        });
    }
</script>