<script type="text/javascript">
    $(document).ready(function () {

        if ('@Model.SelectContent' != '')
        {
            if ('@Model.MenuName'=="T") {
                if ('@Model.ViewDataId' == 'MultiPartySelect') {
                    $("#EmailTo").val('@Model.SelectContent');
                }
                $("#Message").val('@Model.PurchType');
                $("#Subject").val('@Model.Grp');
            }
            else
            {
                if ('@Model.ViewDataId' == 'MultiPartySelect') {
                    $("#EmailTo").val('@Model.SelectContent');
                }
                if ('@Model.ViewDataId' == 'MultiSalesmanSelect') {
                    $("#Subject").val('@Model.SelectContent');
                }
            }
        }

        $("#btnMultiParty").click(function (event) {
            event.preventDefault();
            $('#hdnViewDataId').val('MultiPartySelect')
            $('#multipartymodel').modal('show');
            $('#list').jqGrid('clearGridData');
            $('#list').jqGrid("GridUnload");
            $('#list').trigger('reloadGrid');

            $(".divselected").empty();
            gridreload();

        });


        
    });
</script>

