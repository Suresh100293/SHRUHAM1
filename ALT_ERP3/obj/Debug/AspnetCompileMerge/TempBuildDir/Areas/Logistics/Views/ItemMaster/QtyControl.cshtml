
@model TFATERPWebApplication.Areas.Logistics.Models.ItemMasterVM
@using Common;

<script type="text/javascript">
    $(document).ready(function () {
        $('#StrStockDate').datepicker({
            format: 'dd-mm-yyyy',
            autoclose: true,
        });
    });
</script>

<div class="row">
    <br />
    <div class="col-lg-12">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-sm-8 control-label"><b>Quantity may Differ from the Linked Docs:</b></label>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Negative (-ve) Tolerance%:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.QtyToleMinus, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "QtyToleMinus", @Id = "QtyToleMinus" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Positive (+ve) Tolerance%:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.QtyTolePlus, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "QtyTolePlus", @Id = "QtyTolePlus" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Work Order Tolerance%:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.QtyToleWO, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "QtyToleWO", @Name = "QtyToleWO" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Stock Reservation Active?:</label>
                @Html.CheckBoxFor(x => x.StockReserve, new { @id = "StockReserve", @Name = "StockReserve", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Allow Over Reservation:</label>
                @Html.CheckBoxFor(x => x.OverReserve, new { @id = "OverReserve", @Name = "OverReserve", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Value Stock On Cost-Rate:</label>
                @Html.CheckBoxFor(x => x.CostValue, new { @id = "CostValue", @Name = "CostValue", @style = "width:16px;height:16px;" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-sm-5 control-label">Stock Availability Check (-ve Stock Watch):</label>
                @Html.CheckBoxFor(x => x.CheckStock, new { @id = "CheckStock", @Name = "CheckStock", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Physical Stock Taking Frequency:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.StockDays, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "StockDays", @Id = "StockDays", @Value = Model.StockDays })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Next Stock Taking Date:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.StrStockDate, new { @type = "text", @class = "form-control", @Name = "StrStockDate", @Id = "StrStockDate", @Value = Model.StockDate.ToString("dd-MM-yyyy") })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Negative (-ve) Tolerance%:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.PQtyToleMinus, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "PQtyToleMinus", @Id = "PQtyToleMinus" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Positive (+ve) Tolerance%:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.PQtyTolePlus, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "PQtyTolePlus", @Id = "PQtyTolePlus" })
                </div>
            </div>
        </div>
    </div>
</div>
