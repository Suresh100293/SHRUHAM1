@model TFATERPWebApplication.Areas.Logistics.Models.ItemMasterVM
@using Common;

<div class="row">
    <br />
    <div class="col-lg-12">
        <div class="col-md-5">
            <div class="form-group">
                <label class="col-sm-5 control-label">Stock Serial Applicable:</label>
                @Html.CheckBoxFor(x => x.StockSerial, new { @id = "StockSerial", @Name = "StockSerial", @value = Model.StockSerial, @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Attach Item Group Prefix to Stock Serial:</label>
                @Html.CheckBoxFor(x => x.SerialPrefix, new { @id = "SerialPrefix", @Name = "SerialPrefix", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Serial Based On 2nd Qty:</label>
                @Html.CheckBoxFor(x => x.SerialType, new { @id = "SerialType", @Name = "SerialType", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Auto Generate Serial for GRN:</label>
                @Html.CheckBoxFor(x => x.AutoSerialGRN, new { @id = "AutoSerialGRN", @Name = "AutoSerialGRN", @style = "width:16px;height:16px;" })
            </div>
        </div>
        <div class="col-md-7">
            <div class="form-group">
                <label class="col-sm-4 control-label">Stock Serial Compulsory:</label>
                @Html.CheckBoxFor(x => x.SerialReq, new { @id = "SerialReq", @Name = "SerialReq", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Don't Allow Duplicate Serial:</label>
                @Html.CheckBoxFor(x => x.SerialNoDupl, new { @id = "SerialNoDupl", @Name = "SerialNoDupl", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Auto Generate Serial for MFG:</label>
                @Html.CheckBoxFor(x => x.AutoSerialMFG, new { @id = "AutoSerialMFG", @Name = "AutoSerialMFG", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Serial Pattern (GRN):</label>
                <div class="col-sm-7 control-label" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.SerialPatternGRN, new { @class = "form-control", @Name = "SerialPatternGRN", @Id = "SerialPatternGRN" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Serial Pattern (MFG):</label>
                <div class="col-sm-7 control-label" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.SerialPatternMFG, new { @class = "form-control", @id = "SerialPatternMFG", @Name = "SerialPatternMFG" })
                </div>
            </div>
        </div>
    </div>
</div>
