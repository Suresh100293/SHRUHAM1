@model TFATERPWebApplication.Areas.Logistics.Models.ItemMasterVM
@using Common;

<div class="row">
    <br />
    <div class="col-lg-12">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-sm-3 control-label">Fixed Re-Order Level:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.ReOrdLevel, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "ReOrdLevel", @Id = "ReOrdLevel" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Based On Days:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.ReOrdDays, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "ReOrdDays", @Id = "ReOrdDays" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Cons.for No.Of Days:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.ReOrdDaysC, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "ReOrdDaysC", @Id = "ReOrdDaysC" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Higher of the Above:</label>
                <div class="col-sm-6">
                    @Html.CheckBoxFor(x => x.ReOrdHighLow, new { @Id = "ReOrdHighLow", @Name = "ReOrdHighLow", @style = "width:16px;height:16px;" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Re-Order Qty:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.ReOrdQty, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "ReOrdQty", @Id = "ReOrdQty" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Maximum Level Qty:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.MaxQty, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "MaxQty", @Name = "MaxQty" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Minimum Level Qty:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.MinQty, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "MinQty", @Name = "MinQty" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Economical Order Qty:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.EOQ, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "EOQ", @Name = "EOQ" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Minimum Delivery Qty:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.MinDlyQty, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "MinDlyQty", @Name = "MinDlyQty" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">MFG LeadTime:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.MfgLeadTime, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "MfgLeadTime", @Name = "MfgLeadTime" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Purchase LeadTime:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.PurchPer, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "PurchPer", @Name = "PurchPer" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-sm-6 control-label">Check Re-Order Level on Issues:</label>
                <div class="col-sm-1">
                    @Html.CheckBoxFor(x => x.CheckReOrderLevel, new { @id = "CheckReOrderLevel", @name = "CheckReOrderLevel", @value = Model.CheckReOrderLevel, @style = "width:16px;height:16px;" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Check Max-Quantity Level on Receipts:</label>
                <div class="col-sm-1">
                    @Html.CheckBoxFor(x => x.CheckMaxLevel, new { @id = "CheckMaxLevel", @name = "CheckMaxLevel", @value = Model.CheckMaxLevel, @style = "width:16px;height:16px;" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Check Min-Quantity Level on Issues:</label>
                <div class="col-sm-1">
                    @Html.CheckBoxFor(x => x.CheckMinLevel, new { @id = "CheckMinLevel", @name = "CheckMinLevel", @value = Model.CheckMinLevel, @style = "width:16px;height:16px;" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Delivery Interval:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.DelyTime, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "DelyTime", @Id = "DelyTime" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Procurement Time:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.ProcLeadTime, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "ProcLeadTime", @Id = "ProcLeadTime" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">GRN Processing Time:</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.GRNProcTime, new { @type = "number", @style = "text-align:right;", @class = "form-control", @Name = "GRNProcTime", @Id = "GRNProcTime" })
                </div>
            </div>
        </div>
    </div>
</div>
