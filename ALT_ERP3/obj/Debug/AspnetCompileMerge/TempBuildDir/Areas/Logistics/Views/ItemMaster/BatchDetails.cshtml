
@model TFATERPWebApplication.Areas.Logistics.Models.ItemMasterVM
@using Common;

<div class="row">
    <br />
    <div class="col-lg-12">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-sm-6 control-label">Batch/Reference Number Required:</label>
                @Html.CheckBoxFor(x => x.BatchReq, new { @id = "BatchReq", @Name = "BatchReq", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Batch Number is Compulsory:</label>
                @Html.CheckBoxFor(x => x.BatchForce, new { @id = "BatchForce", @Name = "BatchForce", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Dont Allow Duplicate Batch:</label>
                @Html.CheckBoxFor(x => x.BatchNoDupl, new { @id = "BatchNoDupl", @Name = "BatchNoDupl", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Auto Generate Batch Number:</label>
                @Html.CheckBoxFor(x => x.AutoBatch, new { @id = "AutoBatch", @Name = "AutoBatch", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Batch Size Quantity:</label>
                <div class="col-sm-3" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.BatchSizeQty, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "BatchSizeQty", @Name = "BatchSizeQty" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Batch Number Width:</label>
                <div class="col-sm-3 control-label" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.BatchWidth, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "BatchWidth", @Name = "BatchWidth" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Auto Generate Batch Number for GRN Also:</label>
                @Html.CheckBoxFor(x => x.AutoBatchGRN, new { @id = "AutoBatchGRN", @Name = "AutoBatchGRN", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Generate Pattern Based Auto Batch:</label>
                @Html.CheckBoxFor(x => x.BatchAutoGRN, new { @id = "BatchAutoGRN", @Name = "BatchAutoGRN", @style = "width:16px;height:16px;" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-sm-5 control-label">Manufacturing Date Applicable?:</label>
                @Html.CheckBoxFor(x => x.BatchMFG, new { @id = "BatchMFG", @Name = "BatchMFG", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Expiry Date Applicable?:</label>
                @Html.CheckBoxFor(x => x.BatchExp, new { @id = "BatchExp", @Name = "BatchExp", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Default Expiry Days:</label>
                <div class="col-sm-3 control-label" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.BatchDefExpDays, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "BatchDefExpDays", @Name = "BatchDefExpDays", @Value = Model.BatchDefExpDays })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Check Expiry Date On Issue?:</label>
                @Html.CheckBoxFor(x => x.BatchCheckExp, new { @id = "BatchCheckExp", @Name = "BatchCheckExp", @style = "width:16px;height:16px;" })
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Close To Expiry Days:</label>
                <div class="col-sm-3 control-label" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.BatchExpDays, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "BatchExpDays", @Name = "BatchExpDays" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Auto Issue Batch Based On:</label>
                <div class="col-sm-3 control-label" style="padding-left:0px;">
                    @Html.TextBoxFor(x => x.AutoBatchIssue, new { @type = "number", @style = "text-align:right;", @class = "form-control", @id = "AutoBatchIssue", @Name = "AutoBatchIssue" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">Don't Show MRP and Rates:</label>
                @Html.CheckBoxFor(x => x.BatchRates, new { @id = "BatchRates", @Name = "BatchRates", @style = "width:16px;height:16px;" })
            </div>
        </div>
    </div>
</div>